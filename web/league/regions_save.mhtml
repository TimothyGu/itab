<%args>
	$league
</%args>
<%init>


	foreach my $region ($league->regions) { 

		$region->code($ARGS{"code_".$region->id});
		$region->quota($ARGS{"quota_".$region->id});
		$region->update;

	}

	my $msg = "Diocese data saved" if $league->diocese_based;
	$msg = "Region data saved" if $league->region_based;

	$m->redirect("/league/regions.mhtml?league_id=".$league->id."&msg=$msg");

</%init>
