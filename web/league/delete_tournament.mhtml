<%args> 
	$account
	$circuit
	$tourn_id
	$certain => undef
</%args> 
<%init>

	my $tourn = Tab::Tournament->retrieve($tourn_id);

	my $err = "Tournament ". $tourn->name." has been completely deleted.";

	system "/bin/mkdir -p $Tab::file_root/files/".$tourn->circuit->id."/deleted/tournaments";

	system "/bin/mv -f $Tab::file_root/files/".$tourn->circuit->id."/tournaments/".$tourn->id." $Tab::file_root/files/".$tourn->circuit->id."/deleted/tournaments/";

	$tourn->delete;

	$m->redirect("$Tab::url_prefix/circuit/approvals.mhtml?err=$err") if $account->site_admin;

	$m->redirect("$Tab::url_prefix/circuit/approvals.mhtml?circuit_id=".$tourn->circuit->id."&err=$err");

</%init>
