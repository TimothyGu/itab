<%args> 
	$account
	$league
	$tourn_id
	$certain => undef
</%args> 
<%init>

	my $tourn = Tab::Tournament->retrieve($tourn_id);

	my $err = "Tournament ". $tourn->name." has been completely deleted.";

	system "/bin/mkdir -p $Tab::file_root/files/".$tourn->league->id."/deleted/tournaments";

	system "/bin/mv -f $Tab::file_root/files/".$tourn->league->id."/tournaments/".$tourn->id." $Tab::file_root/files/".$tourn->league->id."/deleted/tournaments/";

	$tourn->delete;

	$m->redirect("$Tab::url_prefix/league/approvals.mhtml?err=$err") if $account->site_admin;

	$m->redirect("$Tab::url_prefix/league/approvals.mhtml?league_id=".$tourn->league->id."&err=$err");

</%init>
