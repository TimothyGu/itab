<%args>
	$chapter_id
	$circuit_id
	$account
	$session
</%args>
<%init>

	my @ljs = Tab::ChapterCircuit->search( chapter => $chapter_id, circuit => $circuit_id );

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my $circuit = Tab::Circuit->retrieve($circuit_id);

	foreach my $lj (@ljs) { 
		$lj->delete();
	}

	my $msg = "You have removed ".$chapter->name." from the ".$circuit->name;

	$m->redirect("/circuit/chapter_edit.mhtml?chapter_id=".$chapter_id."&msg=$msg") if $account->site_admin;
	$m->redirect("/circuit/chapter_search.mhtml?search_field=all&msg=$msg");

</%init>
