<%args>
	$league
	$account
	$session
</%args>

%	my $switch;

	<h2>
		<% $league->name %>
	</h2> 

		<table cellpadding="5" width="100%" cellspacing="1">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					<form action="league_save.mhtml" method="post"> 
					<input type="hidden" name="league_id" value="<% $league->id %>">
					Full Name:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="30" name="name" value="<% $league->name %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Website URL:
				</td>

				<td align="right" colspan="2">
					<input type="text" size="30" name="url" value="<%  $league->url %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Short Name:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="10" name="short_name" value="<%  $league->short_name %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					State/Locale:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="10" maxlength="2" name="state" value="<%  $league->state %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					Active:
				</td>
				
				<td align="right" colspan="2">
					<input type="radio" name="active" value="1" <% ($league->active) ? "checked" : "" %>> Yes
					<input type="radio" name="active" value="0" <% ($league->active) ? "" : "checked" %>> No
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td>
					Timezone:
				</td>

				<td align="right" colspan="2">

					<select name="timezone">

					<option value="">----Select One------</option>

					<option value="America/New_York"
						<% ($league->timezone eq "America/New_York") ?   "selected" : ""%>>
						Eastern
					</option>

					<option value="America/Indianapolis"
						<%  ($league->timezone eq "America/Indianapolis") ? "selected" : "" %>>
						Indiana
					</option>
					
					<option value="America/Chicago"
						<%  ($league->timezone eq "America/Chicago") ?   "selected" : "" %>>
						Central
					</option>
					
					<option value="America/Denver"
						<%  ($league->timezone eq "America/Denver") ?   "selected" : "" %>>
						Mountain
					</option>
					
					<option value="America/Phoenix"
						<%  ($league->timezone eq "America/Phoenix") ?   "selected" : "" %>>
						Arizona
					</option>
					
					<option value="America/Los_Angeles"
						<%  ($league->timezone eq "America/Los_Angeles") ?   "selected" : "" %>>
						Pacific
					</option>
					
				</select>
			</td>
		</tr>

		<tr class="liblrow">
			<td colspan="3" class="right">
				<input type="submit" value="  Save League Changes   ">
				</form>
			</td>
		</tr>

	</table>

%	if ($league->last_change) { 

		<p class="footnote">
			Last change by <% $league->last_change->first." ".$league->last_change->last %>
			on <% Tab::nicedt($league->timestamp) %>.
		</p>
%	}

% if ($league) { 

	<h4>Accounts with access to the <% $league->short_name %></h4>

		<table cellpadding="5" width="100%" cellspacing="1">

% 			foreach my $admin (sort {$a->last cmp $b->last} $league->admins) { 

				<tr <% ($switch++ % 2) ? "class=\"evenrow\"" : "class=\"oddrow\"" %>>

					<td>
						<% $admin->first." ".$admin->last %>
					</td>

					<td>
						<% $admin->email %>
					</td>

					<td class="center">
						<a class="whiteblock" href="admin_rm.mhtml?league_id=<% $league->id %>&admin_id=<% $admin->id %>">
						Delete
						</a>
					</td>

				</tr>

% 			} # end of foreach my admin

			<tr class="liblrow">

				<td>
					Add:
				</td>

				<td>
					<form action="admin_add.mhtml" method="post">
					<input type="hidden" name="league_id" value="<% $league->id %>">
					<input type="text" size="25" name="email" value="Email address" onfocus='value=""'>
				</td>

				<td class="right">
					<input class="blue" type="submit" value="Add">
					</form>
				</td>
	
			</tr>

		</table>
% 	}

