<%args>
	$account
	$league
	$name
	$short_name
	$state => undef
	$url => undef
	$active => 1
	$timezone 
</%args>
<%init>

	my $err;

	#Save new information if it is a league that exists

	$league->name($name);
	$league->short_name($short_name);
	$league->state($state);
	$league->url($url);
	$league->active($active);
	$league->timezone($timezone);

	$league->last_change($account->id);

	$league->update;

	$err = "League information has been updated";

	$m->redirect("$Tab::url_prefix/league/league_view.mhtml?league_id=".$league->id."&err=$err");

</%init>


