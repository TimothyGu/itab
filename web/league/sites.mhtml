<%args>
	$circuit
</%args>

%  	my @sites = sort {$a->name cmp $b->name} $circuit->sites;

%	my $switch;


	<table width="100%">

		<tr>
			<td width="100%">
				<h2><% $circuit->short_name %> Tournament Host Sites</h2>
			</td>

			<td>
				<form action="site_edit.mhtml" method="post">
				<input class="blue" type="submit" value="Add New Site">
				</form>
			</td>

		</tr>

	</table>

	<table cellpadding="5" cellspacing="1" border="0" width="100%">

		<tr>
			<th></th>
			<th>Name</th>
			<th>Host</th>
			<th></th>
		</tr>

%		foreach my $site (@sites) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					<% $site->id %>
				</td>
	
				<td>
					<% $site->name %>
				</td>
	
				<td>
					<% ($site->host) ? $site->host->first." ".$site->host->last : "<i>No host listed" %>
				</td>

				<td class="Center">
					<a class="whiteblock" href="site_edit.mhtml?site_id=<% $site->id %>">
						Edit Site
					</a>
				</td>
	
			</tr>

% 		}

	</table>
