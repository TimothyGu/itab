<%args>
	$league
	$link_id => undef
</%args>
<%init>

	my $link = Tab::Link->retrieve($link_id);

	if ($link->active == 1) { 
		$link->active(0);
	} else { 
		$link->active(1);
	}

	$link->update;

	my $err = "Link ".$link->name." has been updated " if $link_id;

	$m->redirect("website.mhtml?err=$err");

</%init>
