<%args>
	$account
	$circuit_id
	$email => undef
</%args>
<%init>

	my $err;

	my $circuit = Tab::Circuit->retrieve($circuit_id);

	 my @circuit_access = Tab::CircuitAdmin->search( circuit => $circuit_id, account => $account->id) if $circuit_id;

    unless ($account->site_admin || @circuit_access) {
        $err = "Only site or circuit admins may make changes to circuits";
        $m->redirect("$Tab::url_prefix/circuit/circuit_view.mhtml?err=$err&circuit_id=$circuit_id");
    }

	my @accounts = Tab::Account->search( email => $email);

	unless (@accounts) { 
		$err = "No accounts with the email address $email were found";
        $m->redirect("$Tab::url_prefix/circuit/circuit_view.mhtml?err=$err&circuit_id=$circuit_id");
	}

	my $admin = $accounts[0];

	my @existing = Tab::CircuitAdmin->search( account => $admin->id, circuit => $circuit_id );

	foreach (@existing) { $_->delete; }

	my $circuit_admin = Tab::CircuitAdmin->create({
		circuit => $circuit_id,
		account => $admin->id
	});

	$err = $admin->first." ".$admin->last." is now an admin for ".$circuit->short_name;
	$m->redirect("$Tab::url_prefix/circuit/circuit_view.mhtml?err=$err&circuit_id=".$circuit_id);

</%init>
