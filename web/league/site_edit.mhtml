<%args>
	$league
	$err => undef
	$site_id => undef
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id) if $site_id;		
	my $switch;

</%init>

	<form action="site_save.mhtml" method="post"> 

% 	unless ($site) {

		<h3>Add a tournament site to your league:</h3>

%	} else { 

		<h3>Edit site <% $site->name %></h3>
		<input type="hidden" name="site_id" value="<% ($site) ? $site->id : "" %>">

%	}

	<center>

	<table cellpadding="3" width="100%"> 

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Name:</td>
			<td><input type="text" name="name" value="<% ($site) ? $site->name : "" %>" size="40"></td>
		</tr>

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Ballot Dropoff Location:</td>
			<td><input type="text" name="dropoff" value="<% ($site) ? $site->dropoff : "" %>" size="40"></td>
		</tr>

% 		if ($site && $site->host) { 
			<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>Host:</td>
				<td><% $site->host->first." ".$site->host->last  %></td>
			</tr>
% 		}

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td><% ($site) ? ($site->host) ?  "Change Host to: (email)" : "Host email:" : "Host email:"  %></td>
			<td><input type="text" name="host_email" size="40"></td>
		</tr>

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td valign="top">Directions:</td>
			<td>
				<textarea name="directions" rows="20" cols="40"><% ($site) ? $site->directions : "" %></textarea>
			</td>

		</tr>

		<tr class="liblrow">
			<td class="right" colspan="2">
				<input class="blue" type="submit" value="<%($site_id) ? 'Save Changes' : 'Create Site' %>">
				</form>
			</td>
		</tr>

	</table>
