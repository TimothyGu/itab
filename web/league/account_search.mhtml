<%args>
	$league
	$account	
	$search_field
	$search_value => undef
	$err => undef
</%args>
<%init>

	$search_field = lcfirst($search_field);

	my @chapters;

	if ($search_field eq "all") { 
		@accounts = $league->accounts;
	}

	if ($search_field eq "name") { 
		$search_value = $search_value."%";
		@accounts = Tab::Account->search_league_and_name($league->id, $search_value);
	}

	if ($search_field eq "code") {
		$search_value = $search_value."%";
		@accounts = Tab::Account->search_league_and_code($league->id, $search_value);
	}

	if ($search_field eq "membership") { 

		@accounts = Tab::Account->search_league_and_membership($league->id, $search_value);
	}


    #uniq
    my %seen = ();
    @accounts = grep { ! $seen{$_->id} ++ } @accounts;


</%init>

