<%args>
	$league
	$account
</%args>

	<table width="100%">

		<tr>
			<td width="100%">
				<h2>
					<% ($league->diocese_based) ? "Dioceses" : "Regions" %> in the <% $league->short_name %>
				</h2>
			</td>

			<td  colspan="4" align="right">
				<form action="region_edit.mhtml" method="post">
				<input class="blue" type="submit" value="Create New <% ($league->diocese_based) ? "Diocese" : "Region" %>">
				</form>
			</td>

		</tr>

	</table>


	<table cellpadding="5" cellspacing="1" width="100%">

%	my $switch = 1;
%	my @regions = sort{$a->name cmp $b->name} $league->regions;
%	@regions = sort {$a->code cmp $b->code} @regions;
%	@regions = sort {length($a->code) <=> length($b->code)} @regions;
%	@regions = sort {$b->quota <=> $a->quota} @regions;

	<tr class="liblrow">
		
		<th>
			<form action="regions_save.mhtml" method="post">
			<input type="hidden" name="league" value="<% $league->id %>">
			Code
		</th>

		<th>
			<% ($league->diocese_based) ? "Diocese" : "Region" %>
		</th>

		<th>
			Director
		</th>

		<% ($league->diocese_based) ? "<th>Quota</th>" : "" %>

	</tr>


	</tr>

% 	foreach my $region (@regions) {

		<tr <% ($switch++ % 2) ? "class=\"evenrow\"" : "class=\"oddrow\"" %>>

			<td>
				<input 	style="text-align: center;" type="text" 
						name="code_<% $region->id %>" size="3" value="<% $region->code %>">
			</td>

			<td>
				<a href="/league/region_edit.mhtml?region_id=<% $region->id %>">
				<% $region->name %>
				</a>
			</td>
	
			<td>
				<% ($region->director) ? $region->director->first." ".$region->director->last : "" %>
			</td>

%			if ($league->diocese_based) { 
		
				<td style="text-align: center;">
					<input 	style="text-align: center;" type="text" name="quota_<% $region->id %>" 
							size="3" value="<% $region->quota %>">
				</td>


%			}
	

		</tr>
% 	}

	<tr class="liblrow">

		<td  colspan="4" align="right">
			<input class="blue" type="submit" value="   Save Region Data   ">
			</form>
		</td>
	</tr>


</table>
