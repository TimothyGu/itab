<%args>
	$follow_id
	$type
	$tourn_id
	$email => undef
	$cell => undef
</%args>
<%init>


	if ($type eq "comp") { 

		my $follow = Tab::FollowComp->retrieve($follow_id);
		$follow->delete;

	}

	if ($type eq "judge") {

		my $follow = Tab::FollowJudge->retrieve($follow_id);
		$follow->delete;

	}

	$m->redirect("update_search.mhtml?tourn_id=$tourn_id&email=$email&cell=$cell");

</%init>
