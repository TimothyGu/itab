<%args>
	$tourn
</%args>
<%init>

	foreach my $group ($tourn->groups) { 

		$group->hired_fee($ARGS{"hired_".$group->id});
		$group->uncovered_entry_fee($ARGS{"uncovered_".$group->id});
		$group->missing_judge_fee($ARGS{"missing_".$group->id});
		$group->hired_pool($ARGS{"judges_".$group->id});

		$group->update;

	}

	my $msg = "The judge hire information has been saved";

	$m->redirect("hires.mhtml?msg=$msg");

</%init>
