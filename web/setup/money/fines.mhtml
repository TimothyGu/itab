<%args>
	$circuit	
	$account
	$tourn
	$err => undef
</%args>
<%perl>

	my $fine = $tourn->fine_deadline;
	$fine->set_time_zone($circuit->timezone);

	my $switch;

</%perl>

    <& sidebar.mas, chosen => "fines" &>

	<div id="leftbignb">
	
		<h2>Fines for <% $tourn->name %> </h2>


		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					<form action="fines_save.mhtml" method="post">
					Fine for drops after <% Tab::nicedt($fine) %>
				</td>

				<td valign="top" width="10%" align="right">
					$<input type="text" name="drop_fine" value="<% $tourn->method->drop_fine %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine for adds after <% Tab::nicedt($fine) %>
				</td>

				<td valign="top" width="10%" align="right">
					$<input type="text" name="add_fine" value="<% $tourn->method->add_fine %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine per round for no-show judges in prelim rounds:
				</td>

				<td valign="top" width="10%" align="right">
					$<input type="text" name="noshow_judge_fine" value="<% $tourn->method->noshow_judge_fine %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine per round for no-show judges in elim rounds:
				</td>

				<td valign="top" width="10%" align="right">
					$<input type="text" name="noshow_judge_fine_elim" value="<% $tourn->method->noshow_judge_fine_elim %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td colspan="2" align="right">
					<input type="submit" value="  Save Fines  ">
					</form>
				</td>

			</tr>

		</table>

		<hr />
		
		<p>To change the date after which nuisance fines apply, go to: <a href="/setup/date/date.mhtml">Setup -> Dates & Deadlines</a>

	</div>

