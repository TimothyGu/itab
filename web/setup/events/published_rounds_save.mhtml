<%args>
	$tourn
</%args>
<%init>

	foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) {

		foreach my $round ($event->rounds) { 

			$round->published($ARGS{$round->id});
			$round->listed($ARGS{"list_".$round->id});
			$round->update;
		}

	}

	my $msg = "Public Schematic & Lists of Clearing Competitors saved.";

	$m->redirect("/setup/events/published_rounds.mhtml?msg=$msg");

</%init>

