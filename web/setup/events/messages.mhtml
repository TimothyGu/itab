<%args>
	$tourn
	$event_id => undef
	$add      => undef
	$err      => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

 	my @groups = sort{$a->name cmp $b->name} $tourn->judge_groups;

	my $event = Tab::Event->retrieve($event_id) if $event_id;

	if (scalar $tourn->events == 1 && not defined $add) {
		$event = $tourn->events->first;
	}

	$m->abort unless $event;

	my $switch;

</%init>
	
	<& "/funclib/editor.mas", half => 1 &>

	<div class="left huge">

		<h2><% $event->name %></h2>

		<& tabnav.mas, event => $event, whoami => "messages" &>

		<form action="messages_save.mhtml" method="post">
		<input type="hidden" name="event_id" value="<% $event->id %>">

		<h4>Message/Rules to print on ballots</h4>

		<div class="block leftalign">
			<textarea class="full" name="ballot_rules" rows=10 cols="58" wrap="virtual"><% ($event) ? $event->setting("ballot_rules") : "" %></textarea>
		</div>

%		unless ($event->type eq "speech" || $event->type eq "congress") { 

			<div class="block leftalign" style="padding-top: 0; margin-top: 0;">

				<span class="biggishspan inline leftalign padno">
					<h5>Speech Times:</h5>
					<textarea class="half" name="speech_times" rows=6 cols="36" wrap="virtual"><% ($event) ? $event->setting("speech_times") : "" %></textarea>
				</span>

				<span class="biggishspan inline leftalign" style="margin-left: 25px;">
					<h5>Point Scale:</h5>
					<textarea class="half" name="point_scale" rows=6 cols="36" wrap="virtual"><% ($event) ? $event->setting("point_scale") : "" %></textarea>
				</span>

			</div>

%		} 

		<h4>Event Description on website</h4>

		<div class="block leftalign">
			<textarea class="full" name="description" rows=10 cols="58" wrap="virtual"><% ($event) ? $event->setting("description") : "" %></textarea>
		</div>

		<div class="liblrow rightalign block">
			<input type="submit"  value="  Save Messages ">
			</form>
		</div>

	</div>
			
	<div class="right small">
		<& menu.mas, tourn => $tourn, whoami => "messages", event_id => ($event) ? $event->id : "" &>		
	</div>
