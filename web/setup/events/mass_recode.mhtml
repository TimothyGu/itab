<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<div id="rightsmall">
		<& menu.mas, tourn => $tourn, whoami => "recode" &>
	</div>

	<div class="left huge">
	
		<h2>
			Change Starting Speaker Codes
		</h2>
	
		<table cellpadding="5" cellspacing="1" width="100%">
	
			<tr>
				<th>
					Event
				</th>
	
				<th>
					<form action="mass_recode_save.mhtml" method="post">
				</th>
	
			</tr>
	
	
%			foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
	
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	
					<td>
						<% $event->name %>
					</td>
	
					<td>
						<input size="5" type="text" name="<% $event->id %>" value="<% $event->code %>">
					</td>
	
				</tr>
	
%			}
		
			<tr class="liblrow">
	
				<td colspan="2" class="right">
	
					<input type="submit" value=" Save Changes ">
					</form>
				</td>
			</tr>
	
		</table>
	
	</div>
	
