<%args>
	$tourn
	$name
	$double_entry => 0
	$double_max => undef
</%args>
<%init>

	my $event_double = Tab::EventDouble->create({
		tournament => $tourn->id,
		name => $name,
		double_entry => $double_entry,
		max => $double_max
	});

	my $msg = "Grouping ".$event_double->name." created";

	$m->redirect("/setup/events/double_entry.mhtml?msg=$msg");

</%init>

