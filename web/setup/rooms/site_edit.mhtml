<%args>
	$err => undef
	$site_id
	$tourn
	$league
	$account
</%args>

%	my $site = Tab::Site->retrieve($site_id);

	<& sidebar.mas, tourn => $tourn &>

%	my $switch; 

	<div id="leftbig">

		<h2>Edit <% $site->name %></h2>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="evenrow"> 

				<th>
					Name:
				</th>

				<td>
					<form action="site_save.mhtml" method="post">
					<input type="hidden" name="site_id" value="<% $site_id %>">
					<input type="text" name="name"  size="50" value="<% $site->name %>">
				</td>

			</tr>

			<tr class="oddrow" align="left"> 

				<th>
					Directions & Location:
				</th>

				<td>
					<textarea name="directions" rows="15" placeholder="Directions & Location" cols="55"><% $site->directions %></textarea>
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2" align="right">
					<input type="submit" value="  Save Site Details ">
					</form>
				</td>

			</tr>

		</table>

	</div>

