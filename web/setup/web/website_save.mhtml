<%args>
	$account
	$tourn
	$webpage_id => undef
	$title => undef
	$text => undef
	$active => undef
	$webpage_type => undef
</%args>
<%init>

	my $webpage;
	my $now;

	if ($webpage_id) { 

		$webpage = Tab::Webpage->retrieve($webpage_id);

	} else { 

		$webpage = Tab::Webpage->create({
			tournament => $tourn->id,
			posted => $now
		});

	}

	$webpage->title($title);
	$webpage->title($webpage_type) if $webpage_type;

	$webpage->active($active);

	$webpage->text($text);

	$webpage->edited_by($account->id);
	$webpage->edited_on($now);

	$webpage->special($webpage_type) unless $webpage_type eq "add";

	$webpage->update;

	my $msg = "The page ".$title." has been saved";

	$m->redirect("/setup/web/website.mhtml?webpage_id=".$webpage->id."&msg=$msg") unless $webpage_type;
	$m->redirect("/setup/web/website.mhtml?webpage_type=".$webpage_type."&msg=$msg");


</%init>

