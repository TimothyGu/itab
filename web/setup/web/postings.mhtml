<%args>	
	$circuit
	$tourn
	$session
	$err => undef
</%args>

%	my $switch;

	<div class="left huge">

		<h3>Additional postings</h3>

		<table cellpadding="4" cellspacing="1" width="100%">

%			foreach my $posting (Tab::File->search( tourn => $tourn->id, posting => 1)) {

    			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td class="smaller">
						<a class="white block" href="/files/tourns/<% $tourn->id %>/postings/<% $posting->id %>/<% $posting->name %>">
							<% $posting->label %>
						</a>
					</td>

					<td class="smaller">
						<% Tab::niceshortdt($posting->uploaded->set_time_zone($tourn->tz)) %>
					</td>

					<td class="smaller">
						<a class="white block" href="posting_rm.mhtml?posting_id=<% $posting->id %>">
							Delete File
						</a>
					</td>

				</tr>	

%			}

		</table>

		<h4>Add new:</h4>

		<table cellpadding="4" cellspacing="1" width="100%">

			<tr class="yellowrow">

				<td class="smaller"> 
					Label:
					<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="posting" action="posting_upload.mhtml" method="post">
				</td>

				<td>
					<input type="text" size="25" name="label">
				</td>

				<td class="smaller"> 
					<input type="file" name="posting" size="10">
				</td>

				<td class="smaller rightalign">
					<input type="submit" value="  Save  ">
					</form>
				</td>

			</tr>

		</table>


	</div>

    <& sidebar.mas, tourn => $tourn, webpage_type => "postingcontrol" &>
	
