<%args>	
	$circuit
	$tourn
	$session
	$err => undef
</%args>

%	my $switch;

	<div id="leftbig">
		
		<h2>Post Schematics</h3>

		<table cellpadding="4" cellspacing="0" width="100%">

			<form action="schematics_save.mhtml" method="post">
			<input type="hidden" name="tourn_id" value="<% $tourn->id %>">

%			foreach my $event ($tourn->events) { 

%				next if $event->type eq "debate";
%				my $num_rounds = 0;

				<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th class="smaller">
						<% $event->abbr %>
					</th>

					<td class="smaller" align="right">

%						foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} $event->rounds(type => "prelim")) { 

							<span style="width: 70px; display: inline-block; ">

								<label for="<% $round->id %>">
									<% $round->name %>
								</label>

								<input type="checkbox" name="<% $round->id %>" value="1" id="<% $round->id %>" <% ($round->published) ? "checked" : "" %>>
							</span>
%						}

					</td>

				</tr>

%				my @elims = $event->rounds(type => "elim");
%				push (@elims, $event->rounds(type => "final"));

%				if (@elims) { 
					
					<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td></td>

					<td class="smaller" align="right">

%					foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} @elims) { 

							<span style="width: 70px; display: inline-block; ">
							<label for="<% $round->id %>"><% ($round->label) ? $round->label : $round->name %></label>
							<input type="checkbox" name="<% $round->id %>" value="1" id="<% $round->id %>"
							<% ($round->published) ? "checked" : "" %>>
						</span>
%					}

					</td>
				
					</tr>
% 				} 

%				$switch++;

				<tr>
					<td colspan="2"><h4 /></td>
				</tr>

% 			}

			<tr class="liblrow">

				<td align="left" class="smaller">
					<a class="blueblock" href="publish_prelims_save.mhtml">
						Publish All Prelims
					</a>
				</td>

				<td colspan="140" align="right">
					<input class="blue" type="submit" value="   Save    ">
					</form>
				</td>
			</tr>

		</table>

	</div>

    <& sidebar.mas, tourn => $tourn, news_type => "schematiccontrol" &>

	<div style="clear: both;">
