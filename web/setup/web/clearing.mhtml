<%args>	
	$circuit
	$tourn
	$session
	$err => undef
</%args>

%	my $switch;

	<div class="left huge">

%		undef $switch;

		<h3>Publish Lists of Clearing Students</h3>

		<form action="clearing_rounds_save.mhtml" method="post">

		<table cellpadding="4" cellspacing="1" width="100%">

%			foreach my $event ($tourn->events) { 

%				my $num_rounds = 0;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th class="smaller">
						<% $event->abbr %>
					</th>

					<td class="smaller" align="right">

%						foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} $event->rounds) { 

%							next if $round->type eq "prelim";

							<span style="display: inline-block; width: 80px;">
								<label for="l_<% $round->id %>"><% ($round->label) ? $round->label : $round->name %></label>
								<input type="checkbox" name="<% $round->id %>" value="1" id="l_<% $round->id %>"
								<% ($round->listed) ? "checked" : "" %>>
							</span>

%						}

					</td>

				</tr>

% 			}

			<tr class="liblrow">
				<td colspan="8" align="right">
					<input class="blue" type="submit" value="   Save   "></td>
					</form>
				</td>
			</tr>

		</table>

	</div>

    <& sidebar.mas, tourn => $tourn, news_type => "clearingcontrol" &>
	
	<div style="clear: both;">
