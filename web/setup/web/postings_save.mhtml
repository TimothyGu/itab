<%args>
	$tourn
</%args>
<%perl>

	foreach my $event ($tourn->events) { 

		next if $event->type eq "debate";

		foreach my $round ($event->rounds) { 

			if ($ARGS{$round->id}) { 

				$round->published(1);

			} else { 

				$round->published(0);

			}

			$round->update;

		}

	}

	my $msg = "Schematics checked have been published";

	$m->redirect("/setup/web/postings.mhtml?msg=".$msg);

</%perl>
