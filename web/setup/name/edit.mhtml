<%args>
	$err => undef
	$tourn
	$circuit
	$account
</%args>
<%init>

	my $switch;

</%init>

	<h2>Tournament Name & Invitations</h2>

	<div class="left huge">

		<h3>Name:</h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="evenrow">

				<td align="center">
					<form action="save.mhtml" method="post">
					<input type="text" name="name" size="50" value="<% ($tourn) ? $tourn->name : "" %>">
				</td>

				<td align="center" colspan="2">
					<input  type="submit" value="  Save Name  ">
					</form>
				</td>
			</tr>

		</table>

		<h3>Invitation:</h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="oddrow">

				<td>
					<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="invite" action="invite_upload.mhtml" method="post">
					<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
					<input type="file" name="invite" size="20">
				</td>

				<td align="center">
					<input  type="submit" value="  Upload  ">
					</form>
				</td>

			</tr>

		</table>

		<h3>Congress Legislation Packet:</h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="evenrow">

				<td>
					<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="bills" action="bills_upload.mhtml" method="post">
					<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
					<input type="file" name="bills" size="20">
				</td>

				<td align="center">
					<input  type="submit" value="  Upload  ">
					</form>
				</td>

			</tr>

		</table>

	</div>

	<div class="right small">

% 		if ($tourn->invitename) {
        	<a class="blue block" href="/files/<% $circuit->id %>/tournaments/<% $tourn->id %>/<% $tourn->invitename %>">
				Posted Invitation
			</a>
%		}

%  		if ($tourn->bill_packet) {
         	<a class="blue block" href="/files/<% $circuit->id %>/tournaments/<% $tourn->id %>/bills/<% $tourn->bill_packet %>">
				Posted Legislation
			</a>
%   	} 

	</div>
