<%args>
	$tourn
	$from => undef
	$bid_percent => 0
	$bid_round_to_rank => 0
	$bid_min_cume => 0
	$bid_min_round_type => 0
	$bid_min_number => 0
</%args>
<%init> 

	if ($tourn->method) { 
	
		my $method = $tourn->method;

		$tourn->setting("bid_percent($bid_percent);
		$tourn->setting("bid_round_to_rank($bid_round_to_rank);
		$tourn->setting("bid_min_cume($bid_min_cume);
		$tourn->setting("bid_min_round_type($bid_min_round_type);
		$tourn->setting("bid_min_number($bid_min_number);

		$tourn->setting("update;

	} else { 
		my $err = "Set registration rules first";
		$m->redirect("registration.mhtml?err=$err");
	}

	if ($from eq "Save & Go To Sweepstakes") { 
		my $err = "Bids rules have been saved.  Now enter sweepstakes rules.";
		$m->redirect("sweeps.mhtml?err=$err");
	} else { 
		my $err = "Bids rules have been saved.";
		$m->redirect("bids.mhtml?err=$err");
	}

</%init> 

