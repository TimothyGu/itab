<%args>
	$tourn
	$judge_policy => undef
	$disclaimer => undef
	$invoice_message => undef
	$web_message => undef
	$judge_sheet_notice => undef
</%args>
<%init> 

	$tourn->judge_policy($judge_policy);
	$tourn->disclaimer($disclaimer);
	$tourn->invoice_message($invoice_message);
	$tourn->web_message($web_message);
	$tourn->update;

	my $method = $tourn->method;
	$method->judge_sheet_notice($judge_sheet_notice);
	$method->update;

	my $msg = "Tournament notices & messages are updated";
	$m->redirect("messages.mhtml?msg=$msg");


</%init>
