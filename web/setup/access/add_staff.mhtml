<%args>
	$email
	$tourn
</%args>

<%init>

my @accounts = Tab::Account->search( email => $email );

my $account = $accounts[0];

my $already = Tab::ChapterAdmin->search( account => $account->id, tournament => $tourn);

unless ($already) {

	my $access = Tab::ChapterAdmin->create({
		account => $account->id,
		tournament => $tourn
	});

}
	$m->redirect("$Tab::url_prefix/setup/access/access.mhtml");

</%init>

