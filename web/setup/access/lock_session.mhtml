<%args>
	$session
	$account
	$confirm => undef
</%args>

%	unless ($confirm) { 

		<div class="left huge">

			<h2>Lock this session</h2>

			<table cellpadding="10" width="100%">

				<tr>
					<td>
						<form action="lock_session.mhtml" method="post">
						<input type="hidden" name="confirm" value="yes">

						<p>This function will lock the session from this
						particular computer so that only data entry and
						auditing functions are available.  You will need to
						re-enter your account password to unlock the
						sesson.<p/>
			
						<p>Remember, each account can only be logged in once.
						To grant a user data-entry only access to your
						tournment, instead look under Setup -> Access.</p>
			
					</td> 
				</tr> 
				
				<tr class="redrow">
					<td align="center">
						<input  type="submit" style="width: 200px;" value=" Lock Session ">
						</form>
					</td>
				</tr> 

			</table>

		</div>

<%perl>

	} else {
		$session->limited(1);
		$session->update;
		my $err = "Session has been locked to data-entry only";
		$m->redirect("$Tab::url_prefix/tabbing/rank.mhtml?err=$err");
	}

</%perl>
