<%args>
	$err => undef
	$tourn
	$account
</%args>
<%init>

	my @access = $tourn->accounts;
	my $td = $tourn->director;

	my $dirname = $td->first." ".$td->last;

</%init>


	<div id="leftbignb">
	
		<h2>Tournament Access</h2>

		<table cellpadding="5" width="100%" cellspacing="1"> 

			<tr>
				<td colspan="3">
					<h3>Primary Contact:</h3>
				</td>
			</tr>
		
			<tr class="evenrow"> 

				<td align="center">
					<a class="whiteblock" href="mailto:<% $tourn->director->email %>">
						<% $tourn->director->first." ".$tourn->director->last %>
					</a>
				</td>
		
				<td align="center">
					<form action="primary_contact.mhtml" method="post">
					Change to:
					<input type="text" name="email" value="<% $tourn->director->email %>">
				</td>

				<td align="center">
					<input type="submit" value="  Change  ">
					</form>
				</td>

			</tr>

		</table>

		<table cellpadding="5" width="100%" cellspacing="1"> 

%			if (@access) { 

				<tr>
					<td colspan="5">
						<h3>Other Tab Staff</h3>
					</td>
				</tr>

				<tr class="liblrow">
				
					<th>	
						Name
					</th>

					<th class="smaller">
						Setup Access
					</th>

					<th class="smaller">
						Data Entry Only
					</th> 

					<th class="smaller">
						List as Contact
					</th> 
				
					<th>
					</th> 

				</tr>

%				my $switch;

% 				foreach my $staff (@access) { 

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
						<td align="left">
							<% $staff->account->first." ".$staff->account->last %>
						</td>

						<td align="center">
							<a href="settings_switch.mhtml?staff_id=<% $staff->id %>" class="whiteblock">
								<% ($staff->nosetup) ? "No" : "Yes" %>
							</a>
						</td>

						<td align="center">
							<a href="limited_switch.mhtml?staff_id=<% $staff->id %>" class="whiteblock">
								<% ($staff->entry) ? "Yes" : "No" %>
							</a>
						</td>

						<td align="center">
							<a href="contact_switch.mhtml?staff_id=<% $staff->id %>" class="whiteblock">
								<% ($staff->contact) ? "Yes" : "No" %>
							</a>
						</td>

						<td align="center">
							<a class="whiteblock" href="staff_rm.mhtml?staff_id=<% $staff->id %>">
								Revoke
							</a>
						</td>

					</tr>
%				}

%			}

		</table>

	</div>


	<div id="rightsmall">

		<h3>Add New Staff:</h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="evenrow">
		
				<th>	
					Email:
					<form action="staff_add.mhtml" method="post">
					<input type="hidden" name="tourn_id" value="<% $tourn %>">
				</th>

				<td>
					<input type="text" name="email" size="20">
				</td>

			</tr>

			<tr class="liblrow">

				<td align="right" colspan="2">
					<input class="blue" type="submit" value="  Grant Access  ">
					</form>
				</td>
			</tr>

		</table>

	</div>


