<%args>	
	$tourn
	$group_id
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id) if $group_id; 
	my $switch;

</%init>

	<& menubar.mas, group_id => $group_id, tourn => $tourn, page => "coach_tiers" &>

	<div class="left huge">

		<h2>Coach rating scale for <% $group->abbr %></h2>

			<table cellpadding="6" cellspacing="1" width="100%">

				<tr class="yellowrow">

					<th width="50px;">
						<form action="tier_coach_save.mhtml" method="post">
						<input type="hidden" name="group_id" value="<% $group->id %>">
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Description
					</th>

					<th>
					</th>

				</tr>
			
%				foreach my $tier (sort {$a->name cmp $b->name} $group->rating_tiers( type => "coach") ) { 
			
					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<th>
						</th>
		
						<td align="center">
							<input type="text" name="<% $tier->id %>_name" size="3" value="<% $tier->name %>">
						</td>

						<td>
							<input type="text" name="<% $tier->id %>_description" size="50" value="<% $tier->description %>">
						</td>

						<td align="center">
							<a class="dkred block" href="tier_rm.mhtml?tier_id=<% $tier->id %>">
								Delete
							</a>
						</td>

					</tr>

%				}

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th class="smaller">
						New:
					</th>

					<td align="center">
						<input type="text" name="new_name" size="3" value="">
					</td>

					<td>
						<input type="text" name="new_description" size="50" value="">
					</td>

					<th>
					</th>

				</tr>

				<tr class="liblrow">

					<td colspan="4" align="right">
						<input type="submit" value="  Save Coach Ratings " class="small">
						</form>
					</td>

				</tr>

			</table>

	</div>

