<%args>
	$group_id
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	foreach my $qual ( $group->quals( type => "qual" )) { 

		$qual->name($ARGS{$qual->id."_name"});
		$qual->description($ARGS{$qual->id."_description"});
		$qual->update;

	}

	if ($ARGS{"new_name"}) { 

		my $qual = Tab::Qual->create({
			name => $ARGS{"new_name"},
			description => $ARGS{"new_description"},
			judge_group => $group_id,
			type => "qual"
		});

	}

	my $msg = "Coach ratings are saved";
	$m->redirect("$Tab::url_prefix/setup/judges/scale.mhtml?group_id=$group_id&msg=$msg");
	
</%init>
