	my @files = Tab::File->retrieve_all;

	foreach my $file (@files) { 
		my $file_id = $file->id;
		my $tourn_id = $file->tourn->id;
		my $file_name = $file->name;
		system "mkdir -p  /www/itab/web/files/tourns/$tourn_id/results/$file_id";
		system "cp /www/tab/public_site/results/*/$tourn_id/files/*/$file_name /www/itab/web/files/tourns/$tourn_id/results/$file_id/";
		$m->print("Moved filed $file_name");
	}

	$m->print("Fin");


