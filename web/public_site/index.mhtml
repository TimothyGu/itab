<%args>	
	$league
</%args>
<%init>

	my @news = $league->news( main_site => 1, active => 1 );
	@news = sort {$b->posted cmp $a->posted} @news;

</%init>

<table cellpadding="3" width="100%">


% foreach (0 .. 5) { 

%	my $story = $news[$_];
%   next unless $story;

	<tr><td class="story"><h4><% $story->title %></h4></td></tr>
	<tr>
	<td class="story">
	<p>
	<% $story->blurb %>
	</p>
	</td>
	</tr>
	


% if ($story->file) { 
<tr>
	<td align="right">Download Attached File:
	(<a href="<% $Tab::url_prefix %>/files/<% $league->id %>/articles/<% $story->id %>/<% $story->file %>"><% $story->file%></a>)</td>
</tr>

% }


	<tr>
	<td align="right"><i>--<% $story->posted->mdy('/') %> </i></td>
	</tr>

% }

</table>
