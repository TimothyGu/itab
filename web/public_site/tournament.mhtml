<%args> 
	$circuit
	$tourn_id => undef
</%args>
<%init> 
	my $tourn = Tab::Tourn->retrieve($tourn_id) if $tourn_id;
	my @events = sort {$a->name cmp $b->name} $tourn->events;

	my $start = $tourn->start;
	$start->set_time_zone($circuit->timezone);
	my $end = $tourn->end;
	$end->set_time_zone($circuit->timezone);
	my $reg_start = $tourn->reg_start;
	$reg_start->set_time_zone($circuit->timezone);
	my $reg_end = $tourn->reg_end;
	$reg_end->set_time_zone($circuit->timezone);
	
	
</%init> 


<form action="schedule.mhtml" method="post">
<table width="100%" cellpadding="1">
<tr>
<td width="100%">
<h3><% $tourn->name %></h3>
</td>
<td><input  type="submit" value="Return to Schedule">
</td>
</tr>
</table>
</form>



<center>

<table cellpadding="3" width="100%"> 

<tr>
<td width="70%" valign="top">
<table cellpadding="3" width="100%">

<tr>
<th>Name:</th>
<td><% $tourn->name %></td>
</tr>

<tr>
<th>Circuit:</th>
<td><% $tourn->circuit->name %></td>
</tr>

<tr>
<th>Contacts:</th>
	<td><a href="mailto:<% $tourn->director->email %>"><%$tourn->director->first." ".$tourn->director->last %></td>
% foreach my $ca ($tourn->accounts) { 
%	next unless $ca->contact;
%	my $c = $ca->account;
<tr><td></td>
	<td>
	<a href="mailto:<% $c->email %>">
	<% $c->first." ".$c->last %>
	</a></td>
</tr>
%}

<tr>
<th>Dates:</th>
<td>
	<% $start->mdy('/') %>
	<% ($start->mdy ne $end->mdy) ? "-".$end->mdy('/') : "" %> 
</td>
</tr>

% unless ($tourn->reg_start->mdy('/') eq $tourn->reg_end->mdy('/')) {

<tr>
<th>Online Registration:</th>
<td>
	<% $tourn->reg_start->mdy('/') ." to ". $tourn->reg_end->mdy('/') %> 
	at
	<% $tourn->reg_end->hour_12.":".$tourn->reg_end->strftime('%M')." ".$tourn->reg_end->strftime('%p')%> 
</td>
</tr>

% }

% if ($tourn->results) { 

<tr>
<th>Results:</th>
<td>(<a href="<%$circuit->url%>/results/<% $circuit->id %>/<% $tourn->id %>/index.mhtml">Results</a>)</td>
</tr>

% }

% if ($tourn->invitename) {
<tr>
<th>Invitation:</th>
<td>(<a href="<% $Tab::url_prefix%>/files/<% $circuit->id %>/tournaments/<% $tourn->id."/".$tourn->invitename %>">Download</a>)</td>
</tr>
%  }

% if ($tourn->bill_packet) {
<tr>
<th>Bills:</th>
<td>(<a href="<% $Tab::url_prefix%>/files/<% $circuit->id %>/tournaments/<% $tourn->id."/bills/".$tourn->bill_packet %>">Download</a>)</td>
</tr>
%  }

</td>

% if ($tourn->inviteurl) {
<tr>
<th>Tournament Website:</th>
<td>(<a href="<% $tourn->inviteurl %>">Link</a>)</td>
</tr>
%}

% foreach my $site (sort {$a->name cmp $b->name} $tourn->sites) { 

<tr>
<td colspan="2"><h4><% $site->name %>:</h4></td>
</tr>

<tr>
<td class="italic">Site Host:</td>
<td><% $site->host->first." ".$site->host->last %></td>
</tr>

<tr>
<td colspan="2">
<% $site->directions %> 
</td>
</tr>

% }

</table>
</td>
<td width="30%" valign="top">
<h4>Events Offered:</h4>

<table cellpadding="2" width="100%">

%	my $switch;

% foreach my $event (@events) { 

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	<td>
		<a href="event.mhtml?event_id=<% $event->id %>"><% $event->name %></a>
	</td>
	</tr>
% }

</table>

</td>

</tr>
</table>

