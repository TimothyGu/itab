	my $msg;

	my $now = DateTime->now;

	if ($posting) {

		my $file = Tab::File->create({
			tourn => $tourn->id,
			uploaded => $now,
			result => 1
		});

		$file->event($event_id) unless $event_id eq "all";

       	my $req = Apache2::Request->new($r);
