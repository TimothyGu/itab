<%args> 
	$tourn_id
	$event_id
	$sort_by
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my @comps = $event->comps;

	foreach my $comp (@comps) {

		my $comp_key = "sweeps_".$comp->id;
		my $sweeps_points = $ARGS{$comp_key};		
		$comp->sweeps_points($sweeps_points);
		$comp->update;						

	}

	$m->redirect("$Tab::url_prefix/tabbing/congress_sweeps.mhtml?event_id=$event_id&sort_by=$sort_by");

</%init>

