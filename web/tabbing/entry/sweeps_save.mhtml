<%args> 
	$tourn_id
	$event_id
	$sort_by
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	foreach my $entry ($event->entries) { 
		my $entry_key = "sweeps_".$entry->id;
		my $sweeps = $ARGS{$entry_key};		
		$entry->sweeps($sweeps);
		$entry->update;						
	}

	my $msg = "Sweepstakes points saved";
	$m->redirect("sweeps.mhtml?event_id=$event_id&msg=$msg");

</%init>

