<%args>
	$event_id
	$tourn
</%args>
<%init>

	my @events;

	if ($event_id eq "all") { 
		foreach my $event ($tourn->events) { 
			next if $event->type eq "speech";
			next if $event->type eq "debate";
			push @events, $event;
		}
	} else { 
		push @events, Tab::Event->retrieve($event_id);
	}


</%init>

	<div class="left huge">

		<h4>Side Reports</h4>

%		foreach my $event (sort {$a->name cmp $b->name} @events) { 

			<table>
				<tr class="yellowrow">
					<td>
					</td>

%					foreach my $round ($event->rounds) { 
						<th class="smallish">
							<% $round->realname %>
						</th>
%					}

				</tr>

				<tr class="evenrow">
				</tr>
			</table>

%		}


	</div>

