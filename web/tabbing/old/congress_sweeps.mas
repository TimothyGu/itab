<%args> 
	$tourn_id
	$event_id
	$sort_by
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my @entries = $event->entries;

	foreach my $entry (@entries) {

		my $entry_key = "sweeps_".$entry->id;
		my $sweeps_points = $ARGS{$entry_key};		
		$entry->sweeps_points($sweeps_points);
		$entry->update;						

	}

	$m->redirect("$Tab::url_prefix/tabbing/congress_sweeps.mhtml?event_id=$event_id&sort_by=$sort_by");

</%init>

