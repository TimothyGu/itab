<%args>
	$err => undef
	$director
	$diocese_id
	$tourn
	$first => undef
</%args>
<%init>

	my $account = Tab::Account->retrieve($director);
	my $diocese = Tab::Region->retrieve($diocese_id);

	my $switch;

</%init>

	<div class="left huge"> 
	
		<table cellpadding="6" cellspacing="1" width="100%"> 

			<tr>

				<td width="100%">
					<h2>Contact information</h2>
				</td>
			
				<td>
					<form action="dioceses.mhtml" method="post">
					<input type="hidden" name="diocese_id" value="<% $diocese->id %>">
					<input class="blue" type="submit" value="Return to <% $diocese->name %>">
					</form>
				</td>

			</tr>

		</table>
			
		<table cellpadding="6" cellspacing="1" width="100%"> 
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<th>
					Name:
				</td>
				
				<td>
					<% $account->first." ".$account->last %>
				</td> 

			</tr>
				
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<th>
					Email:
				</td>
				
				<td>
					<% $account->email %>
				</td> 

			</tr>
				
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				
				<th>
					Diocese:
				</td>
				
				<td>
					<% $diocese->name %>
				</td>

			</tr> 
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				
				<th>
					Mailing Address:
				</td>
				
				<td>
					<% $account->street %>
				</td>

			</tr> 
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td>
				</td>

				<td>
					<% $account->city %>, <% $account->state %> <% sprintf("%05d", $account->zip) %>
				</td>

			</tr> 
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<th>
					<% ($account->is_cell) ? "Cell Phone:" : "Non-cell Phone:" %>
				</td>
				
				<td>
					<% $account->phone %>
				</td>
				
			</tr> 
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<th>
					Hotel:
				</td>
				
				<td>
					<% $account->hotel %>
				</td>
			</tr>

		</table>

	</div>


	<& sidebar.mas, tourn => $tourn, diocese => $diocese &>
