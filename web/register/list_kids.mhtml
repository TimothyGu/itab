<%args>
	$event_id
	$tourn
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my @students;

	foreach my $entry ($event->entries) { 

		push (@students, $entry->members);

	}


</%init>

<h3>Students in <% $event->name %></h3>

<table cellpadding="5" cellspacing="0" border="0" width="100%">

%	my $switch;

% foreach my $student (sort {$a->last cmp $b->last} @students) { 

	<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
%	$switch++;

	<td><% $student->chapter->name %></td>
	<td><% $student->last %>, <% $student->first %></td>
	
	</tr>

% }


</table>
