	foreach my $school ($tourn->schools) { 

		if ($ARGS{$school->id}) {

			$school->noprefs(1);
			$school->update;

		} else { 

			$school->noprefs(0);
			$school->update;

		}

	}

	my $msg = "Preference blacklist saved.  They weep.";

	$m->redirect("lose_prefs.mhtml?msg=$msg");



</%init>
