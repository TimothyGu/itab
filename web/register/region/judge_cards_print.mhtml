<%args>
	$region
	$tourn
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now->set_time_zone($tz);

    my $filename = "Diocese-JudgeCards-".$region->name;
	$filename =~ s/[\W_]//g;

    my $filepath = $Tab::file_root."/tmp/";
    my $garbage = `rm -f $filepath"."$filename.*`;

    $m->comp("/funclib/printout.mas", filename => $filename, head => 1, no_header => 1, taller => 1);

    $m->comp("diocese_judge_cards.mas", filename => $filename, diocese => $region, tourn => $tourn);

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );

</%init>
