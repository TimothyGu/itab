<%args>
	$region
	$tourn
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now->set_time_zone($tz);

	my $name = $region->name;
	$name =~ s/[\W_]//g;
    my $filename = "Diocese-EntryReport-".$name;

    my $filepath = $Tab::file_root."/tmp/";
    my $garbage = `rm -f $filepath"."$filename.*`;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1, landscape => 1);

    $m->comp("diocese_entry_report.mas", filename => $filename, diocese => $region, tourn => $tourn);

	open (TEXOUT, ">>$filepath"."$filename.tex");
	print TEXOUT "\\newpage\n";
	close TEXOUT;

    $m->comp("diocese_judge_report.mas", filename => $filename, diocese => $region, tourn => $tourn);

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1 );

</%init>
