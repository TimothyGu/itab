		my $purchase = Tab::Purchase->create({ 
			item => $item->id,
			school => $school->id,
			quantity => $ARGS{$item->id."_amount"}  
		});

	}

	$m->redirect("$Tab::redirect/register/concessions_order.mhtml?school_id=$school_id");

</%perl>

