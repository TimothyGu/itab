<%args>
	$school_id
	$session
	$account
	$tourn
</%args>
<%perl>

	my $school = Tab::School->retrieve($school_id);
	my $switch;

	my $label = "Concessions";

	$label = $tourn->method->concession_name if $tourn->method->concession_name;

</%perl>

    <& menubar.mas, school => $school, whoami => "concessions", tourn => $tourn &>

	<div class="left huge">

		<h4><% $label %> for <% $school->name %></h4>
	
		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="liblrow">

				<th>
					<form action="concessions_save.mhtml" method="post">
					<input type="hidden" name="school_id" value="<% $school_id %>">
					Name
				</th>

				<th>
					Unit Price
				</th>

				<th>
					Quantity
				</th>

				<th>
					Total
				</th>
				
			</tr>

%			foreach my $item (sort {$a->name cmp $b->name} $tourn->items) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th>
						<% $item->name %>
					</th>

					<td>
						$<% sprintf ("%.2f", $item->price) %>
					</td>

					<td>
						<input type="text" name="<% $item->id %>_amount" value="<% $school->item_count($item) %>" size="5">
					</td> 
				
					<td>
						$<% sprintf ("%.2f", $school->item_cost($item)) %>
					</td>

				</tr>

%			}

			<tr>
				<td><br /></td>
			</tr>

			<tr class="liblrow">
				<td align="right" colspan="5"><input  type="submit" value="   Save <% $label %> Changes  "></td>
				</form>
			</tr>

		</table>

	</div>

	<div class="right small">

		<a class="blue block" href="concessions_print.mhtml?school_id=<% $school->id %>">Print <% $label %> Order</a>

		<a class="blue block" href="concessions_tickets.mhtml?school_id=<% $school->id %>">Print <% $label %> Tickets</a>

	</div>
