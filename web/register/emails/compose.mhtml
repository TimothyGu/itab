<%args>
	$tourn
	$account
	$email_id => undef;
</%args>
<%init>

	my $email = Tab::Email->retrieve($email_id) if $email_id;

	my @events = $m->comp("/funclib/tourn_events.mas", tourn => $tourn);

</%init>

	<& "/funclib/editor.mas" &>

	<form action="send.mhtml" method="post"> 
	<input type="hidden" name="email_id" value="<% $email_id %>">

	<div class="right small">

		<div class="sidenote">

		<h4>Send email to:</h4>

		<table cellspacing="1" cellpadding="0">

%			my $switch;

			<tr class="liblrow">

				<td class="smaller" colspan="2">
					<label for="everybody">
					All coaches
					</label>
				</td>

				<td class="centeralign">
					<input type="checkbox" id="everybody" name="everybody" value="1">
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2" class="smaller">
					<label for="short">
					OR Schools short on judges
					</label>
				</td>

				<td class="centeralign">
					<input type="checkbox" id="short" name="judge_short" value="1">
				</td>

			</tr>

			<tr>
				<td colspan="3" class="smaller">
					<h5>OR schools with entries in:</h5>
				</td>
			</tr>

%				foreach my $event (sort {$a->name <=> $b->name} @events) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td style="width: 7px; background-color: #fefefe;"></td>

					<td class="smaller">
						<label for="<% $event->id %>">
						<% $event->name %>
						</label>
					</td>

					<td class="centeralign">
						<input type="checkbox" id="<% $event->id %>" name="event_<% $event->id %>" value="1">
					</td>

				</tr>

% 				}


		</table>
		
		</div>
	
	</div>

	<div class="left huge">
	
		<h2>Email registered coaches</h2>

		<table cellpadding="6" width="100%">

			<tr class="evenrow">

				<td>
					Subject:
				</td>

				<td>
					<input type="text" id="subject" name="subject" size="50" value="<% ($email) ? $email->subject : "" %>" >
					<script> document.getElementById('subject').focus() </script>
				</td>

			</tr>

			<tr>
				<td>
					Text:
				</td>

				<td class="rightalign" style="padding-bottom: 30px;">
					<textarea name="content" cols="50" rows="20"><% ($email) ? $email->content : "" %></textarea>
				</td>
			</tr>

			<tr class="liblrow">
				<td colspan="2" class="rightalign">
					<input type="submit" value="  Send Email ">
					</form>
				</td>
			</tr>

		</table>

	</div>

