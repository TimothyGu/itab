<%args>
	$tourn
	$session
</%args>

	<h2>Mark schools as ineligible for MJP/Strikes</h2>

	<center>

	<table cellpadding="5" cellspacing="1">

		<tr class="liblrow">

			<th>
				School
			</th>

			<th>
				State
			</th>

			<th>
				No Preferences?
				<form action="lose_prefs_save.mhtml">
			</th>

		</tr>

%		my $switch;

%		foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 

%			if ($school->noprefs) { 

				<tr <% ($switch++ % 2) ? "class=\"liblrow\"" : "class=\"bluerow\"" %>>

%			} else { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

%			}

				<td>
					<a href="index.mhtml?school_id=<% $school->id %>">
					<% $school->name %>
					</a>
				</td>

				<td>
					<% $school->chapter->state %>
				</td>

				<td>
					<input type="checkbox" value="1" name="<% $school->id %>" 
						<% ($school->noprefs) ? "checked" : "" %>>
				</td>

			</tr>

%		}

		<tr class="lirdrow">

			<td colspan="3" align="right">
			
				<input type="submit" value="  Blacklist Them And Hear Them Weep   ">
				</form>

			</td>

		</tr>


	</table>


