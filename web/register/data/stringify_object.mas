<%args>
	$obj
</%args>
<%perl>

	my $string;

	foreach my $column ($obj->columns) { 

		next if $column eq "id";

		$string = $string.$obj->table.":".$obj->id;
		$string = $string.":".$column.":";

		my $fields = $obj->$column;
		
		$fields =~ s/\r\n/<TABSPACE>/g;
		$fields =~ s/\r/<TABSPACE>/g;
		$fields =~ s/\n/<TABSPACE>/g;
	
		$string = $string.$fields."\n";

	}

	return $string;

</%perl>
