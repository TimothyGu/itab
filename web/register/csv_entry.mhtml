<%args>
	$league
	$tourn
	$account
	$session
	$event_id => 0
</%args>
<%init>

	my @events = $tourn->events unless $event_id;
	push (@events, Tab::Event->retrieve($event_id)) if $event_id;

	@events = sort {$a->abbr cmp $b->abbr} @events;

	my $string = $events[0]->abbr if $event_id;
	$string = "all-events" unless $event_id;

	my $filename = $Tab::file_root."/tmp/entry-".$string."-".$session->id;
	my $garbage = `rm -f $filename.*`;

	open (CSVOUT, ">$filename.csv");

	print CSVOUT "Code,";
	print CSVOUT "Event," unless $event_id;
	print CSVOUT "DioCode,"  if $league->diocese_based;
	print CSVOUT "Schcode,"  unless $league->diocese_based;
	print CSVOUT "Student1First,Student1Last,";
	print CSVOUT "Student2First,Student2Last,";
	print CSVOUT "Diocese," if $league->diocese_based;
	print CSVOUT "Region," if $league->region_based;
	print CSVOUT "School \n";

	foreach my $event (@events) { 

	my @comps = sort {$a->code <=> $b->code} $event->comps;
	@comps = sort {$a->dropped <=> $b->dropped} @comps;
	@comps = sort {$a->waitlist <=> $b->waitlist} @comps;
	

foreach my $comp (@comps) { 

	if ($comp->dropped) { 
		print CSVOUT &Tab::texify("DROP").",";
	} elsif ($comp->waitlist) { 
		print CSVOUT &Tab::texify("WL").",";
	} else { 
		print CSVOUT &Tab::texify($comp->code).",";
	}

	print CSVOUT &Tab::texify($event->abbr)."," unless $event_id;

	if ($league->diocese_based) { 
		print CSVOUT &Tab::texify($comp->school->region->code).",";
	} else { 
		print CSVOUT &Tab::texify($comp->school->code).",";
	}

	if ($event->team == 1) { 

		print CSVOUT &Tab::texify($comp->student->first).",".&Tab::texify($comp->student->last).",,,";

	} elsif ($event->team == 2) { 

		print CSVOUT &Tab::texify($comp->student->first).",".&Tab::texify($comp->student->last).",";
		print CSVOUT &Tab::texify($comp->partner->first).",".&Tab::texify($comp->partner->last).",";

	} else {
		print CSVOUT &Tab::texify($comp->name)."} ,,,,";
	}

	if ($league->diocese_based || $league->region_based) { 
		print CSVOUT &Tab::texify($comp->school->region->name).",";
	}

	print CSVOUT &Tab::texify($comp->school->name);
	print CSVOUT "\n";

	}

}

	close CSVOUT;

	$m->redirect("$Tab::url_prefix/tmp/entry-".$string."-".$session->id.".csv");

</%init>

<div id="content">

<p><% $filename %></p>
