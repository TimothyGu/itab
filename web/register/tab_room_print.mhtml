<%args> 
	$session
	$league
	$tourn
	$account
	$order => "last"
</%args>
<%init>

	my $filename = $Tab::file_root."/tmp/tab-staff-".$tourn->id."-".$session->id;

	my $now = DateTime->now;	
	$now->set_time_zone($league->timezone);
	
	my $garbage = `rm -f $filename.*`;
	open (TEXOUT, ">$filename.tex");

	my $texheader = "
			\\documentclass[10pt]{letter}
			\\usepackage{fullpage}
			\\usepackage{multirow}
			\\usepackage[hmargin=1in,vmargin=1.25in]{geometry}
			\\usepackage{helvet}
			\\pagestyle{empty}
			\\renewcommand{\\familydefault}{\\sfdefault}
			\\renewcommand{\\arraystretch}{1.5}
			\\begin{document}
			\\addtolength{\\textwidth}{1in}
			\\addtolength{\\hoffset}{-.5in}
			\\addtolength{\\voffset}{-.5in}";

	print TEXOUT $texheader;

	print TEXOUT "\\bigskip\n";
	print TEXOUT "\\begin{tabular}{p{1.5in}p{4.75in}} \n  ";
	print TEXOUT "{\\bf League:} & {\\raggedright ".&Tab::texify($league->name)."} \\\\ \n ";
	print TEXOUT "{\\bf Tournament:} & ".&Tab::texify(substr($tourn->name,0,30))." \\\\ \n ";
	print TEXOUT "{\\bf Printed:} & ". $now->day_abbr." ".$now->month_name." ".$now->day.", ".$now->year." ".$now->hour_12.":".$now->strftime('%M')." ".$now->strftime('%p')."\\\\ \\hline \n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\medskip\n";
	print TEXOUT "\\newline\n";
	print TEXOUT "\\medskip\n";
	print TEXOUT "\\normalsize\n";
	print TEXOUT "\\begin{tabular}{|p{2.5in}|p{3.75in}|}\n";
	print TEXOUT "\\multicolumn{2}{l}{\\bf Tab Room Staff }\\\\ \n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\newline\n";

	my @tab_groups = Tab::JudgeGroup->search({ tournament => $tourn->id, tab_room => 1});
	my @staff;

	foreach my $tg (@tab_groups) {
		push (@staff, $tg->judges);
	}

	foreach my $judge (sort {$a->$order cmp $b->$order} @staff) {

		print TEXOUT "\\begin{tabular}{|p{.75in}|p{.75in}|p{1.0in}|p{.75in}|p{1.0in}|p{1.0in}|p{1.0in}|}\n";
		print TEXOUT "\\hline\n";
		print TEXOUT $judge->first." & ";
		print TEXOUT $judge->last." & ";
		print TEXOUT substr($judge->school->name,0,15)." & ";
		print TEXOUT $judge->region->name." & ";
		print TEXOUT $judge->cfl_tab_first." & ";
		print TEXOUT $judge->cfl_tab_second." & ";
		print TEXOUT $judge->cfl_tab_third." \\\\ \\hline \n";
		print TEXOUT "\\end{tabular}\n";

	}

	print TEXOUT "\\end{document} \n";
	close TEXOUT;

	$garbage = `cd $Tab::file_root/tmp; $Tab::latex_path $filename.tex; $Tab::dvipdfm_path $filename.dvi`;

	`rm -f $filename.tex $filename.log $filename.dvi $filename.aux`;

	$m->redirect("$Tab::url_prefix/tmp/tab-staff-".$tourn->id."-".$session->id.".pdf");

</%init>
