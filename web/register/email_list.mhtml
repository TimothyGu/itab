<%args>
	$tourn
	$session
</%args>

<h3>Contacts and Schools at <% $tourn->name %></h3>


<table cellpadding="6" cellspacing="0" width="100%">

%my $switch;

%	foreach my $account (sort {$a->chname cmp $b->chname} $tourn->contacts) { 

%	$switch++;

	<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>


	<td><% $account->chname %></td>
	<td><% $account->first." ".$account->last %></td>
	<td><% $account->email %></td>
	<td><% $account->phone %>
	<% ($account->is_cell) ? "(Cell)" : "" %></td>

% 	}




