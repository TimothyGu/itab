<%args>
	$tourn
	$err => undef
</%args>

<%init>

	my @events = $tourn->events; 

</%init>

<p><font color="red"><% $err %></font></p>

% foreach my $event (@events) { 

<h3>Blocked judges in <% $event->name %></h3>

% my @blocks = Tab::Strike->search( event => $event->id, type => "elim" );

<table cellpadding="3">

% foreach my $block (@blocks) { 

% my $judge = $block->judge; 
% next unless $judge->id;


	<tr><td><% $judge->code %></td>
	<td><% $judge->first." ".$judge->last %></td>
	</tr>

% }

</table>

% }  




</table>

