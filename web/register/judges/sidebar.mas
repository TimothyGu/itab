<%args>
	$tourn
	$whoami => undef
	$group => undef
</%args>
<%init>

	my @groups = sort {$a->name cmp $b->name} $tourn->groups;

</%init>

	<div id="rightsmall">

%		if ($whoami eq "roster" || $whoami eq "requests" || $whoami eq "hires" || $whoami eq "hires_add") { 

			<a class="chosenblock" href="/register/judges/judges.mhtml">
				Return to Judge Master
			</a>

			<h3><% $group->name %></h3>

			<a class="<% ($whoami eq "roster") ? "chosenblock" : "blueblock" %>" href="roster.mhtml?group_id=<% $group->id %>">
				<% $group->name %> Full Roster
			</a>

			<a class="<% ($whoami eq "hires") ? "chosenblock" : "blueblock" %>" href="hires.mhtml?group_id=<% $group->id %>">
				<% $group->name %> Hires
			</a>

			<a class="<% ($whoami eq "hires_add") ? "chosenblock" : "blueblock" %>" href="hires_add.mhtml?group_id=<% $group->id %>">
				<% $group->name %> Add New Hires
			</a>

			<a class="redblock" href="/register/judges/print.mhtml?group_id=<% $group->id %>">
				<% $group->name %> Printout
			</a>

			<a class="redblock" href="/register/judges/csv.mhtml?group_id=<% $group->id %>">
				<% $group->name %> Spreadsheet
			</a>

				

			<br />

%		} else { 

			<h3>Printouts</h3>

%		}

		<a class="blueblock" href="/register/judges/print.mhtml">All-Judge Printout</a>
	
		<a class="blueblock" href="/register/judges/csv.mhtml">All-Judge Spreadsheet</a>

%		my $orig_group_id = $group->id if $group;

%		my $notfirst;

%		foreach my $group (@groups) { 

%			next if ($orig_group_id && $group->id != $orig_group_id);

%			$m->print("<h3>Ratings</h3>") unless $notfirst++;
				
			<a class="redblock" href="/register/judges/strikes.mhtml?group_id=<% $group->id %>">
				<% $group->abbr %> Strikes & Conflicts
			</a>


%			if ($group->school_ratings || $group->comp_ratings) { 

%				$m->print("<h3>Ratings</h3>") unless $notfirst++;

				<a class="redblock" href="/register/judges/ratings.mhtml?group_id=<% $group->id %>">
					<% $group->abbr %> Ratings
				</a>

%			}

%		}


%		if ($whoami eq "roster") { 

			<h3>Other Rosters</h3>

%			foreach my $ogroup ($tourn->groups) {

%				next if $group->id == $ogroup->id;

				<a class="blueblock" href="roster.mhtml?group_id=<% $ogroup->id %>">
					<% $ogroup->name %> 
				</a>

%			}

%		}

%		if ($whoami eq "hires" || $whoami eq "hires_add") { 

			<h3>Judge Hires</h3>

%			foreach my $ogroup ($tourn->groups) {

%				next if $group->id == $ogroup->id;

				<a class="blueblock" href="hires.mhtml?group_id=<% $ogroup->id %>">
					<% $ogroup->name %> 
				</a>

%			}

			<br />
			<h3>Add Hires:</h3>

%			foreach my $group ($tourn->groups) {

				<a class="redblock" href="hires_add.mhtml?group_id=<% $group->id %>">
					Add Hires in <% $group->name %> 
				</a>

%			}
%		}

</div>
