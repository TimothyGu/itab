<%args>
	$school_id
	$fees => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id); 

	my $register = 0;
	$register++ if $school->registered < 1;

	$school->registered($register);

	if ($fees eq "paid") { 
		my ($fee, $feline_ref) = $m->comp("/funclib/school_fees.mas", school_id => $school_id);
		$school->paid_amount($fee);
	}

	$school->update;

	$m->redirect($Tab::url_prefix."/register/registration.mhtml?school_id=$school_id");

</%init>

