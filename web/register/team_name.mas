<%args>
	$tourn
	$name
	$comp_id
</%args>
<%init>

	my $comp = Tab::Comp->retrieve($comp_id);

	$name =~ s/&/and/g;

	$comp->name($name);
	$comp->update;
		
	my $err = "Competitor name changed to $name";
	$m->redirect("$Tab::url_prefix/register/entry/edit.mhtml?err=$err&comp_id=$comp_id");
	
		
</%init>
