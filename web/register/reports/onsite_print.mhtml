<%args>
	$tourn
	$session
</%args>
<%init>

	my $name = $tourn->name;
	$name =~ s/[\W_]//g;

    my $filename = "OnsiteCheckin-".$name."-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`;

    $m->comp("/funclib/printout.mas", filename => $filename, head => 1 );

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);
    
    open (TEXOUT, ">>$filepath.tex");

	print TEXOUT "{\\huge ". Tab::texify($tourn->name) ." Registration Check-in }\\\\ \n";
	print TEXOUT "\\normalsize\n";
	print TEXOUT "\\begin{tabular}{p{2.0in}p{1.25in}p{1.0in}p{.5in}p{.5in}p{.25in}}\n";
	print TEXOUT "\\multicolumn{4}{l}{\\large}\\\\\n";
	print TEXOUT "School & Contact & Phone & Due & Paid & Here \\\\ \n";
	print TEXOUT "\\hline \n";
	print TEXOUT "\\end{tabular}\n\\\\ \n";
	
	my @schools = sort { $a->name cmp $b->name } $tourn->schools;

	my $i;

	my $switch; 

	foreach my $school (@schools) { 

		my ($fee, $feline_ref)  = $m->comp("/funclib/school_fees.mas", school_id => $school->id);

		next unless $fee;

		next if ($school->name eq "Unaffiliated");

		print TEXOUT "\\begin{tabular}{p{2.0in}p{1.25in}p{1.0in}p{.5in}p{.5in}p{.25in}}\n";
		print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\[5.5pt\]\[5.5pt\]\n" if ($switch++ % 2);
		print TEXOUT " \\footnotesize ". &Tab::texify($school->short_name);
		print TEXOUT " & \\footnotesize ".&Tab::texify($school->contact_name);
		print TEXOUT " & ".&Tab::texify($school->contact_number);
		print TEXOUT " & ". sprintf ("%.2f", $fee)." & ";
		print TEXOUT sprintf ("%.2f", $school->paid) if $school->paid;
		print TEXOUT "& ";
		print TEXOUT " Y " if $school->registered;
		print TEXOUT "\\\\ \n";
		print TEXOUT "\\end{tabular}\n\\\\ \n";
	}

	close TEXOUT;

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );

</%init>

<div id="content">

<p><% $filename %></p>
