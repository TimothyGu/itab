<%args>
	$tourn
	$session
	$sort_by => "name"
</%args>
<%init>

	my $name = $tourn->name;
	$name =~ s/[\W_]//g;

    my $filename = "SchoolList-".$name."-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`;

    $m->comp("/funclib/printout.mas", filename => $filename, head => 1 );

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);
    
    open (TEXOUT, ">>$filepath.tex");

	print TEXOUT "\\medskip\n";
	print TEXOUT "{\\Large Schools attending ". Tab::texify($tourn->name) ." }\\\\ \n";

	my @schools = $tourn->schools;
	@schools = sort { $a->name cmp $b->name } @schools;
	@schools = sort { $a->code cmp $b->code } @schools if ($sort_by eq "code");
	@schools = sort { $a->region->code cmp $b->region->code } @schools if ($sort_by eq "region");

	my $switch = 1;

	my $tabular = "\\begin{tabular}{";
	$tabular = "\\begin{tabular}{p{.5in}" if $tourn->setting("school_codes");

	if ($tourn->setting("ncfl") || $tourn->setting("regions")) { 
	
		$tabular .= "p{4.0in}p{.5in}p{.5in}p{.75in}}\n";

	} else { 

		$tabular .= "p{4.0in}p{.5in}p{.75in}}\n";

	}

	foreach my $school (@schools) { 

		next if ($school->name eq "Unaffiliated");

		print TEXOUT $tabular;
		print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\n" if ($switch++ % 2);

		print TEXOUT  &Tab::texify($school->code)." & ".&Tab::texify($school->name);
		print TEXOUT " & ";
		print TEXOUT " ".&Tab::texify($school->chapter->country);
		print TEXOUT "/".&Tab::texify($school->chapter->state) if $school->chapter->state;
		print TEXOUT " & " if $school->region;
		print TEXOUT " ".&Tab::texify($school->region->code)."" if $school->region;
		print TEXOUT " & ";
		print TEXOUT " Checked In " if $school->registered;

		print TEXOUT "\\\\ \n";
		print TEXOUT "\\end{tabular}\n";

		print TEXOUT "\\newline\n";

	}

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );

</%init>

