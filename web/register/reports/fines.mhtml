<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<& "menu.mas", tourn => $tourn, whoami => "fines" &>

	<div class="left huge">

		<h2>Fines</h2>

		<table cellspacing="1" cellpadding="4" width="100%">

%		foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 

%			my @fines = Tab::SchoolFine->search( school => $school->id );
%			next unless @fines;

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td>
					<% $school->short_name %>
				</td>

				<td>
%					foreach my $fine (@fines) { 
						<a href="/register/invoice.mhtml?school_id=<% $school->id %>" class="white block">
							<% $fine->reason %>
							<span class="spacey">
								$<% $fine->amount %>
							</span>
						</a>
%					}
				</td>

			</tr>

%		}

		</table>

	</div>




