<%args>
	$tourn
	$account
	$name
	$judge_id
</%args>
<%init> 

	my $search_name =$name."%";
	my @students = Tab::Student->search_like( last => $search_name );

	my $switch;

</%init>

	<div class="left huge">

		<h2>Multiple students named <% $name %></h2>

		<table cellpadding="5" width="100%">

			<form action="strike_students_save.mhtml" method="post">
			<input type="hidden" name="judge_id" value="<% $judge_id %>">
			<input type="hidden" name="name" value="<% $name %>">

% 			foreach my $student (@students) { 

%				my $school = $student->chapter->school($tourn);
% 				my @entries = $student->entries($tourn);

% 				next unless @entries;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>> 
				
					<td>
						<% $student->first." ".$student->last %>
					</td>
					
					<td>
						<% $school->truncate_name %>
					</td>
					
					<td>
% 						foreach my $comp (@entries) { 
							<% $comp->event->abbr %> <% $comp->code %>
%						}
					</td>
					
					<td>
						<input type="checkbox" name="<% $student->id %>" id="<% $student->id %>" value="1">
						<label for="<% $student->id %>">
							Strike?
						</label>
					</td>

				</tr>
% 			} 

			<tr class="liblrow">

				<td colspan="4" align="right">
					<input type="submit" value="  Save Student Strikes  ">
					</form>
				</td>

			</tr>

		</table>
