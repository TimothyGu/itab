	<& judge_menu.mas, tourn => $tourn &> 

	<div id="left big">

		<h2>Judge Account Requests</h2>

		<table cellpadding="3" cellspacing="1" width="100%">

%		foreach my $judge ($m->comp("/funclib/judge_requests.mas", tourn => $tourn) { 

			 <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

			 	<td>
					<% $judge->code %>
				</td>

				<td>
					<% $judge->first." ".$judge->last %>
				</td>

				<td>
					<% $judge->acct_request->first." ".$judge->acct_request->first %>
				</td>

				<td>
					<% $judge->acct_request->email %>
				</td>

				<td class="centeralign">
					<a class="dkgreen block" href="req_approve.mhtml?judge_id=<% $judge->id %>">
						Approve
					</a>
				</td>

				<td class="centeralign">
					<a class="dkred block" href="req_deny.mhtml?judge_id=<% $judge->id %>">
						Deny
					</a>
				</td>

			</tr>

%		}

		</table>

	</div>
