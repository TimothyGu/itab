<%args>
	$judge_id => undef
</%args>
<%init>

	my $msg;
	
	if ($judge_id) { 
		my $judge = Tab::Judge->retrieve($judge_id);
		$msg = $judge->acct_request->email." has been denied access to the judge ".$judge->first." ".$judge->last;
		$judge->account("");
		$judge->update;
	}

	$m->redirect("edit.mhtml?judge_id=".$judge_id."&msg=$msg");

</%init>
