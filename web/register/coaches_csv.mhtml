<%args>
	$circuit
	$tourn
	$account
	$session
</%args>
<%init>

	my @schools = sort {$a->name cmp $b->name} $tourn->schools;

	my $filename = "Contacts-".$tourn->id."-".$session->id;

	my $filepath = $Tab::file_root."/tmp/".$filename;
	my $garbage = `rm -f $filepath.*`;

	open (CSVOUT, ">$filepath.csv");

	print CSVOUT "School,";
	print CSVOUT "First,";
	print CSVOUT "Last,";
	print CSVOUT "Email \n";

	foreach my $school (@schools) { 

		foreach my $coach ($school->chapter->coaches) { 

			print CSVOUT "\"";
			print CSVOUT $school->name."\",\"";
			print CSVOUT $coach->first."\",\"";
			print CSVOUT $coach->last."\",\"";
			print CSVOUT $coach->email."\"\n";
		}
	}

	close CSVOUT;

	$m->redirect("$Tab::url_prefix/tmp/$filename.csv");

</%init>

<div id="content">

<p><% $filename %></p>
