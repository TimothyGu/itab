<%args>
	$tourn
	$err => undef
	$circuit
</%args>
<%init>

	my @schools = sort {ucfirst($a->name) cmp ucfirst($b->name)} $tourn->schools;

	my %used_schools = ();

	foreach my $school (@schools) {
		$used_schools{$school->chapter->id}++;
	}
	
</%init>

	<h2>Add a school to <% $tourn->name %></h2>

	<div class="left huge">


		<table cellpadding="5" width="100%">

			<tr>
				<th align="center">
					Add new school:
				</td>
			</tr>

			<tr>
				<td align="center">
				
					<form action="school_create.mhtml" method="post">

					<select name="chapter_id" size="30">

% 						foreach my $chapter (sort {$a->name cmp $b->name} $circuit->chapters) {

%							next if $used_schools{$chapter->id};

    						<option value="<% $chapter->id %>">
								<% $chapter->state." ".substr($chapter->name,0,35) %>
							</option>
% 						}

					</select>

				</td>
			</tr> 
			
			
			<tr class="liblrow">
				<td align="center">
					<input  type="submit" value="Add School">
					</form>
				</td>
			</tr>

		</table>

	</div>

	<div class="right small">

		<a class="blue block" href="reports.mhtml?class=stats">Statistics</a>

		<a class="chosenblock" href="reports.mhtml?class=manipulate">Manipulate registration</a>

		<a class="blue block" href="reports.mhtml?class=registration">Registration Data</a>

		<a class="blue block" href="reports.mhtml?class=packets">Registration Packets</a>

%		if ($tourn->setting("ncfl")) { 

			<a class="blue block" href="reports.mhtml?class=NCFL">NCFL specific reports</a>

%		}

		<a class="blue block" href="reports.mhtml?class=money">Financials</a>

	</div>


