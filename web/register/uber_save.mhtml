<%args>
	$account
	$judge_id => undef
	$uber_id => undef
	$first => undef
	$last => undef
	$cell => undef
	$started => undef
	$gender => undef
	$notes => undef
	$paradigm => undef
</%args>
<%init>

	my $uber = Tab::Uber->retrieve($uber_id);
	my $judge = Tab::Judge->retrieve($judge_id);

	unless ($uber_id) {

		my $err = "You did not select a judge that exists.  Please try again";
		$m->redirect("$Tab::url_prefix/register/registration.mhtml");

	}

	$uber->first($first);
	$uber->last($last);
	$uber->cell($cell);
	$uber->started($started);
	$uber->gender($gender);
	$uber->notes($notes);
	$uber->paradigm($paradigm);

	if ($judge) {

		$judge->first($first);
		$judge->last($last);
		$judge->cell($cell);
		$judge->gender($gender);
		$judge->paradigm($paradigm);
		$judge->update;
	
	}

	$uber->update;

	my $msg = "Judge information for $first $last updated.";

	$m->redirect("/register/uber_edit.mhtml?uber_id=".$uber->id."&msg=$msg");

</%init>
