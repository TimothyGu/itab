<%args>
	$tourn
	$account
	$school_id => undef;
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	my $chapter = $school->chapter;

	my $tz = $account->tz if $account;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);
	$now->subtract( days => 1 );

	my $switch;

</%init>

	<div class="left huge">

		<h2>Add a student:</h2>

		<table cellpadding="5" cellspacing="1" width="100%" >

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
				
				<td class="rightalign">
					<form action="student_save.mhtml" method="post">
					<input type="hidden" name="school_id" value="<% $school->id %>">
					First Name:
				</td>
				
				<td>
					<input type="text" name="first" size="20" value="">
				</td>

			</tr> 
			
			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Last Name:
				</td>
				
				<td>
					<input type="text" name="last" size="20" value="">
				</td>

			</tr> 
			
			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Novice:
				</td>
				
				<td>
					<input type="checkbox" name="novice" value="1" >
				</td> 

			</tr> 
			
			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Gender:
				</td>
				
				<td>
					<input type="radio" name="gender" value="M"> M
					<input type="radio" name="gender" value="F"> F
				</td>
			</tr> 
			
			<tr class="liblrow">

				<td colspan="2" class="rightalign">
					<input  type="submit" name="twitch" value="  Add Student ">
					</form>
				</td>
				
			</tr>

		</table>

	</div>

	<& entry_menu.mas, tourn => $tourn, school => $school &>


