<%args>
	$circuit
	$account
</%args>
<%init>

	my $switch;

</%init>

	<table width="100%">

		<tr>
			<td width="100%">
				<h2>Classes of membership for <% $circuit->short_name %></h2>
			</td>

		</tr>

	</table>

	<table width="100%" cellpadding="5" cellspacing="1">

%		if ($circuit->memberships) {

			<tr class="lirdrow">
				<th></th>
				<th>Name</th>
				<th>Dues</th>
				<th colspan="3">
				</th>
			</tr>

%		}

%		foreach my $membership ($circuit->memberships) {

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<td>
					<a class="white block" href="membership_edit.mhtml?membership_id=<% $membership->id %>">
						Edit
					</a>
				</td>

				<td>
					<% $membership->name %>
				</td>

				<td>
					$<% $membership->dues %>
				</td>

				<td>
					<a class="white block" href="membership_rm.mhtml?membership_id=<% $membership->id %>">
						Delete
					</a>
				</td>

			</tr>

%		}

		<tr>
			<td style="padding-top: 20px;">

			</td>
		</tr>

		<tr class="liblrow">

			<td colspan="5" class="right">
				<form action="membership_edit.mhtml" method="post">
				<input type="submit" value="   Add New Membership Class   " >
				</form>
			</td>

		</tr>

	</table>


