<%args>
	$school
	$tourn
	$debug => 1
</%args>
<%init>

	system "$Tab::logger Called the school count method for ".$school->name if $debug;

	Tab::Entry->columns( TEMP => "class_id");

	Tab::Entry->set_sql( school_entries_with_class => "
		select entry.*,event.class as class_id
		from entry,event
		where entry.event = event.id
		and entry.school = ?
		and entry.dropped != 1
		order by entry.sweeps_points DESC");

	my @entries = Tab::Entry->search_school_entries_with_class($school->id);

	my %use_entries = ();

	my $entry_limit = $tourn->method->sweep_per_event;
	my $event_limit = $tourn->method->sweep_event_total;

	if ($tourn->method->sweep_class_based) { 

		my %classes = (); 
	
		COMP:
		foreach my $entry (@entries) { 


			if ($entry_limit > 0 && $classes{$entry->event->class->id} == $entry_limit) {
				next COMP;
			}

			$use_entries{$entry->id}++;
			$classes{$entry->event->class->id}++;

		}

	} else { 

		my $num_events;

		my %events = ();

		my $events_at_limit;

		foreach my $entry (@entries) {

            last if $event_limit > 0 && $events_at_limit == $event_limit;

            next if $entry_limit > 0 && $events{$entry->event->id} >= $entry_limit;

            $use_entries{$entry->id}++;

            $events{$entry->event->id}++;

			$events_at_limit++ if $events{$entry->event->id} >= $entry_limit;

        }

	}

	my $wildcards = $tourn->method->sweep_wildcards;
	my $use;

	if ($wildcards) { 

	foreach my $entry (@entries) { 
		last if $use == $wildcards;
		unless ($use_entries{$entry->id}) { 
			$use_entries{$entry->id}++;
			$use++;
	} }	} 

	return %use_entries;

</%init>
