<%args> 
	$event_id
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	foreach my $ballot ($event->ballots) { 

		$ballot->real_rank($ARGS{"rank_".$ballot->id});
		$ballot->real_points($ARGS{"points_".$ballot->id});

		$ballot->audit("1");
		$ballot->update;

	}

	my $msg = "Ranks have been saved";

	$m->redirect("re_enter.mhtml?event_id=$event_id&msg=$msg");
	



</%init>
