<%args>
	$tourn
	$sort_by => "name"
</%args>
<%init>

	my @regions = sort {$a->name cmp $b->name} $tourn->regions;
	@regions = sort {$b->cooke_pts <=> $a->cooke_pts} @regions if $sort_by eq "points";

	my $switch; 

</%init>

	<div id="rightsmall">
		<a class="blue block" href="/results/ncfl/cooke_points.mhtml?sort_by=points">Sort by Points</a>
		<a class="blue block" href="/results/ncfl/cooke_points.mhtml?sort_by=name">Sort by Name</a>

	</div>

	<div id="leftbig">

		<h2>Diocese Cooke award points</h2>
		
		<table width="100%" cellspacing="1" cellpadding="5"> 
		
			<tr class="lirdrow">
			
				<th>
					<form action="cooke_save.mhtml" method="post"> 
					Diocese
				</th>
				
				<th>
					Cooke Points
				</th>
				
			</tr>

%			foreach my $region (@regions) { 

		    	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th>
						<% $region->name %>
					</th>
	
					<td align="center">
						<input type="text" size="5" name="<% $region->id %>" value="<% $region->cooke_pts %>">
					</td>

				</tr>

%			}

			<tr class="liblrow">

				<td colspan="2" align="right">
					<input type="submit" class="blue" value="    Save Cooke Award Points    ">
					</form>
				</td>

			</tr>
	
		</table>

	</div>

	<br style="clear: both;" />
