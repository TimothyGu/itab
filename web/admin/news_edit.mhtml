<%args>
	$account
	$switch => undef
	$tz
</%args>


	<div id="leftbig">

		<h2>Public Website</h2>

		<table cellpadding="3" cellspacing="1" width="100%">

			<tr class="liblrow">

				<th class="smaller">
					Title
				</th>
					
				<th class="smaller">
					Author
				</th>
					
				<th class="smaller">
					Posted
				</th>
					
				<th class="smaller">
					Editor
				</th>
					
				<th class="smaller">
					Edited
				</th>
					
				<th class="smaller">
					Public
				</th>

				<th>
				</th>

			</tr>

%			my @news_stories = Tab::News->search( sitewide => 1); 
%			@news_stories = sort {$a->posted->epoch <=> $b->posted->epoch} @news_stories;
%			@news_stories = sort {$b->pinned <=> $a->pinned} @news_stories;

% 			foreach my $story (@news_stories) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td class="smaller">
						<% $story->title %>
					</td>

					<td class="smaller">
						<% substr($story->author->first,0,1).". ".$story->author->last %>
					</td>

					<td class="smaller">
						<% Tab::niceshortdate($story->posted->set_time_zone($tz)) %>
					</td>

					<td class="smaller">
%						if ($story->edited_by) { 
							<% substr($story->edited_by->first,0,1).". ".$story->edited_by->last %>
%						}
					</td>

					<td class="smaller">
%						if ($story->edited_on) { 
							<% Tab::niceshortdate($story->edited_on->set_time_zone($tz)) %>
%						}
					</td>

					<td class="smallctr">
						<a href="story_activate.mhtml?story_id=<% $story->id %>" class="whiteblock">
						<% ($story->active) ? "Yes" : "No" %>
						</a>
					</td>

					<td class="smallctr">
						<a href="story_edit.mhtml?story_id=<% $story->id %>" class="whiteblock">
							Edit
						</a>
					</td>

				</tr>
% 			}

		</table>

	</div>

	<div id="rightsmall">
	
		<a href="story_edit.mhtml" class="blue block">
			Create a new news article
		</a>

		<h4>Search (Titles):</h4>

		<table cellpadding="3" cellspacing="1" width="100%">

			<tr <% ($switch++% 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					<form action="news_search.mhtml" method="post">
					<input type="text" name="search_title" >
				</td>

				<td class="center">
					<input class="blue" type="submit" value="Search">
					</form>
				</td>
			
			</tr>

		</table>

	</div>

