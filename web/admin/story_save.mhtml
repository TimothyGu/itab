<%args>
	$account
	$title
	$blurb
	$pinned => undef
	$story_id => undef
	$attach => undef
	$active => undef
</%args>
<%init>

	my $story = Tab::News->retrieve($story_id) if $story_id;

	chomp $blurb;
	chomp $title;

	my $now = DateTime->now;

	my $err;

	if ($story)  { 

		$story->title($title);
		$story->active($active);
		$story->blurb($blurb);
		$story->edited_by($account->id);
		$story->edited_on($now);
		$story->pinned($pinned);
		$story->update;

		$err = "Changes to ". $story->title ." saved";

	} else {  

		$story = Tab::News->create({ 
			title => $title,
			author => $account->id,
			active => $active,
			pinned => $pinned,
			sitewide => 1,
			posted => $now,
			blurb => $blurb,
		});

		$err = "Story ". $story->title ." created ";

