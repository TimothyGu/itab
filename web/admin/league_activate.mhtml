<%args>
	$league_id
</%args>
<%init>

	my $league = Tab::League->retrieve($league_id);

	if ($league->active) {

		$league->active("0");

	} else {

		$league->active("1"); 

	}

	$league->update;

	my $msg = $league->short_name." has been marked ";
	$msg .= ($league->active) ? "active" : "inactive";

	$m->redirect("/admin/leagues.mhtml?msg=$msg");


</%init>
