<%args>
	$league_id
</%args>
<%init>

	my $league = Tab::League->retrieve($league_id);

	foreach my $chapter ($league->chapters) {

		next unless $ARGS{$chapter->id};

		my $cls = $chapter->league_membership($league);


		$cls->active($ARGS{"act_".$chapter->id});
		$cls->full_member($ARGS{"full_".$chapter->id});
		$cls->membership($ARGS{"mem_".$chapter->id});
		$cls->code($ARGS{"code_".$chapter->id});
		$cls->region($ARGS{"region_".$chapter->id}) if $league->region_based;

		$chapter->state($ARGS{"state_".$chapter->id});

		$cls->update;
		$chapter->update;

	}

	$m->redirect("chapters_search.mhtml?league_id=".$league_id);

</%init>
