<%args> 
	$chapter_id => undef
	$session
	$account
</%args>
<%init> 

	my $chapter = Tab::Chapter->retrieve($chapter_id) if $chapter_id;

</%init> 

	<div class="left huge">

		<center>

% 		if ($chapter_id) { 

			<h2><% $chapter->name %> </h2>

% 		} else { 

			<h2>Create a new chapter </h2> 
%		}

		<& /admin/chapter/chapter_name.mas, chapter => $chapter &>

		<& /admin/chapter/chapter_rosters.mas, chapter => $chapter &>
	
		<& /admin/chapter/chapter_credit.mas, chapter => $chapter &>

		<& /admin/chapter/chapter_access.mas, chapter => $chapter &>

		<& /admin/chapter/memberships.mas, chapter => $chapter &>

		<hr />

		<table width="100%">
			<tr class="lirdrow">
				<td colspan="5" class="rightalign">
					<form action="chapter_rm.mhtml" method="post">
					<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
					<input class="red" type="submit" value="Delete Chapter">
					</form>
				</td>
			</tr>
		</table>

	</div>

	<& /admin/chapter/chapter_menu.mas, chapter => $chapter &>

