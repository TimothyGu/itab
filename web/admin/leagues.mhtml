<%args>
	$account
</%args>
<%init>

	my @leagues = Tab::League->retrieve_all;
	@leagues = sort {$a->name cmp $b->name} @leagues;

</%init>

	<div id="leftbig">

		<h2>Leagues at <% $Tab::url_prefix %></h2>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="liblrow">

				<th class="smaller">
					League
				</th>

				<th class="smaller">
					Abbr.
				</th>

				<th class="smaller">
					Locale
				</th>

				<th class="smaller">
					Active
				</th>

				<th class="smaller">
					Tourneys
				</th>
				
				<th>
				</th>

			</tr>


%			my $switch; 

%			foreach my $league (@leagues) { 
	
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	
					<th class="smaller"> 
						<% $league->name %> 
					</th>
	
					<td class="smallctr">
						<% $league->short_name %> 
					</td>

					<td class="smallctr">
						<% $league->state %> 
					</td>
	
					<td class="smallctr">
						<a href="league_activate.mhtml?league_id=<% $league->id %>" class="whiteblock">
						<% ($league->active) ? "Yes" : "No" %>
						</a>
					</td>

					<td class="smallctr">
						<% scalar ($league->tournaments( approved => 1)) %> 
					</td>

					<td class="smallctr">
						<a href="/user/league/league_select.mhtml?league_id=<% $league->id %>" class="whiteblock">
							Edit
						</a>
					</td>

				</tr>

%			}

		</table>

	</div>

	<div id="rightsmall">

        <& /user/menu.mas, account => $account &>

	</div>
