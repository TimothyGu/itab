<%args>
	$staff_id
	$circuit_id
	$tourn_id
</%args>
<%perl>

	my $staff = Tab::TournAdmin->retrieve($staff_id);

	if ($staff->no_setup) { 

		$staff->no_setup(0);

	} else {

		$staff->no_setup(1);
	}

	$staff->update;

	my $msg = "Access to the setup menu changed for ".$staff->account->first." ".$staff->account->last;

	$m->redirect("tourn_edit.mhtml?tourn_id=$tourn_id&circuit_id=$circuit_id&msg=$msg");

</%perl>
