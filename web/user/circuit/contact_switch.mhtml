	$staff_id
	$circuit_id
	$tourn_id
</%args>
<%perl>

	my $staff = Tab::TournAdmin->retrieve($staff_id);

	if ($staff->contact) { 

		$staff->contact(0);

	} else {

		$staff->contact(1);

	}

	$staff->update;

	my $msg = "Public contact settings changed for ".$staff->account->first." ".$staff->account->last;

	$m->redirect("tourn_edit.mhtml?tourn_id=$tourn_id&circuit_id=$circuit_id&msg=$msg");

