<%args>
	$comp_id
	$student_id => undef
</%args>
<%init>

	unless ($student_id) { 
		my $err = "You must choose a student to save as part of that team";
		$m->redirect("team_members.mhtml?comp_id=$comp_id&err=$err");
	}

	my $comp = Tab::Entry->retrieve($comp_id);
	

	my $student = Tab::Student->retrieve($student_id);

	my $team_member = Tab::EntryStudent->create({ 
		comp => $comp_id,
		student => $student_id
	});

	my $msg .= $student->first." ".$student->last." has been added to ".$comp->name.", ";

	my $event_id = $comp->event->id;

	$m->redirect("team_members.mhtml?comp_id=$comp_id&school_id=".$comp->school->id."&msg=$msg");

</%init>
