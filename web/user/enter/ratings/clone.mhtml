<%args>
	$entry_id
	$clone_id
	$session
	$account
	$debug => 1
</%args>
<%init>

	my $now = DateTime->now;
	my $entry = Tab::Entry->retrieve($entry_id);
	my $clone = Tab::Entry->retrieve($clone_id);

	unless ($entry->school->id == $clone->school->id) { 

		$m->print("<p>Very freakin' clever.  Trying to clone the ratings of another school's debaters?</p>");
		$m->print("<p>But not clever enough.  Go away, and fear the wrath of Palmer</p>");
		$m->abort("");

	}

	foreach my $rating ($clone->ratings) { 

		system "$Tab::logger Copying ratings for judge ".$rating->judge->id if $debug;

		my $new_rating = $rating->copy;

		$new_rating->entry($entry->id);
		$new_rating->entered($now);
		$new_rating->update;

	}

	my $msg = "Ratings for ".$clone->team_name." have been copied from ".$entry->team_name;

	$m->redirect("/user/tourn/entry/ratings/entry_ratings.mhtml?school_id=".$entry->school->id."&entry_id=".$entry->id."&group_id=".$entry->event->judge_group->id."&style=entry_ratings&msg=".$msg);


</%init>

