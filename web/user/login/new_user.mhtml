<%args>
	$err => undef
	$first => undef
	$last => undef
	$email => undef
	$phone => undef
</%args>

	<div class="left huge">

		<h2>Create your tabroom.com account</h2>

		<table cellpadding="5" cellspacing="1" width="97%" style="margin-left: 15px;">  
		
			<tr class="evenrow">

				<td>
					First Name:
				</td>

				<td>
					<form action="new_user_save.mhtml" method="post">
					<input value="<% $first %>" type="text" name="first" size="30">
				</td>

			</tr> 
			
			<tr class="oddrow">
			
				<td>
					Last Name:
				</td>
				
				<td>
					<input value="<% $last %>" type="text" name="last" size="30">
				</td> 

			</tr> 
			
			<tr class="evenrow">
			
				<td>
					Email Address:
				</td>
				
				<td>
					<input value="<% $email %>" type="text" name="email" size="30">
				</td>
				
			</tr> 
			
			<tr class="oddrow">

				<td>
					Phone Number:
				</td>
				
				<td>
					<input value="<% $phone %>" type="text" name="phone" size="30">
				</td>

			</tr> 
			
			<tr class="evenrow">
			
				<td>
					Password:
				</td>
				
				<td>
					<input type="password" name="pass1" size="30">
				</td>
				
			</tr> 
			
			<tr class="oddrow">
			
				<td>
					Repeat the Password:
				</td>
				
				<td>
					<input type="password" name="pass2" size="30">
				</td>
				
			</tr> 
			
			<tr class="liblrow">
				<td colspan="2" align="right">
					<input  type="submit" value="Create Account">
					</form>
				</td>
			</tr>
			
		</table>

	</div>

	<div class="right small" style="padding-left: 8px; font-size: 95%;">

	</div>

