<%args>
	$account
	$name => undef
	$circuit_id => undef
	$start => undef
	$end => undef
	$reg_start => undef
	$reg_starttime => "5:00 P"
	$reg_end => undef
	$reg_endtime => "5:00 P"
	$judge => undef
	$judgetime => "5:00 P"
	$drops => undef
	$dropstime => "5:00 P"
	$frozen => undef
	$frozentime => "5:00 P"
	$fines => undef
	$finestime => "5:00 P"
</%args>
<%init>

	my $return;

	unless ($name) { 
		$return = "You must choose a tournament name <br />";
	}
	 
	unless ($circuit_id) { 
		$return .= "You must select a circuit.  If your tournament is a one-off
		and doesn't belong to a formal circuit, choose Invitaitonals <br />";
	}

	my $startdt;

	eval {
		my ($month,$day,$year) = split('/', $start);
		$startdt = DateTime->new( year => $year, month => $month, day => $day);
	};

	my $enddt;

	eval {
		my ($month,$day,$year) = split('/', $end);
		$enddt = DateTime->new( year => $year, month => $month, day => $day);
	};

	unless ($startdt) { 
		$return .= "You must enter a valid date for the start of your
		tournament. $start<br />";
	}

	unless ($enddt) { 
		$return .= "You must select a valid end date for your
		tournament.<br/>For a one day tournament choose the same date as the
		start. $end <br />";
	}

	if ($return) { 
		$m->redirect("request.mhtml?name=$name&circuit_id=$circuit_id&start=$start&end=$end&fullmsg=$return");
	}

	unless ($reg_start) { 
		$reg_start = $startdt->clone;
		$reg_start->subtract( months => 1);
		$reg_start = $reg_start->mdy('/');
	}

	unless ($reg_end) { 
		$reg_end = $startdt->clone;
		$reg_end->subtract( weeks => 1);
		$reg_end = $reg_end->mdy('/');
	}

	unless ($frozen) { 
		$frozen = $startdt->clone;
		$frozen->subtract( days => 3);
		$frozen = $frozen->mdy('/');
	}

	unless ($judge) { 
		$judge = $startdt->clone;
		$judge->subtract( days => 3);
		$judge = $judge->mdy('/');
	}

	unless ($drops) { 
		$drops = $startdt->clone;
		$drops->subtract( days => 3);
		$drops = $drops->mdy('/');
	}

	unless ($fines) { 
		$fines = $startdt->clone;
		$fines->subtract( days => 3);
		$fines = $fines->mdy('/');
	}

	my $circuit = Tab::Circuit->retrieve($circuit_id);

	my $switch;

</%init>

	<div class="left huge">

		<form action="location.mhtml" method="post">
		<input type="hidden" name="name" value="<% $name %>">
		<input type="hidden" name="circuit_id" value="<% $circuit_id %>">
		<input type="hidden" name="start" value="<% $start %>">
		<input type="hidden" name="end" value="<% $end %>">

		<h2>Set up registration deadlines</h2>

		<table cellpadding="5" cellspacing="1" width="100%">

			<& /funclib/datepicker.mas, id => "reg_start", max => $start &> 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Online registration opens:
				</th>

				<td class="right">
					<input type="text" name="reg_start" id="reg_start" size="10" value="<% $reg_start %>">
					at
					<& /funclib/timeselect.mas, name => "reg_starttime", time => $reg_starttime &>

				</td>

			</tr>

			<& /funclib/datepicker.mas, id => "reg_end" , max => $start &> 

			<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					New entries due by:
				</th>

				<td class="right">
					<input type="text" name="reg_end" id="reg_end" size="10" value="<% $reg_end %>">
					at
					<& /funclib/timeselect.mas, name => "reg_endtime", time => $reg_endtime &>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<td colspan="2" class="explain">
					You can also later set up per-event deadlines once your tournament
					is approved.  After this date, entries cannot be added, but can be
					dropped, name-changed, or judges added. 
				</td>

			</tr>

			<& /funclib/datepicker.mas, id =>"frozen" , max => $start &> 

            <tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Fees & Obligations frozen on:
                </th>

                <td class="right">
                    <input type="text" name="frozen" id="frozen" size="10" value="<% $frozen %>">
					at
					<& /funclib/timeselect.mas, name => "frozentime", time => $frozentime &>
                </td>

            </tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<td colspan="2" class="explain">
					After this date, drops will not delete the competitor from
					the system, and schools will still be charged entry fees and still
					be on the hook for judging for those entries.
				</td>

			</tr>

			<& /funclib/datepicker.mas, id =>"judge" , max => $start &> 

            <tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Judge information due:
                </th>

                <td class="right">
                    <input type="text" name="judge" id="judge" size="10" value="<% $judge %>">
					at
					<& /funclib/timeselect.mas, name => "judgetime", time => $judgetime &>
                </td>

            </tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<td colspan="2" class="explain">
					Deadline for judge adds, alterations and drops
				</td>

			</tr>

			<& /funclib/datepicker.mas, id =>"drops" , max => $start &> 

            <tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Registrants can drop & namechange until:
                </th>

                <td class="right">
                    <input type="text" name="drops" id="drops" size="10" value="<% $drops %>">
					at
					<& /funclib/timeselect.mas, name => "dropstime", time => $dropstime &>
                </td>

            </tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<td colspan="2" class="explain">

					Allow coaches to drop students and change names on their
					own.  I recommend you set this to just before you expect to
					panel or export the data to TRPC.  It'll reduce the hassle
					you have to deal with. 

				</td>

			</tr>

			<& /funclib/datepicker.mas, id =>"fines", max => $start &> 

            <tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Drop & Add Fines are levied after:
                </th>

                <td class="right">

                    <input type="text" name="fines" id="fines" size="10" value="<% $fines %>">
					at 
					<& /funclib/timeselect.mas, name => "finestime", time => $finestime &>

                </td>

            </tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<td colspan="2" class="explain">

					After this point, additional drop fines (in addition to
					registration fees) apply to dropped students.  You can set
					drop fine amounts once your tournament is approved.
					Recommend you set this for after you'll have paneled, to
					encourage people to report drops early.

				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="4" class="right">
					<input class="blue" type="submit" value="  Next: Tournament Location & Rules ">
					</form>
				</td>

			</tr>
		
		</table>

	</div>

	<% undef($switch) %>

	<div id="rightsmall">

		<h3>Tourn Info:</h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Name:
				</td>

				<td>
					<% $name %>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Start:
				</td>

				<td>
					<% $startdt->mdy %>
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					to:
				</td>
				
				<td>
					<% $enddt->mdy %>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Circuit:
				</td>

				<td>
					<% $circuit->name %>
				</td>
			</tr>

		</table>

	</div>

