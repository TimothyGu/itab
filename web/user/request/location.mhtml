<%args>
	$account
	$name => undef
	$webname => undef
	$start => undef
	$end => undef
	$reg_start => undef
	$reg_end => undef
	$drops => undef
	$judge => undef
	$frozen => undef
	$fines => undef
	$circuit_string => undef
	$state => undef
	$country => undef
	$error => undef
</%args>
<%init>

	my @sites;
	my @circuits;

	foreach my $circuit (Tab::Circuit->search( active => 1) ) { 

		if ($ARGS{$circuit->id}) { 
			$circuit_string .= "-" if $circuit_string;
			$circuit_string .= $circuit->id;
			push (@circuits, $circuit);
			push (@sites, $circuit->sites);
		}
	}

	foreach my $circuit_id (split(/-/, $circuit_string)) { 
		my $circuit = Tab::Circuit->retrieve($circuit_id);
		push (@circuits, $circuit);
		push (@sites, $circuit->sites);
	}

	my $return = "You must select at least one circuit" unless @circuits;

	if ($return) { 
        $m->redirect("circuit.mhtml?name=$name&webname=$webname&start=$start&end=$end&reg_start=$reg_start&reg_end=$reg_end&drops=$drops&judge=$judge&frozen=$frozen&fines=$fines&circuit_string=$circuit_string&error=$return");
	}

	#uniq
    my %seen = (); 
    @sites = grep { ! $seen{$_->id} ++ } @sites;
	@sites = sort {$a->name cmp $b->name} @sites;

    %seen = (); 
    @circuits = grep { ! $seen{$_->id} ++ } @circuits;
	@circuits = sort {$a->name cmp $b->name} @circuits;

	my $switch;

</%init>

	<div class="left huge">

		<form action="save.mhtml" method="post">
		<input type="hidden" name="name" value="<% $name %>">
		<input type="hidden" name="webname" value="<% $webname %>">
		<input type="hidden" name="circuit_string" value="<% $circuit_string %>">
		<input type="hidden" name="start" value="<% $start %>">
		<input type="hidden" name="end" value="<% $end %>">
		<input type="hidden" name="reg_start" value="<% $reg_start %>">
		<input type="hidden" name="reg_end" value="<% $reg_end %>">
		<input type="hidden" name="frozen" value="<% $frozen %>">
		<input type="hidden" name="fines" value="<% $fines %>">
		<input type="hidden" name="judge" value="<% $judge %>">
		<input type="hidden" name="drops" value="<% $drops %>">

		<h2>Tournament Location </h2>

%       if ($error) { 
            <p class="warning">
                <% $error %>
            </p>
%       }
	
		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($error) ? "class=\"lirdrow\"" : ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %> >

				<th>
					Choose an existing location.  This will auto-import existing rooms:
				</th>

			</tr>

			<tr <% ($error) ? "class=\"lirdrow\"" : ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %> >

				<td class="right">
					<select name="site_id" class="medium">

						<option value=""></option>
						

%						foreach my $site (sort {$a->name cmp $b->name} (@sites)) { 
							<option value="<% $site->id %>">
								<% $site->name %>
							</option>
%						}

					</select>
				</td>

			</tr>

			<tr <% ($error) ? "class=\"lirdrow\"" : ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %> >
				<th>
					Or, enter a new name (e.g. "Lexington High School" or "Yale University"):
				</th>
			</tr>

			<tr <% ($error) ? "class=\"lirdrow\"" : ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %> >
				<td class="rightalign">
					<input type="text" name="site_name" value="" class="medium">
				</td>
			</tr>

			<tr>
				<td>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				<th>
					Country:
				</th>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				<td class="rightalign">
					<select name="country" class="medium">
					<& "/funclib/country_select.mas", account => $account, country => $country &>
					</select>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				<th>
					State/Province (if applicable)
				</th>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				<td class="rightalign">
					<select name="state" class="medium">
					<& "/funclib/state_select.mas", account => $account, state => $state &>
					</select>
				</td>
			</tr>

			<tr class="liblrow">

				<td colspan="2" class="right">
					<input  type="submit" value="  Create Tournament ">
					</form>
				</td>

			</tr>
		
		</table>

	</div>

	<% undef($switch) %>

	<div class="right small">

	<div class="sidenote">

		<h4>Tournament Setup</h4>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<td colspan="2" class="smaller"> 
					<% $name %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Webname
				</td>

				<td class="smaller">
					<% $webname %>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Start
				</td>

				<td class="smaller">
					<% $start %>
				</td>

			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					End
				</td>
				
				<td class="smaller">
					<% $end %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Circuit<% (scalar @circuits > 1) ? "s" : "" %>
				</td>

				<td class="smaller">
%					my $notfirst;
%					foreach my $circuit (@circuits) { 
						<% $notfirst++ ? "," : "" %> <% $circuit->abbr %>
%					}
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Entry Opens
				</td>
				
				<td class="smaller">
					<% $reg_start %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Entries Due
				</td>
				
				<td class="smaller">
					<% $reg_end %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Judges Due
				</td>
				
				<td class="smaller">
					<% $judge %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Entry Freeze
				</td>
				
				<td class="smaller">
					<% $frozen %>
				</td>

			</tr>


			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Drops Online
				</td>
				
				<td class="smaller">
					<% $drops %>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller"> 
					Drop fines 
				</td>
				
				<td class="smaller">
					<% $fines %>
				</td>

			</tr>

		</table>

	</div>

	<% $circuit_string %>


