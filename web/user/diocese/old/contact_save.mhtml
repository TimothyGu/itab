<%args>
	$account
	$diocese_id
	$phone => undef
	$hotel => undef
</%args>
<%init>

	$account->phone($phone);
	$account->hotel($hotel);

	$account->update();	

	my $msg = "Hotel and phone information saved";

	$m->redirect("/user/diocese/diocese_view.mhtml?diocese_id=".$diocese_id."&msg=".$msg);

</%init>



