<%args>
	$credit_id
	$tourn_id => undef
</%args>
<%init>

	my $credit = Tab::Coach->retrieve($credit_id);

	my $name = $credit->name;
	my $chapter_id = $credit->chapter->id;

	$credit->delete;

	my $err = $name ." removed as a coach";

	$m->redirect("$Tab::url_prefix/user/diocese/chapter_edit.mhtml?chapter_id=$chapter_id&tourn_id=$tourn_id&err=$err");

</%init>	
