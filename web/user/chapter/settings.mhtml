<%args>
	$chapter_id
	$account
	$session
</%args>
<%init>

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my $switch;

	$m->comp("/user/chapter/auth.mas", chapter => $chapter, account => $account, session => $session);

</%init>

	<div class="left huge">

		<& /user/tabbar.mas, chapter => $chapter, whoami => "settings" &>

		<h2><% $chapter->name %> Settings</h2>

		<table cellpadding="5" cellspacing="1" width="95%" style="margin-left: 15px;">

			<tr class="evenrow">

				<th>
					School Name:
				</th>

				<td>
					<form action="chapter_save.mhtml" method="post"> 
					<input type="hidden" name="chapter_id" value="<% ($chapter) ? $chapter->id : ""%>">
					<input type="text" name="name" size="30" value="<% ($chapter) ? $chapter->name : "" %>">
				</td>

			</tr>

			<tr class="oddrow">

				<th>
					State:
				</th>

				<td>
					<input type="text" name="state" size="5" maxlength="2" value="<% ($chapter) ? $chapter->state : "" %>">
				</td>

			</tr>

			<tr class="liblrow">
		
				<td colspan="2" class="rightalign">
					<input type="submit" value="   Save School Info   ">
					</form>
				</td>
		
			</tr>

		</table>

% 		my @credits = $chapter->credits;
% 		@credits = sort {$a->name cmp $b->name} @credits;

		<h3>Coach names (for circuits that credit coaches)</h3>

		<table cellpadding="5" cellspacing="1" width="95%" style="margin-left: 15px;">

% 			foreach my $cred (@credits) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

					<td>
						Name:
					</td>

					<td>
						<% $cred->name %>
					</td>

					<td align="center">
						<form action="/user/chapter/credit_rm.mhtml" method="post">
						<input type="hidden" name="credit_id" value="<% $cred->id %>">
						<input type="submit" class="skinny" value="   Delete   "> 
						</form>
					</td>

				</tr>

% 			}

			<tr class="liblrow">

				<td>
					Add:
				</td>
	
				<td>
					<form action="/user/chapter/credit_save.mhtml" method="post"> 
					<input type="hidden" value="<% $chapter->id %>" name="chapter_id">
					<input type="text" size="25" name="name" value="Type name here" onfocus="value=''">
				</td>

				<td align="center">
					<input  type="submit" value="    Save    ">
					</form>
				</td>

			</tr>

		</table>

		<h3>Accounts with access to this tabroom.com chapter</h3>

		<table cellpadding="5" cellspacing="1" width="95%" style="margin-left: 15px;">

%			foreach my $coach ($chapter->coaches) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

    	    	    <td>
       		    	    <% $coach->first." ".$coach->last %>
					</td>

           			<td>
               			<% $coach->email %>
           			</td>

           			<td class="centeralign">
						<a class="white block" href="/user/chapter/coach_rm.mhtml?coach_id=<% $coach->id%>&chapter_id=<% $chapter->id%>">
							Remove
						</a>
		            </td>

	       		</tr>

%			}

			<tr class="liblrow">

				<th>
					Add:
				</th>
	
	       		<td>
					<form action="/user/chapter/coach_add.mhtml" method="post">
					<input type="hidden" name="chapter_id" value="<% $chapter->id%>">
					<input type="text" name="email" size="25" value="Enter coach's email address" onfocus="value=''">
				</td>
	
       			<td class="rightalign">
					<input type="submit"  value="   Grant    ">
					</form>
				</td>

			</tr>

		</table>

	</div>

	<div class="right small">

		<& /user/menu.mas, chapter => $chapter, account => $account &>

	</div>

