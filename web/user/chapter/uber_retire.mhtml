<%args>
	$uber_id
</%args>
<%init>

	my $uber = Tab::Uber->retrieve($uber_id);

	my $chapter = $uber->chapter;

	if ($uber->retired) { 

		$uber->retired(0);

	} else { 

		$uber->retired(1);

	}

	$uber->update;

	$m->redirect("$Tab::url_prefix/user/chapter/judges.mhtml?chapter_id=".$chapter->id."&show_retired=sure#$uber_id");

</%init>
