<%args>
	$lj_id
	$account
	$session
</%args>
<%init>

	my $lj = Tab::ChapterLeague->retrieve($lj_id); 

	my $chapter = $lj->chapter;
	my $league = $lj->league;

    $m->comp("/user/chapter/auth.mas", chapter => $chapter, account => $account, session => $session);

	$lj->delete();

	my $msg = "You have left the league ".$league->name;

	$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&msg=$msg");

</%init>

