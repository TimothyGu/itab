<%args>
	$student_id
	$many => undef;
</%args>
<%init>


	my $student = Tab::Student->retrieve($student_id);
	my $chapter = $student->chapter;

	my $retired = $student->retired;

	my $msg = $student->first." ".$student->last." ";

	if ($retired) { 
		$student->retired("");
		$msg .= "marked as active";
	} else { 
		$student->retired(1);
		$msg .= "marked as retired";
	}

	$student->update;

	$m->redirect("$Tab::url_prefix/user/chapter/students.mhtml?chapter_id=".$chapter->id."&show_grads=sure&msg=$msg#$many");

</%init>
