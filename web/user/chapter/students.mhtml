<%args>
	$account
	$chapter_id => undef
	$show_grads => undef
	$err => undef
	$sort_by => "last"
	$from => undef
	$tourn
</%args>
<%init>

	unless ($chapter_id) {
		my $err = "You haven't chosen a chapter.  Please choose at right";
		$m->redirect("/user/home.mhtml?err=$err");
	}

	my $chapter = Tab::Chapter->retrieve($chapter_id);


	my @students;
 
	if ($show_grads) { 

		@students = $chapter->students;

	} else {

		@students = $chapter->students( retired => 0 );

	}


	@students = sort {$a->last cmp $b->last} @students;

	@students = sort {$a->grad_year <=> $b->grad_year} @students if $sort_by eq "grad_year";

	@students = sort {$b->novice <=> $a->novice } @students if $sort_by eq "novice";

	@students = sort {$b->retired <=> $a->retired } @students if $sort_by eq "retired";

	my $message;

</%init>

	<div class="left huge">

		<h2><% $chapter->name %> Student Roster</h2>

		<& tabbar.mas, chapter => $chapter, whoami => "students" &> 
	
		<div class="left" style="margin-bottom: 10px;">
			<h4>
				<% scalar @students %> Students:
			</h4>
		</div>

		<table width="100%" cellpadding="3" cellspacing="1">

			<tr class="yellowrow">

				<th>
					<a class="white block" href="students.mhtml?chapter_id=<% $chapter_id %>&show_grads=<% $show_grads %>&sort_by=last"> 
						Name
					</a>
				</th>
				

				<th>
					<a class="white block" href="students.mhtml?chapter_id=<% $chapter_id %>&show_grads=<% $show_grads %>&sort_by=grad_year">
						Grad Year
					</a>
				</th>

				<th>
					Account
				</th>

				<th>
					<a class="white block" href="students.mhtml?chapter_id=<% $chapter_id %>&show_grads=<% $show_grads %>&sort_by=novice">
						Novice
					</a>
				</th>

%				if ($show_grads) { 
					<th class="centeralign">
						<a class="white block" href="students.mhtml?chapter_id=<% $chapter_id %>&show_grads=<% $show_grads %>&sort_by=retired">
							Retired
						</a>
					</th>
%				}


			</tr>

% 			my $switch; 

% 			foreach my $student (@students) { 

%				next if $student->retired &! $show_grads;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						<a id="<% $student->id %>"></a>
						<a class="white block" href="student_edit.mhtml?student_id=<% $student->id %>">
						<% $student->last.", ".$student->first %>
						</a>
					</td>

					<td class="centeralign">
						<% $student->grad_year %>
					</td>

					<td class="centeralign">
						<a class="white block" href="mailto:<% ($student->account) ? $student->account->email : "" %>">
						<% ($student->account) ? $student->account->email : "" %>
						</a>
					</td>

					<td class="centeralign">
						<a class="<% ($student->novice) ? "dkred" : "dkgreen" %> block" href="student_novice.mhtml?student_id=<% $student->id %><% scalar (@students) > 20 ? "&many=#".$student->id : "" %>">
							<% ($student->novice) ? "YES" : "NO" %>
						</a>
					</td>

%					if ($show_grads) { 
							
						<td class="centeralign">
							<a class="<% ($student->retired) ? "dkred" : "dkgreen" %> block" href="student_retire.mhtml?student_id=<% $student->id %><% scalar (@students) > 20 ? "&many=#".$student->id : "" %>" >
								<% ($student->retired) ? "YES" : "NO" %> 
							</a>
						</td>
%					}

				</tr>

% 			}

		</table>

	</div>

	<div class="right small">

        <div class="sidenote">

			<h4>Student Roster</h4>
    
            <a class="dkgreen block" href="student_edit.mhtml?chapter_id=<% $chapter->id %>">
                Add a new student
            </a>

			<a class="blue block" href="students.mhtml?show_grads=<% ($show_grads) ? "" : "a" %>&chapter_id=<% $chapter->id %>">
				<% ($show_grads) ? "Hide Graduates" : "Show Graduates" %>
			</a>

		</div>

		<& /user/menu.mas, chapter => $chapter, account => $account, tourn => $tourn &>

	</div>
	
