<%args>
	$account
	$entry_id => undef
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	my $tz = $entry->event->tourn->tz;
	$tz = $account->tz unless $tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);

</%init>

	<div class="left huge">


	</div>


	<div class="right small">


		<div class="sidenote">

%			my $prefs = $entry->event->judge_group->setting("prefs");
%			$prefs = "tiered" if $prefs eq "tiered_round";

%			if ($prefs && $entry->school->chapter->self_prefs) { 

				<h4>Pref Sheet</h4>

%					my $prefs_start = $entry->event->judge_group->setting("strike_start");
%					$prefs_start->set_time_zone($tz) if $prefs_start;

%					if ($prefs_start && $now < $prefs_start) { 

						<div class="evenrow block">
							Prefs open at <% Tab::niceshortdt($prefs_start)." ".Tab::tzname($tz) %>
						</div>

%					} else { 
						<a class="blue block nowrap" href="/user/enter/ratings/<% $prefs %>_prefs.mhtml?entry_id=<% $entry->id %>&school_id=<% $entry->school->id %>&group_id=<% $entry->event->judge_group->id %>#yo">
							Prefs for <% $entry->code %>
						</a>
%					}

%			}

			<h4>Details</h4>

			<div class="block evenrow">

				<span class="smallishspan">
					Division:
				</span>

				<span class="hundo nowrap">
					<% $entry->event->name %>
				</span>

			</div>

			<div class="block oddrow">

				<span class="smallishspan">
					Code:
				</span>

				<span class="hundo nowrap">
					<% $entry->code %>
				</span>

			</div>

			<div class="block evenrow">

				<span class="smallishspan">
					Name:
				</span>

				<span class="hundo nowrap">
					<% $entry->name %>
				</span>

			</div>

		</div>

	</div>
