<%args>
	$page_id => undef
	$title
	$parent_id => undef
	$content
</%args>
<%init>

	my $page;

	if ($page_id) { 

		$page = Tab::Webpage->retrieve($page_id);
		$page->title($title);
		$page->content($content);
		$page->parent($parent_id);
		$page->title($title);
		$page->update;

	} else { 

		$page = Tab::Webpage->create({
			content => $content,
			parent  => $parent_id,
			title   => $title,
			help    => 1
		});

	}

	my $msg = "Help page $title saved";

	$m->redirect("index.mhtml?page_view=".$page->id."&msg=$msg");

</%init>

