							<% $reg_start && $reg_start > $now ? $reg_start->epoch : ""%>
							<% $reg_end && $reg_end < $now ? $reg_end->epoch : "" %>
						</span>
						<% ($open) ? "Due ".Tab::niceshortdate($reg_end)." <br />@".Tab::nicetime($reg_end)  : "" %>
						<% $reg_start > $now ? "Open ".Tab::niceshortdate($reg_start) : ""%>
						<% $reg_end < $now ? "Due ".Tab::niceshortdate($reg_end)." <br />@".Tab::nicetime($reg_end) : ""%>
						<% Tab::tzname($tz) %>
					</td>
			
				</tr>

%			}

