<%args> 
	$tourn_id
	$site_id => undef
	$webpage_id => undef
	$account => undef;
</%args>
<%init> 

    my $tourn = Tab::Tourn->retrieve($tourn_id);

	my $tz = $account->tz if $account;
	$tz = $tourn->tz if $account && not defined $tz;
	$tz = "UTC" unless $tz;

	my $tz_ob = DateTime::TimeZone->new( name => $tz );

	my $webpage = Tab::Webpage->retrieve($webpage_id);

	unless ($webpage) { 
		my @webpages = Tab::Webpage->search(tourn => $tourn->id);
		$webpage = shift @webpages if @webpages;
	}

	my $site = Tab::Site->retrieve($site_id) if $site_id;

</%init> 


	<div class="left huge">

		<span class="hugespan">

			<h2>
				<% $tourn->name %> 
			</h2>

		</span>

		<span class="medspan">
			<h4 style="text-align: right;">
				<% $tourn->location %>  
			</h4>
		</span>

		<br style="clear: both;">

		<& tourn_header.mas, tourn => $tourn, webpage_id => $webpage_id, account => $account &>

%		if ($site) { 

			<h3><% $site->name %></h3>

			<p>Host: <% ($site->host) ? $site->host->first." ".$site->host->last : "None Listed"%></p>

			<p><% $site->directions %></p>


%		} else { 

%			if ($webpage) { 

				<% ($webpage && $webpage->title ne "main") ? "<h3>".$webpage->title."</h3>" : "" %>

				<% ($webpage) ? $webpage->content : "" %>

%			} else { 

				<p>
					The <% $tourn->name %> is hosted on Tabroom.com, an online
					registration and tabulation website run for the community
					for free.  The tournament officials have not yet posted
					information in this space; but click the tabs above, and
					see the details & contact information at right, to see more
					information about the tournament as it comes available.  
				</p>

				<p>
					If registration is open, there will be a tab above to
					register.  You will need to have <a
					href="/user/login/new_user.mhtml">created a tabroom.com
					account</a> before you can register for this tournament.
				</p>

%			}

%		}

	</div>

	<div class="right small">

		<div class="sidenote">

			<h4>Info</h4>

%   		if ($tourn->setting("invite")) { 
				<a class="dkgreen block" href="/files/tourns/<% $tourn->id."/".$tourn->setting("invite") %>">
					Tournament Invitation
				</a>
%   		}

%   		if ($tourn->setting("bills")) { 
				<a class="dkgreen block" href="/files/tourns/<% $tourn->id."/".$tourn->setting("bills") %>">
					Congress Legislation
				</a>
%   		}

			<h6>Circuit(s)</h6> 

%			foreach my $circuit ($m->comp('/funclib/tourn_circuits.mas', tourn => $tourn)) { 
				<a class="blue nowrap  block" href="/index/circuit/index.mhtml?circuit_id=<% $circuit->id %>">
					<% $circuit->name %>
				</a>
%			}

			<h6>Location</h6>

%			foreach my $site ($m->comp("/funclib/tourn_sites.mas", tourn => $tourn)) {
				<a class="<% ($site_id == $site->id) ? "chosenblock" : "blue block" %>" href="index.mhtml?site_id=<% $site->id %>&tourn_id=<% $tourn_id %>">
					<% $site->name %>
				</a>
%			}

			<h6>Contacts</h6> 

%			foreach my $contact ($m->comp("/funclib/tourn_admins.mas", tourn => $tourn, contact => 1)) { 
				<a class="blue block" href="mailto:<% $contact->email %>">
					<% $contact->first." ".$contact->last %>
				</a>
%			}

%			my $switch;

		</div>

		<div class="sidenote">

			<h4>Dates & Deadlines</h4>

			<span class="plain block">
%				my $now = DateTime->now( time_zone => $tz );
				Times are <% $tz_ob->short_name_for_datetime($now) %>
			</span>

			<table cellpadding="3" cellspacing="1" width="100%">
		
				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
						Tournament
					</th>

					<td class="smaller">
						<% ($tourn->start) ? Tab::niceshortdate($tourn->start->set_time_zone($tz)) : "" %>
						<% ($tourn->start->mdy ne $tourn->end->mdy) ? " to ".Tab::niceshortdate($tourn->end->set_time_zone($tz)) : "" %>
					</td>
				</tr>
		
				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
						Reg Opens
					</th>

					<td class="smaller">
						<% ($tourn->reg_start) ? Tab::niceshortdt($tourn->reg_start->set_time_zone($tz)) : "Not Set" %>
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
						Reg Close
					</th>

					<td class="smaller">
						<% ($tourn->reg_end) ? Tab::niceshortdt($tourn->reg_end->set_time_zone($tz)) : "Not Set" %>
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
						Fees Frozen
					</th>

					<td class="smaller">
%						my $freeze = $tourn->setting("freeze_deadline");
						<% ($freeze) ? Tab::niceshortdt($freeze->set_time_zone($tz)) : "Not Set" %>
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
						Judging Due
					</th>

					<td class="smaller">
%						my $judge = $tourn->setting("judge_deadline");
						<% ($judge) ? Tab::niceshortdt($judge->set_time_zone($tz)) : "Not Set" %>
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
	    	        <th class="smaller">
						Drop online
	    	        </th>

					<td class="smaller">
%						my $drop = $tourn->setting("drop_deadline");
						<% ($drop) ? Tab::niceshortdt($drop->set_time_zone($tz)) : "Not Set" %>
					</td>
	
	        	</tr> 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
					<th class="smaller">
        	        	Penalty fines
	    	        </th>

	        	    <td class="smaller">
%						my $fine = $tourn->setting("fine_deadline");
						<% ($fine) ? Tab::niceshortdt($fine->set_time_zone($tz)) : "Not Set" %>
					</td>

	    	    </tr>

			</table>

		</div>

	</div>

