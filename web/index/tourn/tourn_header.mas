<%args>
	$tourn_id => undef
	$tourn => undef
	$news_id => undef
</%args>
<%init>

	$tourn = Tab::Tournament->retrieve($tourn_id) if $tourn_id &! $tourn;

	my $now = DateTime->now;

	my $open++ if $tourn->method && $tourn->events && ($tourn->reg_end > $now) 
				&& ($now > $tourn->reg_start) &! ($tourn->circuit->diocese_based);

</%init>


%	 if ($tourn) { 

		<h2>
		    <% ($tourn->circuit->short_name) ? $tourn->circuit->short_name.": " : "" %>
			<% $tourn->name %>
		</h2>

		<ul id="tabnav">

			<li <% ($r->uri =~ /tourn\/index.mhtml/ && not defined ($news_id) ) ? "class=\"selected\"" : "" %>>
				 <a href="/index/tourn/index.mhtml?tourn_id=<% $tourn->id %>">Main</a>
			</li>

%			foreach my $news (sort {$a->display_order <=> $b->display_order} $tourn->news( active => 1)) {

				<li <% ($news->id == $news_id) ? "class=\"selected\"" : "" %>>
					<a href="index.mhtml?news_id=<% $news->id %>&tourn_id=<% $tourn->id %>"><% $news->title %></a>
				</li>

%			}

%   		if ($tourn->events) { 

				<li <% ($r->uri =~ /events/) ? "class=\"selected\"" : "" %>>
					 <a href="/index/tourn/events.mhtml?tourn_id=<% $tourn->id %>">Events</a>
				</li>

%			}

%   		if ($tourn->method && $tourn->method->publish_schools) {
				<li <% ($r->uri =~ /schools/) ? "class=\"selected\"" : "" %>>
					 <a href="/index/tourn/schools.mhtml?tourn_id=<% $tourn->id %>">Schools</a>
				</li>
%			}

%   		if (($tourn->field_reports) && ($now < $tourn->end) ) {
				<li <% ($r->uri =~ /fields/) ? "class=\"selected\"" : "" %>>
					 <a href="/index/tourn/fields.mhtml?tourn_id=<% $tourn->id %>">Fields</a>
				</li>
%			}

%   		if ($tourn->published_rounds || Tab::File->search( tournament => $tourn->id, posting => 1)) {
				<li <% ($r->uri =~ /postings/) ? "class=\"selected\"" : "" %>>
					 <a href="/index/tourn/postings/index.mhtml?tourn_id=<% $tourn->id %>">Postings</a>
				</li>
%			}

%   		if ($tourn->live_updates) { 

				<li <% ($r->uri =~ /updates/) ? "class=\"selected\"" : "" %>>
					 <a href="/index/tourn/updates/index.mhtml?tourn_id=<% $tourn->id %>">Live Updates</a>
				</li>

%			}

%			if ($open) { 

				<li>
					 <a href="/index/register.mhtml?tourn_id=<% $tourn->id %>">Register</a>
				</li>

%			}

%   		if ($tourn->results) { 

				<li>
					 <a href="/public_site/results/<% $tourn->circuit->id %>/<% $tourn->id %>/index.mhtml">
					 	Results
					</a>
				</li>

%			}

		</ul>

%	}


