				<a class="half inline blue block smallish padmore" href="update_remove.mhtml?jfollow_id=<% $judge->id %>&tourn_id=<% $tourn_id %>">
					Judge: <% $judge->judge->first." ".$judge->judge->last %>
				</a>
%			}


%			foreach my $judge (@{$judgeref}) { 
				<a class="half inline blue block smallish padmore" href="update_remove.mhtml?judge_id=<% $judge->id %>&tourn_id=<% $tourn_id %>">
