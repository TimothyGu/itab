				<a class="half inline blue block smallish padmore" href="update_remove.mhtml?follow_id=<% $entry->id %>&tourn_id=<% $tourn_id %>">
					Entry: <% $entry->entry->code.": ".$entry->entry->name %>
				</a>
%			}

