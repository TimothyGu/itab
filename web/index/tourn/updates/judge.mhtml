<%args>
	$tourn_id
	$judge_id 
</%args>
<%init>

	my $judge = Tab::Judge->retrieve($judge_id);
	my $group = $judge->judge_group if $judge;

	unless ($group && $group->live_updates) { 

		$m->print("That judge group is not eligible for live updates.  Quit messing around");
		$m->abort();

	}

</%init>


    <& sidebar.mas, tourn_id => $tourn_id, group_id => $group->id &>

	    <div id="lefthuge">

			<h3>Follow <% $judge->name %> from <% $judge->school->name %> in <% $judge->judge_group->abbr %></h3>

			<table cellpadding="5" cellspacing="1" width="95%" align="center">

				<tr class="evenrow">

					<th>
						<form action="judge_follow.mhtml" method="post">
						<input type="hidden" name="judge_id" value="<% $judge->id %>">
						<input type="hidden" name="tourn_id" value="<% $tourn_id %>">
						Cell Phone number (incl. area code):
					</th>

					<td>
						<input type="number" size="15" name="phone">
					</td>
	
				</tr>

				<tr class="oddrow">

					<th>
						Cell Phone Provider*
					</th>

					<td>
						<select name="domain">
							<& cell_domains.mas &>
						</select>
					</td>
	
				</tr>

				<tr class="evenrow">

					<th>
						Email Address:
					</th>

					<th>
						<input type="email" size="20" name="email">
					</th>

				</tr>

%				if ($judge->school && $judge->school->id) { 
				<tr class="oddrow">

					<th>
						<label for="all">
							Follow ALL judges in <% $group->abbr %> for <% $judge->school->name %>
						</label>
					</th>

					<td>
						<input type="checkbox" value="1" name="allschool" id="all">
					</td>
				</tr>
%				}

				<tr class="liblrow">

					<td colspan="2" align="right">

						<input type="submit" value=" Save Live Updates ">
						</form>
					</td>
				</tr>

			</table>

			<p style="padding-left: 25px; line-height: 15px; font-size: 95%;">
				* Please note this only works for cell providers with an email
				gateway.  Services like Google Voice that do not provide an 
				email gateway cannot get text updates, alas.  As a Google Voice 
				user, this annoys me too.
			</p>

		</div>

