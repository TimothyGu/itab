<%args>
	$year => undef
</%args>
<%perl>

	my @tournaments = Tab::Tournament->search( results => 1 );

	@tournaments = sort {$b->start <=> $a->start } @tournaments;

</%perl>

<h3>Tournaments results archive</h3>

<center>
<table cellpadding="5" cellspacing="1" width="85%">

<tr>
	<th>Tournament</th>
	<th>League</th>
	<th>Date</th>
</tr>

% my $switch;

% foreach my $tourn (@tournaments) { 

<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

	<th>
	<a  class="tournlist" 
		href="<% $Tab::url_prefix %>/public_site/results/<% $tourn->league->id %>/<% $tourn->id %>/index.mhtml"><% $tourn->name %></a></th>

	<td><% $tourn->league->short_name %></td>
	<td><% $tourn->start->mdy('/') %></td>

</tr>

% }

</table>

