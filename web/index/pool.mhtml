<%args>
	$pool_id
	$tourn_id
</%args>
<%init>

	my $pool = Tab::Pool->retrieve($pool_id);

	my $switch = 1;

</%init>


	<h2>Judges called for <% $pool->name %></h2>

	<table cellpadding="5" cellspacing="1" width="100%">

%		foreach my $judge ($pool->judges) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					<% $judge->code %>
				</td>

				<td>
					<% $judge->first." ".$judge->last %>
				</td>

				<td>
					<% $judge->school->name %>
				</td>

			</tr>

%		}

	</table>

	</div>

	<div id="tournlist" class="right">

		<a href="/index/postings.mhtml?tourn_id=<% $tourn_id %>">Return to Postings</a>

	</div>
