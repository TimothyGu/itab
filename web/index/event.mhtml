<%args> 
	$event_id
</%args>
<%init> 

	my $event = Tab::Event->retrieve($event_id);

	unless ($event) { 
		$m->print("That event does not exist");
		$m->abort;
	}

	my $tourn = $event->tournament;

	my $league = $tourn->league;

	my $switch;

</%init> 

	<h2>
		<% $event->name %> at <% $event->tournament->name %>
	</h2>

	<table cellpadding="4" cellspacing="1" width="100%">

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
			<th>
				Abbreviation:
			</th>
	
			<td>
				<% $event->abbr %>
			</td>
	
		</tr>
	
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
			<th>
				Type:
			</th>
	
			<td>
				<% ucfirst $event->type %>
			</td>
	
		</tr>
	
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
			<th>
				Entry Fee:
			</th>
	
			<td>
				$<% sprintf("%.2f", $event->fee) %> 
				<% ($tourn->method->per_student_fee) ? "(Plus \$".$tourn->method->per_student_fee."/student)" :  "" %>
			</td>
		</tr>
	
% 		if ($event->cap) { 
	
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
				<th>
					Entry Limit:
				</th>
	
				<td>
					<% $event->cap %>
				</td>
	
			</tr>
% 		}
	
% 		if ($event->school_cap) { 
	
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
				<th>
					Entry Limit Per School:
				</th>
				
				<td>
					<% $event->school_cap %>
				</td>
				
			</tr>
% 		}
	
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
			<th>
				Entry:
			</th>
	
			<td>
				<% ($event->team == 1) ? "Individuals" : "" %>
				<% ($event->team == 2) ? "Pairs" : "" %>
				<% ($event->team == 3) ? "Teams" : "" %>
			</td>
	
		</tr>
	
% 		if ($event->ballot) {

			<tr>
	
				<th>
					Sample Ballot:
				</th>
	
				<td>
					(<a href="<% $Tab::url_prefix%>/files/<% $league->id %>/tournaments/<% $event->tournament->id."/events/".$event->id."/".$event->ballot %>">Download</a>)
				</td>	
	
			</tr>
%  		}

		<tr>
			<td colspan="2">
				<h4>Event Description:</h4>
			</td>
		</tr>
	
		<tr>
			<td colspan="2">
				<% $event->text %>
			</td>
		</tr>
	
	</table>
