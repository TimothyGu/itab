<%args>
	$circuit
	$tourn
	$account
	$err => undef
	$school_id => undef
	$event_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	my $event = Tab::Event->retrieve($event_id) if $event_id;

	my @events = $tourn->events;
	my @schools = $tourn->schools;

	my $chapter = $school->chapter if $school;
	my @students = $m->comp("/funclib/students_evententer.mas", tourn => $tourn, event => $event, chapter => $chapter, circuit => $circuit) if $chapter;
		
	@schools = sort {$a->name cmp $b->name} @schools;
	@students = sort {$a->last cmp $b->last} @students;

</%init>

<h3>Add a student after paneling</h3>

<table cellpadding="3" width="100%">
<tr><td colspan="4"><h4>Event:</h4></td></tr>
<form action="lateadd.mhtml" method="post">
<tr><td><select name="event_id">
% foreach my $t_event (@events) { 
	<option value="<% $t_event->id %>"  
	<% ($t_event->id == $event_id) ? 'selected' : '' %> >
	<% $t_event->name %></option>
%}
</td>
<td><input  type="submit" value="Select Event"></td>
</tr></form>

%if ($event) { 

<tr><td colspan="4"><h4>School:</h4></td></tr>
<form action="lateadd.mhtml" method="post">
<input type="hidden" name="event_id" value="<% $event_id %>"> 
<tr><td><select name="school_id">
% foreach my $t_school (@schools) { 
%	next if $t_school->name eq "Unaffiliated"; 
	<option value="<% $t_school->id %>"  
	<% ($t_school->id == $school_id) ? 'selected' : '' %> >
	<% $t_school->chapter->name %></option>
%}
</td>
<td><input  type="submit" value="Select School"></td>
</tr></form>

%if ($school) { 
<form action="lateadd_save.mas" method="post">
<input type="hidden" name="event_id" value="<% $event_id %>"> 
<input type="hidden" name="school_id" value="<% $school_id %>"> 

% if ($event->team == 1) { 
<tr><td colspan="4"><h4>Student:</h4></td></tr>
<td><select name="student_id">
% 	foreach my $s_student (@students) { 
		<option value="<% $s_student->id %>"> 
		<% $s_student->first." ". $s_student->last %> </option>
% 	}
</td>
<td><input  type="submit" value="Select Student"></td>
</tr>
</form>

% } # end of if event team = 1 

% if ($event->team == 2) { 
<tr><td colspan="4"><h4>Students:</h4></td>
<tr>
<td><select name="student_id">
% 	foreach my $s_student (@students) { 
		<option value="<% $s_student->id %>">
		<% $s_student->first." ". $s_student->last %> </option>
% 	}
</td>
<td><select name="partner_id">
% 	foreach my $s_student (@students) { 
		<option value="<% $s_student->id %>">
		<% $s_student->first." ". $s_student->last %> </option>
% 	}
</td>
<td><input  type="submit" value="Select Students"></td>
</tr>
</form>

% } # end of if event team = 2 

% if ($event->team == 3) { 
<tr><td colspan="4"><h4>Team:</h4></td></tr>
<tr><td>Name:<input type="text" name="team_name" size="20"></td>
</td>
<td><input  type="submit" value="Set Team Name"></td>
</td>
</tr>
</form>

% } # end of if event team = 3


% } #end of if school
% } #end of if event 

</table>
