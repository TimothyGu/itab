<%args>
	$session
	$group_id	
	$tourn
	$codes => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $file = $group->abbr."-debate-cards-".$session->id;
	my $filename = $Tab::file_root."/tmp/".$file;
	
	my $garbage = `rm -f $filename.*`;
	
	open (TEXOUT, ">$filename.tex");

	print TEXOUT <<"EOF";
\\documentclass[10pt]{report}
\\usepackage{fullpage}
\\usepackage{helvet}
\\usepackage{multirow}
\\usepackage{nopageno}
\\usepackage{colortbl}
\\usepackage[hmargin=.5in,vmargin=.5in]{geometry}

\\renewcommand{\\familydefault}{\\sfdefault}
\\renewcommand{\\arraystretch}{1.2}

\\begin{document}
\\begin{center}

EOF

	close TEXOUT;
	my $switch; 

	foreach my $judge (sort {$a->code <=> $b->code} $group->judges) {

		next unless $judge->active;
		$switch++;

		$m->comp("/funclib/judge_debate_card.mas", 
			judge_id => $judge->id, 
			filename => $filename);

	}

	open (TEXOUT, ">>$filename.tex");
	print TEXOUT "\\end{center}\n";
	print TEXOUT "\\end{document}\n";
	close TEXOUT;

$garbage = `cd $Tab::file_root/tmp; $Tab::latex_path $filename.tex; $Tab::dvipdfm_path $filename.dvi`;
`rm -f $filename.tex $filename.log $filename.dvi $filename.aux`;
$m->redirect("$Tab::url_prefix/tmp/".$file.".pdf");

</%init>
