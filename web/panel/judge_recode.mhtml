<%args>
	$tourn
</%args>
<%init>

	my @judges = $tourn->judges;
	
	@judges = sort {$a->last cmp $b->last} @judges;
	@judges = sort {$a->school->code cmp $b->school->code} @judges;

	my $code = 1;

	foreach my $judge (@judges) { 

		$judge->code($code);
		$code++;
		$judge->update;
	}



</%init>


<p><% scalar @judges %> judges recoded.  Last code is <% $code %></p>


