<%args>
	$tourn
</%args>
<%perl>

	foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

		my @rounds = sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} $event->rounds;

		my $counter = 0;

		foreach my $r (@rounds) { 
	
			$counter++;
			$r->name($counter);
			$r->update;
		}

	
	}
	

</%perl>

