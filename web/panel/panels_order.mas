<%args>
	@panels
</%args>
<%init> 

	foreach my $panel (@panels) { 
	
		my @entries = $panel->entries;
		my $panel_score;

		foreach my $comp (@entries) {
			my $c_school = $comp->school;
			$panel_score = $panel_score + $c_school->score;
		}

		$panel->score($panel_score); 
		$panel->update;		

	}		

	@panels =  sort { $a->score cmp $b->score } @panels;

	return @panels;


</%init>

