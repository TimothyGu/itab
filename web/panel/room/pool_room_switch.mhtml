<%args>
	$room_id => undef
	$pool_id => undef
	$value => undef
</%args>
<%init>

	my $existing = Tab::RoomGroupRoom->search( room => $room_id, room_group => $pool_id )->first;

	if ($value && $room_id && $pool_id) { 

		unless ($existing) { 

			Tab::RoomGroupRoom->create({
				room => $room_id,
				room_group => $pool_id
			});
		}

	} else { 

		$existing->delete if $existing;
	}

</%init>

