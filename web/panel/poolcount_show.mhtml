<%args>
	$session
	$tourn
	$account
</%args>
<%init>

	my $switch;

</%init>


<table width="100%">
	
	<tr>
		<td width="100%">
			<h3>Judge pool counts for <% $tourn->name %></h3>
		</td>

		<td>
			<form action="poolcount_print.mhtml" method="post">
			<input type="submit"  value="  Print Pool List ">		
			</form>
		</td>

	</tr>

</table>

<center>

<table cellpadding="6" cellspacing="1" width="65%">

<tr class="bluerow">

	<th>Pool Name</th>

	<th>Number of Judges</th>

	<th></th>

</tr>

%  	foreach my $pool (sort {$a->name cmp $b->name} $tourn->pools) { 

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<td><% $pool->name %> <% ($pool->type eq "prelim") ? " Prelims" : "" %></td>
			<td align="center"><% scalar $pool->judges %></td>
			
			<td align="center">
				<form action="pool_judges.mhtml" method="post">
				<input type="hidden" name="pool_id" value="<% $pool->id %>">
				<input type="submit" value=" Show Judge Roster ">
				</form>
			</td>

		</tr>

%	}

</table>

