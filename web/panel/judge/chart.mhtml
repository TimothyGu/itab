<%args>
	$tourn
	$group_id => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my @judges;
	my %judge_rounds = ();

	if ($group) { 

		@judges = sort {$a->last cmp $b->last} $group->judges;

		my @rooms = $m->comp("/funclib/group_rooms.mas", group => $group);
		my @panels = $m->comp("/funclib/group_panels.mas", group => $group);
		my @rounds = $m->comp("/funclib/group_rounds.mas", group => $group);
		my @ballots = $m->comp("/funclib/group_ballots.mas", group => $group);
		my @standbys = $m->comp("/funclib/group_standbys.mas", group => $group, type => "time");
		my @timeslots = $m->comp("/funclib/group_timeslots.mas", group => $group);

		my %timeslot_start = ();
		foreach my $timeslot (@timeslots) { 
			$timeslot_start{$timeslot->id} = Tab::shorttime($timeslot->start->set_time_zone($tz));
		}

		my %round_label = ();
		foreach my $round (@rounds) { 
			$round_label{$round->id} = $timeslot_start{$round->timeslot->id};
		}

		my %room_name = ();
		foreach my $room (@rooms) { 
			$room_name{$room->id} = $room->name;
		}

		my %panel_label = ();
		foreach my $panel (@panels) { 
			$panel_label{$panel->id} = $round_label{$panel->round->id}." ".$panel->eventname." in ".$room_name{$panel->room->id};
		}

		my %used;
		foreach my $ballot (@ballots) { 
			next if $used{$ballot->panel->id};
			push @{$judge_rounds{$ballot->judge->id}}, $panel_label{$ballot->panel->id};
			$used{$ballot->panel->id}++;
		}

		foreach my $standby (@standbys) { 
			push @{$judge_rounds{$standby->judge->id}}, "Standby at ".$timeslot_start{$standby->pool->standby_timeslot->id};
		}

	}

</%init>

	<& /funclib/tablesorter.mas, table => "screwyou" &>

	<& menu.mas, tourn => $tourn, group => $group, whoami => "chart" &>

	<div class="left huge">

%		if ($group) { 

			<h2>Judges in <% $group->id %></h2>

			<table cellpadding="4" cellspacing="1" id="screwyou">

				<thead>

					<tr class="yellowrow">

						<th class="smaller">
							Sch
						</th>

						<th class="smaller">
							First
						</th>

						<th class="smaller">
							Last
						</th>

						<th class="smaller">
							Assignments
						</th>

						<th class="smaller">
							Total
						</th>

					</tr>

				</thead>

				<tbody>

%				foreach my $judge (@judges) { 

					<tr <% $judge->active ? "" : 'class="liblrow"' %>>

						<td class="smaller centeralign">
							<% $judge->school->code %>
						</td>

						<td class="smallish">
							<a class="plain block" href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>">
							<% $judge->first %>
							</a>
						</td>

						<td class="smallish">
							<a class="plain block" href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>">
							<% $judge->last %>
							</a>
						</td>

						<td class="smallish">
%							foreach my $string (@{$judge_rounds{$judge->id}}) {
								<span class="judgechart">
									<% $string %>
								</span>
%							}
							<% $judge->active ? "" : "Inactive" %>
							<% $judge->special ? "(".$judge->special.")" : "" %>
						</td>

						<td class="smallish">
							<% scalar @{$judge_rounds{$judge->id}} %>
						</td>

					</tr>
%				}

				</tbody>

			</table>

%		}

	</div>

