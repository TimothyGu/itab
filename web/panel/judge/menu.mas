<%args>
	$tourn
	$pool => undef
	$group => undef
	$event => undef
	$whoami => undef
</%args>
<%init>
	
</%init>

	<div class="right small">

%		if ($group) { 

			<div class="sidenote">

				<h4><% $group->name %></h4>

				<a class="<% $whoami eq "index" ? "dk" : "" %>blue block" href="index.mhtml?group_id=<% $group->id %>">
					Assign judges en masse
				</a>

				<a class="<% $whoami eq "chart" ? "dk" : "" %>blue block" href="chart.mhtml?group_id=<% $group->id %>">
					Judge assignment chart
				</a>

				<h4>Events</h4>

%				my @events = sort {$a->name cmp $b->name} $group->events;
%				@events = sort {$a->type cmp $b->type} @events;
%				my $last_type;

%				foreach my $oevent (@events) { 
					<a class="<% $event && $oevent->id == $event->id ? "dk" : ""%>blue nowrap block" 
						href="event.mhtml?event_id=<% $oevent->id %>">
						<% $oevent->name %> event setup
						
					</a>
%				}

			</div>

%		}

		<div class="sidenote">

			<h4>Judge Groups</h4>

%			foreach my $ogroup (sort {$a->abbr cmp $b->abbr} $tourn->groups) {
				<a class="<% $group && $group->id == $ogroup->id ? "dk" : "" %>blue block" 
					href="index.mhtml?group_id=<% $ogroup->id %>">
					<% $ogroup->name %> 
				</a>
%			}

		</div>

		<div class="sidenote">

			<h4>Judge Pools</h4>

			<a class="ltyellow block" href="pool.mhtml" style="margin-bottom: 5px;">
				Create New Judge Pool
			</a>

%			my @pools = $tourn->pools;

%			foreach my $opool (@pools) { 
				<a class="<% $pool && $opool->id == $pool->id? "dk" : ""%>blue nowrap block" href="pool.mhtml?pool_id=<% $opool->id %>">
					<% $opool->name %>
				</a>
%			}

		</div>

	</div>

