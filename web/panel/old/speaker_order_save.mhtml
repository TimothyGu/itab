<%args>
	$panel_id
	$entry_id => undef
</%args>
<%perl>

	my $panel = Tab::Panel->retrieve($panel_id);

	foreach my $o_entry ($panel->entries) { 

		my $order = $ARGS{$o_entry->id};

		$o_entry->setorder($order, $panel_id);
	}

	$m->redirect("/panel/speaker_order.mhtml?entry_id=".$entry_id) if $entry_id;
	$m->redirect("/panel/speaker_order.mhtml?panel_id=".$panel_id);

</%perl>
