<%args>
	$round_from_id
	$round_to_id
</%args>
<%perl>

	my $round_from = Tab::Round->retrieve($round_from_id);
	my $round_to = Tab::Round->retrieve($round_to_id);

	foreach my $panel ($round_from->panels) { 

		my $new_panel = $panel->copy();

		$new_panel->round($round_to->id);
		$new_panel->update;

		foreach my $ballot ($panel->ballots) {
			my $new_ballot = $ballot->copy();
			$new_ballot->panel($new_panel->id);
			$new_ballot->update;
		}

	}

	$m->redirect("$Tab::url_prefix/panel/round_edit.mhtml?round_id=$round_to");

</%perl>
