<%args>
	$tourn
	$type => undef
	$err => undef
</%args>

	<div id="leftbig">
		
% 		if ($type eq "manual") { 
% 			$m->redirect("$Tab::url_prefix/panel/rooms_manassign.mhtml");
% 		}

% 		if ($type eq "auto") { 

% 			my @timeslots = $tourn->timeslots;
% 			@timeslots = sort { $a->start <=> $b->start } @timeslots;

			<h2>Auto-add rooms</h2>
	
			<form action="rooms_autoassign.mas" method="post">

			<table cellpadding="5" width="100%" cellspacing="1"> 
			
				<tr class="evenrow"> 
				
					<th>
						Assign during timeslots:
					</th> 
					
					<td>
						<select name="which_rooms">

							<option value="all">All</option>
							<option value="prelims">All Prelims</option>

% 							foreach my $ts (@timeslots) { 
								<option value="<% $ts->id %>"><% $ts->name %></option>
%  							}
						</select>
					</td> 
					
				</tr> 
				
				<tr>

					<th>
						Assign room for event:
					</th>
					
					<td>
						<select name="event_id">
							<option value="all">All</option>

% 							foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
								<option value="<% $event->id %>">-<% $event->name %></option>
%  							}

						</select>
					</td>
					
				</tr> 
				
				<tr class="evenrow">

					<th>
						Override current room assignments:
					</th>
					
					<td>
						<input type="checkbox" value="1" name="clear_old">
					</td>
					
				</tr> 
				
				<tr class="liblrow">
				
					<td>
					</td> 
					
					<td align="right">
						<input class="blue" type="submit" value="    Assign Rooms    ">
						</form>
					</td>

				</tr> 
				
			</table>

% 		}

	</div>

	<div id="rightsmall">

		<h3>Rooms Assignment:</h3>

		<a href="rooms.mhtml?type=auto" class="<% ($type eq "auto") ? "dkblue block" : "blue block" %>">Automatic Panel</a>
		<a href="rooms.mhtml?type=manual" class="<% ($type eq "manual") ? "dkblue block" : "blue block" %>">Manual Panel</a>

		<a href="rooms_master.mhtml" class="blue block">View Rooms Master</a>
		<a href="rooms_print.mhtml" class="blue block">Print Rooms Master</a>

	</div>
