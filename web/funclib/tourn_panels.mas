<%args>
	$tourn
</%args>
<%init>

	Tab::Panel->set_sql( by_tourn => "
		select distinct panel.* 
		from panel, round, event
		where event.tourn = ? 
		and round.event = event.id
		and panel.round = round.id
		order by round.name, panel.letter");

	return Tab::Panel->search_by_tourn($tourn->id);

</%init>
