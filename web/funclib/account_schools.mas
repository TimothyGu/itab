<%args>
	$account
	$tourn => undef
</%args>
<%init>

	Tab::School->set_sql( mine_by_tourn => "
		select distinct school.* 
		from school, chapter_admin
		where school.chapter = chapter_admin.chapter
		and chapter_admin.account = ? 
		and school.tourn = ? 
	");

	return Tab::School->search_mine_by_tourn($account->id, $tourn->id);

</%init>
