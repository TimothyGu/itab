<%args>
	$event
</%args>
<%init>

	Tab::Ballot->set_sql( by_event => "
		select distinct ballot.* 
		from panel, round, ballot
		where round.event = ?
		and panel.round = round.id
		and ballot.panel = panel.id
		order by round.name, panel.letter");

	return Tab::Ballot->search_by_event($event->id);

</%init>
