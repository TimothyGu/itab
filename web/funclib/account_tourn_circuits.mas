<%args>
	$account
</%args>
<%perl>

	# Circuits I Have Tournaments In

	Tab::Circuit->set_sql( by_tourn_admin => "
		select distinct circuit.* 
		from tourn_circuit,tourn_admin,circuit
		where tourn_admin.account = ?
		and tourn_admin.tourn = tourn_circuit.tourn
		and tourn_circuit.circuit = circuit.id
		order by circuit.name
		");

	return Tab::Circuit->search_by_tourn_admin($account->id);

</%perl>

