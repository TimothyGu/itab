<%args>
	$entry
	$group => undef
</%args>
<%init>


	if ($group) { 

		Tab::Strike->set_sql( conflict_by_entry_and_group => "
			select distinct strike.*
			from strike, judge
			where strike.type=\"conflict\"
			and strike.registrant = 1
			and strike.entry = ?
			and strike.judge = judge.id
			and judge.judge_group = ?
		");

		return Tab::Strike->search_conflict_by_entry_and_group($entry->id, $group->id);

	} else { 


		Tab::Strike->set_sql( conflict_by_entry => "
			select distinct strike.*
			from strike
			where type=\"conflict\"
			and registrant = 1
			and entry = ?
		");

		return Tab::Strike->search_conflict_by_entry($entry->id);

	}


</%init>
