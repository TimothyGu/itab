<%args>
	$tourn
</%args>
<%init>

    my $start   = $tourn->start;
    my $end     = $tourn->end;

    $start->set_time_zone($tourn->tz);
    $end->set_time_zone($tourn->tz);

    $end->truncate(to => 'day');
    $start->truncate(to => 'day');

    my @tourn_days;

    unless ($start == $end) {

        my $holder = $start->clone;

        until ($holder > $end) {
            push (@tourn_days, $holder->clone);
            $holder->add( days => 1); 
        }

    } else { 

        push (@tourn_days, $start);

    }   

    return @tourn_days;
	

</%init>
