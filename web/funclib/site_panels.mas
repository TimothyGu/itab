<%args>
	$site
	$tourn
</%args>
<%init>

	Tab::Panel->set_sql(by_site => " 
		select distinct panel.*, event.abbr as eventname, room.name as roomname, round.timeslot as timeslotid
		from panel, round, event, room
		where panel.round = round.id
		and round.event = event.id
		and event.tourn = ? 
		and panel.room = room.id
		and room.site = ? 
	");

	return Tab::Panel->search_by_site( $tourn->id, $site->id );

</%init>
