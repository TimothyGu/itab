<%args>
	$country => undef
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();
	my $cth = $dbh->prepare("select distinct country from tourn order by country"); 
	$cth->execute();

</%init>

%	while( my $acountry = $cth->fetchrow_array() ) { 
		<option <% $acountry eq $country ? "selected" : "" %> value="<% $acountry %>"><% $acountry %></option>
%	}


