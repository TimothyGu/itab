<%args>
	$tourn
</%args>
<%init>
	
	Tab::Rating->set_sql( by_tourn => "
		select distinct rating.* 
		from rating, judge, judge_group
		where judge_group.tourn = ? 
		and judge.judge_group = judge_group.id
		and rating.judge = judge.id
		order by rating.judge ");

	return Tab::Rating->search_by_tourn($tourn->id);

</%init>
