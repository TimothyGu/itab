<%args>
	$state => undef
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();
	my $sth = $dbh->prepare("select distinct state from tourn order by state"); 
	$sth->execute();
	my @states = @{$sth->fetchrow_arrayref()};  #this line looks totally unnecessary but evidently is.  I can't explain it.

</%init>

%	while( my $astate = $sth->fetchrow_array() ) { 
		<option <% $astate eq $state ? "selected" : "" %> value="<% $astate %>"><% $astate %></option>
%	}


