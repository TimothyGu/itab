<%args>
	$group
</%args>
<%init>

	Tab::PoolJudge->set_sql(  standby_judges => "
		select distinct pool_judge.* 
		from pool_judge, judge, pool
		where judge.judge_group = ? 
		and judge.id = pool_judge.judge
		and pool_judge.pool = pool.id
		and pool.standby = 1
	");

	return Tab::PoolJudge->search_standby_judges($group->id);

</%init>
