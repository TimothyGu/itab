<%args>
	$tier_id
</%args>
<%init>

	my $tier = Tab::RatingTier->retrieve($tier_id);

	$m->redirect("coach_tiers.mhtml") unless $tier;

	my $msg = "Rating tier ".$tier->name." deleted";

	my $group_id = $tier->judge_group->id;

	$tier->delete;

	$m->redirect("coach_tiers.mhtml?group_id=$group_id&msg=$msg");


</%init>
