<%args>
	$staff_id
	$account
</%args>
<%perl>

	my $staff = Tab::TournAdmin->retrieve($staff_id);

	if ($staff->no_setup) { 

		$staff->no_setup(0);

	} elsif ($staff->account->id != $account->id) {

		$staff->no_setup(1);
	}

	$staff->update;

	my $msg = "Access to the setup menu changed for ".$staff->account->first." ".$staff->account->last;

	$m->redirect("access.mhtml?msg=$msg");

</%perl>
