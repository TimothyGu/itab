<%args>
	$entry_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	my $school = $entry->school;

	my $msg;

	if ($entry->ada > 0) { 

		$entry->ada(0);
		$msg = "ADA accomodation requested for ".$entry->code;

	} else { 

		$entry->ada(1);
		$msg = "ADA accomodation cancelled for ".$entry->code;

	}

	$entry->update;

	$m->redirect("/user/tourn/entry/students.mhtml?school_id=".$school->id."&event_id=".$entry->event->id."&msg=$msg");

</%init>

