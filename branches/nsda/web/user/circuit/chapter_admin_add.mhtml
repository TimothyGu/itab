<%args>
	$chapter_id
	$email
	$account
	$circuit
</%args>
<%init>

	$email =~tr/[A-Z]/[a-z]/;
	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my $acc = Tab::Account->search( email => $email)->first;

	my $msg;

	unless ($acc) { 
		my $err = "The email $email has no account on this system.  ";
		$err .= "The coach must sign up for an account first before access to this chapter can be granted.";
		$m->redirect("chapter_edit.mhtml?circuit_id=".$circuit->id."&err=$err&chapter_id=$chapter_id");
	}

	my $coach = Tab::ChapterAdmin->create({
		chapter => $chapter_id,
		account => $acc->id
	});

	$msg = "Coach ".$acc->first." ".$acc->last." has been given access to ". $chapter->name;	

	$m->redirect("chapter_edit.mhtml?circuit_id=".$circuit->id."&msg=$msg&chapter_id=$chapter_id");

</%init>
