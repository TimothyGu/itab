<%args>
	$tourn
	$fine_id
</%args>
<%init>

	my $fine = Tab::SchoolFine->retrieve($fine_id) if $fine_id; 

	unless ($fine) { 
		$m->print("That fine does not exist.  Did you delete it already?  Hit back and try again");
		$m->abort();
	}

	my $school = $fine->school;
	$fine->delete;

	my $msg = "Fine or payment removed";
	$m->redirect("$Tab::url_prefix/register/school/invoice.mhtml?school_id=".$school->id."&msg=$msg");

</%init>
