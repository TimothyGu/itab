<%args> 
	$entry_id
	$seed
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	$m->abort unless $entry;

	$entry->seed($seed);

	if ($entry->event->setting("apda")) { 

		if ($seed eq "full") { 
			$entry->pair_seed(1);
		} elsif ($seed eq "half") { 
			$entry->pair_seed(2);
		} elsif ($seed eq "free") { 
			$entry->pair_seed(3);
		} else { 
			$entry->pair_seed(4);
		}

	} 

	$entry->update;

	my $msg = "Entry ".$entry->code." changed to seed $seed";

	$m->redirect("edit.mhtml?entry_id=$entry_id&msg=$msg");

</%init>
