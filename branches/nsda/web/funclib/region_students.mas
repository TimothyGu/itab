<%args>
	$region
	$tourn => undef
</%args>
<%init>

	if ($tourn) { 

		Tab::Student->set_sql(by_region => "
			select distinct student.*
			from entry, school, entry_student, student
			where entry.school = school.id
			and school.region = ? 
			and school.tourn = ? 
			and entry.id = entry_student.entry
			and entry_student.student = student.id
			order by student.id
		");

		return Tab::Student->search_by_region($region->id, $tourn->id);

	}

	return;


</%init>

