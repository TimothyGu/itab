<%args>
	$tourn
	$new => undef
</%args>
<%init>

	my @pools = sort {$a->name cmp $b->name} $tourn->room_groups;

	foreach my $pool (@pools) { 
		$pool->name($ARGS{$pool->id});
		$pool->update;
	}

	my $msg;

	if ($new) { 

		my $pool = Tab::RoomGroup->create({
			tourn => $tourn->id,
			name  => $new,
		});

		$msg = "Pool $new create";
	}

	$msg .= "Pool names saved";
	$m->redirect("edit_pools.mhtml?msg=$msg");


</%init>
