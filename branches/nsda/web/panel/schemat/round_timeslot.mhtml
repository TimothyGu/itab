<%args>
	$round_id
	$timeslot_id
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);

	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);

	$round->timeslot($timeslot_id);

	$m->comp("/funclib/renumber_rounds.mas", event_id => $round->event->id);

	my $msg = $round->realname." reassigned to timeslot ".$timeslot->name;

	$m->redirect("show.mhtml?round_id=".$round->id."&msg=$msg");

</%init>

