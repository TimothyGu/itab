<%args>
	$tourn
	$judge_policy => undef
	$disclaimer => undef
	$invoice_message => undef
	$web_message => undef
	$judge_sheet_notice => undef
</%args>
<%init> 

	$tourn->setting("judge_policy", "text", $judge_policy);
	$tourn->setting("disclaimer", "text", $disclaimer);
	$tourn->setting("invoice_message", "text", $invoice_message);
	$tourn->setting("web_message", "text", $web_message);
	$tourn->setting("judge_sheet_notice", "text", $judge_sheet_notice);

	my $msg = "Tournament notices & messages are updated";
	$m->redirect("messages.mhtml?msg=$msg");


</%init>
