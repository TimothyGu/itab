<%args>
	$tourn
</%args>
<%init>

    my $switch;

	my $printouts = $tourn->setting("master_printouts");

</%init>

    <& sidebar.mas, tourn => $tourn, chosen => "tabbing" &>

	<div class="left huge">

		<h2>Tabulation Settings</h2>

		<table cellpadding="7" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
							
				<td>
					<form action="tabbing_save.mhtml" method="post">
					Ballot Audit Method:
				</td>
		
				<td class="rightalign">
		
					<select name="audit_method"  value="1" style="width: 250px;">

						<option value="twice" <% ($tourn->setting("audit_method") eq "twice") ? "selected" : "" %>>
							Enter Ballots Twice
						</option>
			
						<option value="visual" <% ($tourn->setting("audit_method") eq "visual") ? "selected" : "" %>>
							Check Ballots Visually
						</option>
		
						<option value="none" <% ($tourn->setting("audit_method") eq "none") ? "selected" : "" %>>
							I Live For Danger: No check
						</option>
		
					</select>
			
				</td>
			
			</tr>

		</table>

		<h4>Speech Tabulation</h4>

		<div class="left half" style="width: 375px;">

%			undef($switch);

			<table cellpadding="6" cellspacing="1" width="100%">


				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						<label for="truncate_to_smallest">
						Truncate prelim ranks to smallest prelim size
						</label> 
					</td>
			
					<td class="centeralign">
						<input type="checkbox" id="truncate_to_smallest" name="truncate_to_smallest"  value="1"
						<% ($tourn->setting("truncate_to_smallest") == 1) ? "checked" : "" %> >
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Truncate all ranks to
					</td>
			
					<td class="smaller centeralign">
						<input type="text" name="truncate_ranks_to" 
						value="<% $tourn->setting("truncate_ranks_to") %>" size="3">
					</td>

				</tr>

			</table>

		</div>
			
%		undef($switch);
			
		<div class="right half" style="width: 290px;">

			<table cellpadding="6" cellspacing="1" width="100%">

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						<label for="noshows_never_break">
						Noshow entries don't break
						</label>
					</td>
			
					<td class="centeralign">
						<input type="checkbox" id="noshows_never_break" name="noshows_never_break"  value="1"
						<% ($tourn->setting("noshows_never_break") > 0) ? "checked" : "" %> >
					</td>
			
				</tr>
			

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						<label for="mfl_time_violation">
						MFL Overtime penalty (+1 rank)
						</label>
					</td>
			
					<td class="centeralign">
						<input type="checkbox" id="mfl_time_violation" name="mfl_time_violation"  value="1"
						<% ($tourn->setting("mfl_time_violation") == 1) ? "checked" : "" %> >
					</td>
			
				</tr>

			</table>

		</div>

		<br style="clear: both;">

			<h4>Printout Settings</h4>

			<table cellpadding="7" cellspacing="1" width="100%">
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
					<td>
						<label for="schemat_school_code">
							Show school codes on master ballots & schematics:
						</label>
					</td>
			
					<td class="leftalign">
						<input 	type="checkbox" id="schemat_school_code" name="schemat_school_code"  value="1"
						<% ($tourn->setting("schemat_school_code") == 1) ? "checked" : "" %> >
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Designate students on master ballots with:
					</td>
			
					<td class="rightalign">
				
						<select name="master_printouts" style="width: 250px;">
			
							<option value="titles" 
								<% ($master_printouts eq "titles") ? "selected" : "" %>>
								Titles
							</option>
			
							<option value="names" 
								<% ($master_printouts eq "names") ? "selected" : "" %>>
								Names
							</option>

							<option value="name_schcode" 
								<% ($master_printouts eq "name_schcode") ? "selected" : "" %>>
								Name & School Code
							</option>
			
			
							<option value="first" 
								<% ($master_printouts eq "first") ? "selected" : "" %>>
								First Names
							</option>
			
						</select>
					</td>
				<tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						<label for="novices">
						List top novices on results & awards
						</label>
					</td>
			
					<td class="rightalign">

						<select id="novices" name="novices"  value="1" style="width: 250px;">
			
							<option value="none" <% ($tourn->setting("novices") eq "none") ? "selected" : "" %>>
								None
							</option>
			
							<option value="top" <% ($tourn->setting("novices") eq "top") ? "selected" : "" %>>
								Top Overall
							</option>
			
							<option value="noelim" <% ($tourn->setting("novices") eq "noelim") ? "selected" : "" %>>
								Top Nonadvacing
							</option>
			
						</select>
					</td>
			
				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
					<td>
						<label for="honorable_mentions">
						Honorable mentions (tied with breaking students)
						</label>
					</td>
			
					<td class="leftalign">
						<input type="checkbox" id="honorable_mentions" name="honorable_mentions"  value="1"
						<% ($tourn->setting("honorable_mentions") == 1) ? "checked" : "" %> >
					</td>
				</tr>
			

			</table>
			

		<span class="subspan">	
            <input  name="from" type="submit" value="   Save Settings   ">
            </form>
        </span>

	</div>
