<%args>
	$circuit
	$tourn
</%args>

    <& sidebar.mas, circuit => $circuit, chosen => "messages" &>

	<div id="leftbignb">

		<h2>Tournament Notices</h2>

		<table cellpadding="5" cellspacing="1" width="100%">
		
			<tr>
				<td colspan="4">
					<h4>Notes that appear below judge registrations:</h4>
					<form action="messages_save.mhtml" method="post">
				</td>
			</tr>
		
			<tr>
				<td colspan="4" align="center">
					<textarea rows="5" cols="65" name="judge_policy"><% ($tourn->judge_policy) ? $tourn->judge_policy : "" %></textarea>
				</td>
			</tr>
		
			<tr>
				<td colspan="4">
					<h4>Disclaimer that appears before registration:</h4>
				</td>
			</tr>
		
			<tr>
				<td colspan="4" align="center">
					<textarea rows="5" cols="65" name="disclaimer"><% ($tourn->disclaimer) ? $tourn->disclaimer : "" %></textarea>
				</td>
			</tr>
		
			<tr>
				<td colspan="4"><h4>Message appearing on invoices:</h4></td>
			</tr>
		
			<tr>
				<td colspan="4" align="center">
					<textarea rows="5" cols="65" name="invoice_message"><% ($tourn->invoice_message) ? $tourn->invoice_message : "" %></textarea>
				</td>
			</tr>
		
			<tr>
				<td colspan="4"><h4>Message appearing on tournament webpage:</h4></td>
			</tr>
		
			<tr>
				<td colspan="4" align="center">
					<textarea rows="5" cols="65" name="web_message"><% ($tourn->web_message) ? $tourn->web_message : "" %></textarea>
				</td>
			</tr>
		
			<tr>
		
			<tr>
				<td colspan="2">
					<h4>Notice for the judge assignment sheets:</h4>
				</td>
			</tr>

			<tr>
				<td colspan="2" class="center">
					<textarea name="judge_sheet_notice" rows="5" cols="65"><% $tourn->method->judge_sheet_notice %></textarea>
				</td>
			</tr>
			
			<tr>
				<td colspan="4" align="right">
					<input class="blue" name="from" type="submit" value="   Save Messages   ">
					</form>
				</td>
			</tr>
		
		</table>
		
	</div>
		
