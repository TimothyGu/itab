<%args>
	$tourn
</%args>

    <& sidebar.mas, tourn => $tourn, chosen => "messages" &>

	<& "/funclib/editor.mas" &>

	<div class="left huge">

		<h2>Tournament Notices</h2>

		<table cellpadding="5" cellspacing="1" width="100%">
		
			<tr>
				<td>
					<h4>Notes that appear below judge registrations:</h4>
					<form action="messages_save.mhtml" method="post">
				</td>
			</tr>
		
			<tr>
				<td>
					<textarea rows="5" cols="65" name="judge_policy"><% $tourn->setting("judge_policy") %></textarea>
				</td>
			</tr>
		
			<tr>
				<td>
					<h4>Disclaimer that appears before registration:</h4>
				</td>
			</tr>
		
			<tr>
				<td>
					<textarea rows="5" cols="65" name="disclaimer"><% $tourn->setting("disclaimer") %></textarea>
				</td>
			</tr>
		
			<tr>
				<td>
					<h4>Message appearing on invoices:</h4>
				</td>
			</tr>
		
			<tr>
				<td>
					<textarea rows="5" cols="65" name="invoice_message"><% $tourn->setting("invoice_message") %></textarea>
				</td>
			</tr>
		
			<tr>
				<td>
					<h4>Notice for the judge assignment sheets:</h4>
				</td>
			</tr>

			<tr>
				<td>
					<textarea name="judge_sheet_notice" rows="5" cols="65"><% $tourn->setting("judge_sheet_notice") %></textarea>
				</td>
			</tr>
			
			<tr class="liblrow">
				<td class="rightalign">
					<input  name="from" type="submit" value="   Save Messages   ">
					</form>
				</td>
			</tr>
		
		</table>
		
	</div>
		
