<%args>
	$tourn
	$sweep_method => 0
	$sweep_class_based => 0
	$sweep_per_event => 0
	$sweep_event_total => 0
	$sweep_wildcards => 0
	$sweep_final_rank => 0
	$sweep_count_elims => 0
	$sweep_count_finals => 0
	$sweep_count_prelims => 0
	$sweep_rank_in_elims => 0
	$points_per_finalist => 0
	$points_per_elim => 0
	$points_per_entry => 0
	$sweep_only_place_final => 0
</%args>
<%init> 

	my $method = $tourn->method;	

	if ($method) { 

		$method->sweep_method($sweep_method);
		$method->sweep_class_based($sweep_class_based);
		$method->sweep_per_event($sweep_per_event);
		$method->sweep_event_total($sweep_event_total);
		$method->sweep_wildcards($sweep_wildcards);
		$method->sweep_final_rank($sweep_final_rank);
		$method->sweep_count_elims($sweep_count_elims);
		$method->sweep_count_finals($sweep_count_finals);
		$method->sweep_count_prelims($sweep_count_prelims);
		$method->sweep_rank_in_elims($sweep_rank_in_elims);
		$method->points_per_finalist($points_per_finalist);
		$method->points_per_elim($points_per_elim);
		$method->points_per_entry($points_per_entry);
		$method->sweep_only_place_final($sweep_only_place_final);
		$method->update;

	}

	$m->redirect("sweeps.mhtml?method_id=".$method->id);

</%init> 



