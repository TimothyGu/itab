<%args>
	$staff_id
</%args>
<%perl>

	my $staff = Tab::TournAccess->retrieve($staff_id);

	if ($staff->entry_only) { 

		$staff->entry_only(0);

	} else {

		$staff->entry_only(1);

	}

	$staff->update;

	my $msg = "Limited settings changed for ".$staff->account->first." ".$staff->account->last;

	$m->redirect("access.mhtml?msg=$msg");

</%perl>
