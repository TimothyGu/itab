<%args>
	$email
	$account
	$circuit
	$tourn
	$contact => 0
	$entry => 0
</%args>

<%init>

	my @staff = Tab::Account->search( email => $email );

	unless (@staff) { 
		my $err = "That email address you tried to add doesn't have a corresponding account.  Please try again";
        $m->redirect("access.mhtml?err=$err");
	}

	my $access = Tab::ChapterAdmin->create({
		account => $staff[0]->id,
		tournament => $tourn->id,
		contact => 0,
		entry => 0,
		nosetup => 0
	});

	my $msg = $staff[0]->first." ".$staff[0]->last." has been added to your tournament staff";

	$m->redirect("$Tab::url_prefix/setup/access/access.mhtml?msg=$msg");


</%init>

