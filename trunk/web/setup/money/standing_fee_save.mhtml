<%args>
	$tourn
	$account
	$circuit
	$amount
	$startdate => undef
	$starttime => undef
	$enddate => undef
	$endtime => undef
</%args>
</%args>
<%init>

	my $startdt = Tab::dtme($startdate,$starttime) if $startdate && $starttime;
	my $enddt = Tab::dtme($enddate,$endtime) if $enddate && $endtime;

	my $fine = Tab::Fine->create({
		tournament => $tourn->id,
		amount => $amount,
		reason => $ARGS{"reason"}
	});

	$fine->start($startdt) if $startdt;
	$fine->end($enddt) if $enddt;
	$fine->update;

	$m->redirect("edit.mhtml");

</%init>

