<%args>
	$tourn
	$err => undef
</%args>

%	my $switch;

	<& sidebar.mas, chosen => "entry" &>

	<div class="left huge">
	
		<h2>Entry Fees</h2>

		<form action="entry_save.mhtml" method="post">

		<table cellpadding="5" cellspacing="1" width="100%">

%			foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						<% $event->name %>
					</td>
	
					<td>
						$<input type="number" name="<%$event->id %>" value="<%$event->fee %>" size="6">
					</td>

				</tr>

% 			}

			<tr class="liblrow">

				<td align="right" colspan="2">
					<input class="blue" type="submit" value="  Save Entry Fees  ">
					</form>
				</td>

			</tr>

		</table>

	</div>

