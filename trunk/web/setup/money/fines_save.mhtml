<%args>
	$tourn
	$drop_fine => undef
	$add_fine => undef
	$noshow_judge_fine => undef
	$noshow_judge_fine_elim => undef
</%args>
<%init>

	my $method = $tourn->method;

	$method->drop_fine($drop_fine);
	$method->add_fine($add_fine);
	$method->noshow_judge_fine($noshow_judge_fine);
	$method->noshow_judge_fine_elim($noshow_judge_fine_elim);
	$method->update;

	$m->redirect("fines.mhtml");

</%init>
