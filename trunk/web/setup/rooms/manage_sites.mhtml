<%args>
	$err => undef
	$tourn
	$league
	$account
</%args>

	<& sidebar.mas, tourn => $tourn &>

%	my $switch; 

	<div id="leftbig">

		<h2>Change Tournament Sites</h2>

			<table cellpadding="5" width="100%" cellspacing="1">

				<tr class="lirdrow">

					<th>
						Site name
					</th>

					<th>
						Room Count
					</th>

					<th>
					</th>

				</tr>

%			my %site_used = ();

% 			foreach my $site (sort {$a->name cmp $b->name} $tourn->sites) {

%				$site_used{$site->id}++;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >


					<td>
						<a class="whiteblock" href="site_edit.mhtml?site_id=<% $site->id %>"><% $site->name %></a>
					</td>

					<td class="center">
						<% scalar ($site->rooms) %> 
					</td>

					<td class="center"> 
						<a class="whiteblock" href="site_rm.mhtml?site_id=<% $site->id %>">
							Remove Site
						</a>
					</td>
				</tr>
%			}

	
			<tr>
				<td colspan="3">
					<br />
					<h4>Add an existing site</h4>
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2">
					
					<form action="site_add.mhtml" method="post">

					<select name="site_id">

%						foreach my $site (sort {$a->name cmp $b->name} $league->sites ) { 

%							next if $site_used{$site->id};
	
							<option value="<% $site->id %>">
								<% substr($site->name,0,40) %>
								(<% scalar $site->rooms %> Rooms) 
							</option>
%						}

					</select>
				</td>

				<td class="center">
					<input type="submit" value=" Add Site ">
					</form>

				</td>

			</tr>


			<tr>
				<td colspan="3">
					<br />
					<br />
					<h4>Add a new site to your tournament</h4>
				</td>
			</tr>

			</table>

			<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="evenrow" align="left"> 

				<td align="left">
					<form action="site_new.mhtml" method="post">
					<input type="text" name="name" size="65" placeholder="Name of site">
				</td>

			</tr>

			<tr class="oddrow" align="left"> 

				<td>
					<textarea name="directions" rows="5" placeholder="Directions & Location" cols="65"></textarea>
				</td>

			</tr>

			<tr class="liblrow">

				<td class="right">
					<input type="submit" value="  Save New Site  ">
					</form>
				</td>

			</tr>

		</table>

	</div>

