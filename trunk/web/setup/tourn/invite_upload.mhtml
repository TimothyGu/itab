	$tourn
	$invite => undef
</%args>
<%init>

    if ($invite) {
        my $req = Apache2::Request->new($r);
        my $upload = $req->upload("invite");
        my $filename  = $upload->filename;
        $filename =~ s/[^\w.]//g;
        $filename =~ s/\s//g;
        my $filepath = "$Tab::file_root/files/tourns/".$tourn->id;

        my $garbage = `rm -f $filepath`;
        $garbage = `mkdir -p $filepath`;
        my $filetemp = $upload->tempname;
        $garbage = `cp $filetemp $filepath/$filename`;
		system $Tab::s3_cmd." put $filepath/$filename ".$Tab::s3_bucket."/tourns/".$tourn->id."/";
		&Tab::debuglog($Tab::s3_cmd." put $filepath/$filename ".$Tab::s3_bucket."/tourns/".$tourn->id."/");
        $tourn->setting("invite", $filename);
	}

	my $msg = "Invite uploaded";

	$m->redirect("main.mhtml?msg=$msg");

</%init>

