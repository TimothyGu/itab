<%args>
	$tourn
	$account
</%args>

    <div class="right small"> 
		<& menu.mas, tourn => $tourn, whoami => "double" &> 
	</div> 
	
	<div class="left huge">
		
		<h2>Add Double Entry Grouping</h2>

			<form action="event_double_save.mhtml" method="post">

%			my $switch;

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>		

					<th class="smaller">
						Name
					</th>

					<td>
						<input type="text" name="name" size="10">
					</th>

				</tr>
				
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>		

					<th class="smaller">
						Double Entry Policy	
					</th>

					<td class="smaller" align="right">  
						<span class="spacey">
							None <input type="radio" name="setting" value="2" "selected">
						</span>

						<br />

						<span class="spacey">
							Unlimited <input type="radio" name="setting" value="0">
						</span>

						<br />

						<span class="spacey">
							None within group <input type="radio" name="setting" value="1">
						</span>

						<br />

						<span class="spacey">
							Max 
							<input type="number" name="max" size="3">
							events
							<input type="radio" name="setting" value="3">
						</span>

					</td>

				</tr>	

				<tr class="liblrow">
					<td colspan="3" align="right">
						<input type="submit" value="Create Group" >
						</form>
					</td>
				</tr>

			</table>

	</div>
