<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<div class="right small">
		<& menu.mas, tourn => $tourn, whoami => "recode" &>
	</div>

	<div class="left huge">
	
		<h2>
			Change Starting Speaker Codes
		</h2>
	
		<table cellpadding="5" cellspacing="1" width="100%">
	
	
%			foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
	
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	
					<td>
						<form action="mass_recode_save.mhtml" method="post">
						<% $event->name %>
					</td>
	
					<td class="rightalign">
						<input size="5" type="text" name="<% $event->id %>" value="<% $event->setting("code_start") %>">
					</td>
	
				</tr>
	
%			}
		
			<tr class="liblrow">
	
				<td colspan="2" class="rightalign">
	
					<input type="submit" value=" Save Changes ">
					</form>
				</td>

			</tr>
	
		</table>
	
	</div>
	
