<%args>
	$tourn
	$double_entry => undef
	$double_max => undef
</%args>
<%init>

	my $method = $tourn->method;

	$method->double_entry($double_entry);
	$method->double_max($double_max);
	$method->update;

	foreach my $class ($tourn->classes) { 

		$class->double_entry($ARGS{$class->id});
		$class->max($ARGS{"max_".$class->id});
		$class->update;

	}

	my $msg = "Class settings saved";

	$m->redirect("/setup/events/double_entry.mhtml?msg=$msg");

</%init>
