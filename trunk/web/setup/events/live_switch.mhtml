<%args>
	$event_id
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my $msg;

	if ($event->live_updates == 1) {
		$event->live_updates("0");
		$msg = "Live Updates disabled for ".$event->name;
	} else { 
		$event->live_updates("1");
		$msg = "Live Updates enabled for ".$event->name;
	}

	$event->update;

	$m->redirect("/setup/live_updates.mhtml?msg=$msg");


</%init>




