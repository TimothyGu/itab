<%args>
	$account
	$group_id => undef
	$tourn
	$circuit
	$err => undef
	$tz
</%args>
<%init>

	my $switch;

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $deadline = $group->setting("deadline");
	$deadline->set_time_zone($tz) if $deadline;

	my $strike_start = $group->setting("strike_start");
	$strike_start->set_time_zone($tz) if $strike_start;

	my $strike_end = $group->setting("strike_end");
	$strike_end->set_time_zone($tz) if $strike_end;

</%init>

    <& menubar.mas, tourn => $tourn, group_id => $group_id, page => "ratings" &>


	<div class="left huge">

		<h2>
			Judge ratings for <% $group->name %> 
		</h2>

		<table cellpadding="5" width="100%" cellspacing="1">  

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td>
					<form action="ratings_save.mhtml" method="post">
					<input type="hidden" value="<%$group_id%>" name="group_id">
					Judge registration deadline 
					<br />(to set earlier than tournament-wide deadline)
				</th>
		
				<td class="right">
		            <& /funclib/datepicker.mas, id => "deadline" &> 
					<input type="text" name="deadline" id="deadline" size="10" value="<% ($deadline) ? Tab::pickerdate($deadline) : "" %>">
				</td>
		
				<td class="right">
                    <& /funclib/timepicker.mas, name => "deadlinetime", time => $deadline &>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td>
					Open ratings
				</th>
		
				<td class="right">
		            <& /funclib/datepicker.mas, id => "strike_start" &> 
					<input type="text" name="strike_start" id="strike_start" size="10" value="<% ($strike_start) ? Tab::pickerdate($strike_start) : "" %>">
				</td>

				<td class="right">
                    <& /funclib/timepicker.mas, name => "strike_start_time", time => $strike_start &>
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td>
					Close ratings
				</th>
		
				<td class="right">
		            <& /funclib/datepicker.mas, id => "strike_end" &> 
					<input type="text" name="strike_end" id="strike_end" size="10" value="<% ($strike_end) ? Tab::pickerdate($strike_end) : "" %>">
				</td>
		
				<td class="right">
                    <& /funclib/timepicker.mas, name => "strike_end_time", time => $strike_end &>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td>
					Judge obligation must be met before schools rate or strike
				</td>

				<td class="rightalign" colspan="2">
					<input type="checkbox" name="obligation_before_strikes" value="1" 
					<% $group->setting("obligation_before_strikes") ? "checked" : "" %>>
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td>
					Ask for judge paradigms during registration
				</td>
		
				<td class="rightalign" colspan="2">
					<input type="checkbox" name="ask_paradigm" value="1" 
					<% $group->setting("ask_paradigm") ? "checked" : "" %>>
				</td>
		
			</tr>

		</table>

		<div class="half left">

		<h4>Conflicts</h4>

		<table cellpadding="5" width="100%" cellspacing="1">  

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td  colspan="2">
					Schools enter conflicts separately
				</td>
		
				<td align="center">
					<input type="checkbox" name="conflicts" value="1" 
					<% $group->setting("conflicts") ? "checked" : "" %>>
				</td>
			
			</tr>
		
			<tr>
				<td colspan="5">	
					<h4>Strikes</h4>
				</td>
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td  colspan="2">
					Number of per-school strikes allowed
				</td>
		
				<td align="center">
					<input type="text" name="school_strikes" size="3" value="<% ($group) ? $group->setting("school_strikes") : "" %>">
				</td>
			
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td  colspan="2">
					Number of per-entry strikes allowed
				</td>
		
				<td align="center">
					<input type="text" name="comp_strikes" size="3" value="<% ($group) ? $group->setting("comp_strikes") : "" %>">
				</td>
			
			</tr>

		
			<tr>
				<td colspan="5">	
					<h4>Coach Ratings</h4>
				</td>
			</tr>


			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td  colspan="2">
					Coaches should rate their judges
				</td>
		
				<td align="center">
					<input type="checkbox" name="coach_ratings" value="1" 
					<% $group->setting("coach_ratings") ? "checked" : "" %>>
				</td>
			
			</tr>

		</table>

		</div>

		<div class="half right">

			<h4>Community Ratings or MPJ</h4>

			<table cellpadding="5" width="100%" cellspacing="1">  

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td colspan="2">
					<label for="school_ordinals">
					Each school rates with ordinals
					</label>
				</td>
		
				<td align="center">
					<input type="checkbox" id="school_ordinals" name="school_ordinals" value="1"
					<% $group->setting("school_ordinals") ? "checked" : "" %>>
				</td>
			
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td colspan="2">
					<label for="entry_ordinals">
					Each entry rates with ordinals
					</label>
				</td>
		
				<td align="center">
					<input type="checkbox" id="entry_ordinals" name="entry_ordinals" value="1"
					<% $group->setting("entry_ordinals") ? "checked" : "" %>>
				</td>
			
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td colspan="2">
					<label for="school_ratings">
					Each school rates using the scale
					</label>
				</td>
		
				<td align="center">
					<input type="checkbox" id="school_ratings" name="school_ratings" value="1"
					<% $group->setting("school_ratings") ? "checked" : "" %>>
				</td>
			
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td colspan="2">
					<label for="comp_ratings">
					Each individual entry rates using the scale
					</label>
				</th>
		
				<td align="center">
					<input type="checkbox" id="comp_ratings" name="comp_ratings" value="1" 
					<% $group->setting("comp_ratings") ? "checked" : "" %>>
				</td>
			
			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td colspan="2">
					<label for="cumulate_mjp">
					Allow cumulative prefs (Extra 1s = less 2s)
					</label>
				</th>
		
				<td align="center">
					<input type="checkbox" id="cumulate_mjp" name="cumulate_mjp" value="1" 
					<% $group->setting("cumulate_mjp") ? "checked" : "" %>>
				</td>
			</tr>

			</table>

		</div>

		<table cellpadding="5" width="100%" cellspacing="1">

			<tr class="liblrow">

				<td class="right">
					<input  type="submit" value="    Save Group Changes   ">
					</form>
				</td>

			</tr>

		</table>

	</div>

