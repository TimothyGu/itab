<%args>
	$account
	$group_id
	$tourn
	$circuit
	$err => undef
</%args>

%	my $group = Tab::JudgeGroup->retrieve($group_id);

%	my $switch;

	<& menubar.mas, tourn => $tourn, group_id => $group_id, page => "hires" &>

	<div id="leftbig">

		<h2>
			Hires & Fees: <% $group->name %>
		</h2>

		<table cellpadding="8" width="100%" cellspacing="1">  

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
				<th class="smaller">
					<form action="hires_save.mhtml" method="post">
					<input type="hidden" value="<% $group_id %>" name="group_id">

					Fine per missing judge. (Not hires; will warn registrants)

				</td> 
				
				<td align="right">
					$<input type="text" size="4" name="missing_judge_fee" value="<% $group->missing_judge_fee %>">
				</td>
				
			</tr>

			<tr>
				<td colspan="2">
					<h4>Offer tournament hires</h4>
				</td>
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
				<th class="smaller">

					Offer hired judging

				</td> 
				
				<td align="center">

					<input type="checkbox" name="track_judge_hires" value="1" <%  ($group->track_judge_hires) ? "checked" : "" %>> 

				</td>
				
			</tr> 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<th class="smaller">
					Number of hires available.  Put 0 to manage hires manually.
				</td> 
				
				<td align="right"> 
					<input type="text" name="hired_pool" size="4" value="<% $group->hired_pool %>">
				</td>
				
			</tr>

			<tr>
				<td colspan="2">
					<h4>Payment methods (Use only one)</h4>
				</td>
			</tr>

%			if ($err eq "You can only use one Hiring Method for judges, not both.") { 

				<tr <% ($switch++ % 2) ? "class=\"redrow\"" : "class=\"lirdrow\""%> >

% 			} else { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

%			}

					<th class="smaller">
						Charge for each whole judge a school hires:
					</td>

					<td align="right">
						$<input type="text" name="hired_fee" size="4" value="<% $group->hired_fee %>">
					</td>

				</tr>

%			if ($err eq "You can only use one Hiring Method for judges, not both.") { 

				<tr <% ($switch++ % 2) ? "class=\"redrow\"" : "class=\"lirdrow\""%> >

% 			} else { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

%			}

					<th class="smaller">
						Charge for each entry covered by hired judging:
					</td> 
					
					<td align="right">
						$<input type="text" name="uncovered_entry_fee" size="4" value="<% $group->uncovered_entry_fee %>">
					</td>

			</tr> 

			<tr class="liblrow">

				<td colspan="3" align="right">
					<input type="submit" value="   Save Hire Information  " width="150px;">
					</form>
				</td>

			</tr>
				
		</table>

	</div>



