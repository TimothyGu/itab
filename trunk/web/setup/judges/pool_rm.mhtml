<%args>
	$pool_id
</%args>
<%init>

	my $pool = Tab::Pool->retrieve($pool_id);

	$m->redirect("/setup/judges/pools.mhtml") unless $pool;

	my $msg = "Rating pool ".$pool->name." deleted";

	my $group_id = $pool->judge_group->id;

	$pool->delete;

	$m->redirect("/setup/judges/pools.mhtml?group_id=$group_id&msg=$msg");


</%init>
