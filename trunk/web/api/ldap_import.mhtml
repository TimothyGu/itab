<%args>
	$debug => undef
	$no_prefs => undef
</%args>
<%init>

	use Net::LDAPS;

	$m->abort unless $Tab::ldap_enable eq "yes";

	my @accounts = Tab::Account->retrieve_all;

	$m->print("<h4> Found ".scalar @accounts." accounts </h4>");

	my $counter;

	foreach my $account (@accounts) { 

		my $shell = "/bin/false";
		$shell = "/bin/tcsh" if $account->site_admin;

		$counter++;

		unless ($counter % 100) { 
			$m->print("$counter accounts done<br />");
			$m->flush_buffer;
		}

		my $result = $m->comp("/funclib/ldap_account.mas", account => $account);
		$m->print("<p> Error with account ".$account->id." ".$account->email.":".$result->error."</p>") if $result->error && $result->error ne "Success";

	}

	$m->print("<h4>Imported ".$counter." accounts into the LDAP directory</h4>");

</%init>
