<%args>
	$circuit_id => undef
	$whoami     => undef
	$year       => undef
</%args>


	<div class="right small">

%		if ($whoami eq "stats") { 

%			my $this_school_year = Tab::school_year;
%			my $this_year = $this_school_year->year;

%			my @circuits = sort {$a->name cmp $b->name} Tab::Circuit->search( active => 1 );

			<div class="sidenote"> 

				<h4>Circuit stats:</h4>

				<form action="circuit_stats.mhtml" method="post">

				<div class="evenrow block">
					<span class="smallishspan">
						Circuit:
					</span>

					<span class="huntwofive">
						<select name="circuit_id" class="fixedsmaller">
%							foreach my $circuit (@circuits) { 
								<option value="<% $circuit->id %>" <% $circuit->id == $circuit_id ? "selected" : "" %>>
									<% $circuit->name %>
								</option>
%							}
						</select>
					</span>
				</div>

				<div class="oddrow block">

					<span class="smallishspan">
						School Year
					</span>

					<span class="huntwofive">
						<select name="year" class="fixedsmaller">
%							foreach my $tick (2004 .. $this_year) { 
								<option value="<% $tick %>" <% $tick == $year ? "selected" : "" %>>
									<% $tick." - ".($tick + 1) %>
								</option>
%							}
						</select>
					</span>

				</div>

				<div class="liblrow rightalign">
					<input type="submit" name="Search">
					</form>
				</div>

			</div>

%		}

%		if ($whoami eq "chapters") { 

%			my $this_school_year = Tab::school_year;
%			my $this_year = $this_school_year->year;

%			my @circuits = sort {$a->name cmp $b->name} Tab::Circuit->search( active => 1 );

			<div class="sidenote"> 

				<h4>By-school stats</h4>

				<form action="circuit_chapter.mhtml" method="post">

				<div class="evenrow block">
					<span class="smallishspan">
						Circuit:
					</span>

					<span class="huntwofive">
						<select name="circuit_id" class="fixedsmaller">
%							foreach my $circuit (@circuits) { 
								<option value="<% $circuit->id %>" <% $circuit->id == $circuit_id ? "selected" : "" %>>
									<% $circuit->name %>
								</option>
%							}
						</select>
					</span>
				</div>

				<div class="oddrow block">

					<span class="smallishspan">
						School Year
					</span>

					<span class="huntwofive">
						<select name="year" class="fixedsmaller">
%							foreach my $tick (2004 .. $this_year) { 
								<option value="<% $tick %>" <% $tick == $year ? "selected" : "" %>>
									<% $tick." - ".($tick + 1) %>
								</option>
%							}
						</select>
					</span>

				</div>

				<div class="liblrow rightalign">
					<input type="submit" name="Search">
					</form>
				</div>

			</div>

%		}

		<div class="sidenote">

			<h4>Circuit Stats</h4>

			<a class="yellow block" href="circuit_stats.mhtml?circuit_id=<% $circuit_id %>">Circuit Totals</a>
