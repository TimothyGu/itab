<%args>
	$account
</%args>
<%init>

	my @news = Tab::News->search( sitewide => 1, active => 1 );
	@news = sort {$b->posted->epoch <=> $a->posted->epoch} @news;
	@news = sort {$b->pinned <=> $a->pinned} @news;
	my	$limit = 4;

</%init>

    <& circuit_list.mas &>

	<div id="mainpage">

% 		foreach (0 .. $limit) { 

%			my $story = $news[$_];
%   		next unless $story;

			<h3>
				<% $story->title %>
			</h3>

			<div class="story">
				<% $story->text %>
			</div>

% 			if ($story->file) { 

				<p class="attribute">
					Download Attached File: 
					(<a href="<% $Tab::url_prefix %>/files/sitewide/articles/<% $story->id %>/<% $story->file %>"><% $story->file%></a>)
				</p>
% 			}

%			unless ($story->pinned) { 

%				my $author = $story->author;
%				$author = $story->edited_by if ($story->edited_by && $story->edited_by->id && ($story->edited_by->id != $story->author->id)); 

				<p class="attribute">
					--<% $author->first." ".$author->last %>, <% $story->posted->mdy('/') %>
				</p>

%			}

% 		}

	</div>

	<div style="clear: both;" />
