<%args>
	$league_id => undef
</%args>
<%init>

	my $league = Tab::League->retrieve($league_id);

	my $limit = 5;

	my @news = $league->news( main_site => 1, active => 1 );
	@news = sort {$b->posted->epoch <=> $a->posted->epoch} @news;

	unless (@news) { 

		$m->redirect("$Tab::url_prefix/index/league/schedule.mhtml?league_id=$league_id");

	}

</%init>

