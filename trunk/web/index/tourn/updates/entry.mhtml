<%args>
	$tourn_id
	$comp_id 
</%args>
<%init>

	my $comp = Tab::Comp->retrieve($comp_id);

	unless ($comp && $comp->id) { 
		$m->print("That competitor does not seem to exist.  Try again");
		$m->abort();
	}

	my $event = $comp->event;

	unless ($event->live_updates) { 

		$m->print("That event is not eligible for live updates.  Quit messing around");
		$m->abort();

	}

</%init>


    <& sidebar.mas, tourn_id => $tourn_id, event_id => $event->id &>

	    <div id="lefthuge">

			<h3>Follow <% $comp->team_name %> from <% $comp->school->name %> in <% $comp->event->abbr %></h3>

			<table cellpadding="5" cellspacing="1" width="95%" align="center">

				<tr class="evenrow">

					<th>
						<form action="entry_follow.mhtml" method="post">
						<input type="hidden" name="comp_id" value="<% $comp->id %>">
						<input type="hidden" name="tourn_id" value="<% $tourn_id %>">
						Cell Phone number (incl. area code):
					</th>

					<td>
						<input type="number" size="15" name="phone">
					</td>
	
				</tr>

				<tr class="oddrow">

					<th>
						Cell Phone Provider*
					</th>

					<td>
						<select name="domain">
							<& cell_domains.mas &>
						</select>
					</td>
	
				</tr>

				<tr class="evenrow">

					<th>
						Email Address:
					</th>

					<th>
						<input type="email" size="20" name="email">
					</th>

				</tr>

				<tr class="oddrow">

					<th>
						<label for="all">
						Follow ALL entries in <% $event->abbr %> for <% $comp->school->name %>
						</label>
					</th>

					<td>
						<input type="checkbox" value="1" name="allschool" id="all">
					</td>
				</tr>

				<tr class="liblrow">

					<td colspan="2" align="right">

						<input type="submit" value=" Save Live Updates ">
						</form>
					</td>
				</tr>

			</table>

			<p style="padding-left: 25px; line-height: 15px; font-size: 95%;">
				* Please note this only works for cell providers with an email
				gateway.  Services like Google Voice that do not provide an 
				email gateway cannot get text updates, alas.  As a Google Voice 
				user, this annoys me too.
			</p>

		</div>

