<%args>
	$tourn_id => undef
	$tourn => undef
	$webpage_id => undef
	$account => undef
</%args>
<%init>

	$tourn = Tab::Tourn->retrieve($tourn_id) if $tourn_id &! $tourn;
	my $now = DateTime->now;

	my $open++ if $m->comp("/funclib/tourn_events.mas", tourn => $tourn) && ($tourn->reg_end > $now) 
				&& ($now > $tourn->reg_start) &! ($tourn->setting("ncfl"));

	my @judges;
	my $school;

	if ($account) { 
		@judges = $m->comp("/funclib/account_judges.mas", account => $account, tourn => $tourn);
		my @schools = $m->comp("/funclib/account_schools.mas", account => $account, tourn => $tourn);
		$school = shift @schools if scalar @schools == 1;
	}

</%init>

