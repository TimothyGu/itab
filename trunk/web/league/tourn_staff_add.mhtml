<%args>
	$email
	$account
	$circuit
	$tourn_id
</%args>

<%init>

	my @staff = Tab::Account->search( email => $email );

	unless (@staff) { 
        $m->print("<h4>Error:</h4><p><b>That email address you tried to add doesn't have a corresponding account.  Please try again");
        $m->abort;
	}

	my $access = Tab::ChapterAdmin->create({
		account => $staff[0]->id,
		tournament => $tourn_id
	});

	my $err = $staff[0]->first." ".$staff[0]->last." has been added to your tournament staff";

	$m->redirect("$Tab::url_prefix/circuit/tourn_edit.mhtml?tourn_id=$tourn_id&err=$err");

</%init>

