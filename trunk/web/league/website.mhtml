<%args>
	$circuit
	$account
	$err => undef
</%args>
<%init>

	my $switch;

</%init>

	<h2><% $circuit->name %> Public Website</h2>

	<table cellspacing="1" cellpadding="5" width="100%">

		<tr>
			<td colspan="4">
				<h4>Create New Web Article</h4>
			</td>
		</tr>

% 		if ($circuit->links) { 

			<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>Category:</th>

				<td colspan="2">
					<form action="news_edit.mhtml" method="post">
					<select name="link">
%						foreach my $link ( sort {$a->display_order <=> $b->display_order} $circuit->links) { 
							<option value="<% $link->id %>"><% $link->name %></option>
%						}
					</select>
				</td>

				<td class="right">
					<input class="grey" type="submit" value="Create">
					</form>
				</td>

			</tr>

			<tr>
				<td colspan="4">
					<h4>Search/Edit Articles</h4>
				</td>
			</tr>


			<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Search titles:
				</th>
	
				<td colspan="2">
					<form action="news_search.mhtml" method="post">
					<input type="hidden" name="basis" value="title">
					<input type="text" name="search_title" size="25">
				</td>
	
				<td class="right">
					<input class="grey" type="submit" value="Search">
					</form>
				</td>

			</tr>

			<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>

    			<td>
					Show Category:
				</td>

				<td colspan="2">

					<form action="link_articles.mhtml" method="post">

					<select name="link_id">
%						foreach my $link (sort {$a->display_order <=> $b->display_order} $circuit->links) { 
							<option value="<% $link->id %>"><% $link->name %></option>
% 						}
					</select>

				</td>

				<td class="right">
					<input class="grey" type="submit" value="Search">
					</form>
				</td>

			</tr>

% 		} else { 

			<tr class="lirdrow">
				<td colspan="4">
					You must create categories first (see below).
				</td>
			</tr>

% 		}

		<tr>
			<td colspan="3" width="100%">
				<h4>Article Categories</h4>
			</td>

			<td class="right">
				<form action="link_edit.mhtml" method="post">
				<input type="submit" class="blue" value=" Add Category ">
				</form>
			</td>

		</tr>

%		undef $switch; 

% 		foreach my $link (sort {$a->display_order <=> $b->display_order} $circuit->links) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					<% $link->name %>
				</td>

				<td>
					<% scalar $link->news %> stories
				</td>

				<td class="center">
					<a href="link_edit.mhtml?link_id=<% $link->id %>" class="whiteblock">
					Edit Category
					</a>
				</td>

				<td class="center">
					<a href="link_swap_active.mhtml?link_id=<% $link->id %>" class="whiteblock">
						<% ($link->active == 1) ? "Deactivate" : "  Activate   " %>
					</a>
				</td>

			</tr>
% 		}
	
		<tr><td colspan="4" align="center">
	</tr>

	<tr>
		<td colspan="4">
			<h4>Circuit Logo Upload</h4>
		</td>
	</tr>

%	if ($circuit->logo_file) { 

		<tr>
			<td colspan="4" align="right">
				<a class="red block" href="<% $Tab::url_prefix %>/files/<% $circuit->id %>/logo/<% $circuit->logo_file %>">View Current Logo</a>
			</td>
		</tr>
%	}


		<tr class="oddrow">
			<td colspan="4" class="explain">
				Upload an image of your circuit logo.  Make sure it is no larger
				than 150x150 in size, and is in JPG, PNG or GIF format.
			</td>
		</tr>

		<tr class="liblrow">
			<td colspan="3" class="center">
				<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="logo" action="logo_upload.mhtml" method="post">
				<input type="file" name="logo" size="20">
			</td>

			<td colspan="1" class="right">
				<input class="grey" type="submit" value="  Save Logo  ">
				</form>
			</td>
		</tr>

	</table>
