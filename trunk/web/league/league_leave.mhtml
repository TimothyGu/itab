<%args>
	$chapter_id
	$league_id
	$account
	$session
</%args>
<%init>

	my @ljs = Tab::ChapterLeague->search( chapter => $chapter_id, league => $league_id );

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my $league = Tab::League->retrieve($league_id);

	foreach my $lj (@ljs) { 
		$lj->delete();
	}

	my $msg = "You have removed ".$chapter->name." from the ".$league->name;

	$m->redirect("/league/chapter_edit.mhtml?chapter_id=".$chapter_id."&msg=$msg") if $account->site_admin;
	$m->redirect("/league/chapter_search.mhtml?search_field=all&msg=$msg");

</%init>
