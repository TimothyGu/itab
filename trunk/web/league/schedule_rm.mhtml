<%args> 
	$account
	$league
	$schedule_id
	$certain => undef
</%args> 
<%init>

	my $schedule = Tab::Schedule->retrieve($schedule_id);

	if ($certain eq "I am certain" ) { 
		my $err;
		$err = "Schedule event". $schedule->name." has been completely deleted.";
		system "/bin/mkdir -p $Tab::file_root/files/".$league->id."/deleted/schedule";
		system "/bin/mv -f $Tab::file_root/files/".$league->id."/schedule/".$schedule->id." $Tab::file_root/files/".$league->id."/deleted/schedule/";
		$schedule->delete;
		$m->redirect("$Tab::url_prefix/league/schedule.mhtml?err=$err");
	}

</%init>

	<&  "/funclib/warning.mas", account => $account &>

	<h3></h3>
	<br><br>
	<center>

	<p class="err">You are about to permanently delete schedule event <% $schedule->name %>.

	<p>This cannot be undone.  You can only get it back by re-entering all the
	information over again.  </p>

	<p>Don't say I didn't warn you.</p>

% 	if ($certain) {

		<p class="err">
			You did not type "I am certain", exactly like that.  Try again
		</p>

% 	}

	<br><br>

	<p>To proceed, type "I am certain" in the box below:</p>

	<br><br>

	<p align="center">
		<form action="schedule_rm.mhtml" method="post">
		<input type="hidden" value="<% $schedule_id %>" name="schedule_id">
		<input type="text" name="certain" size="20">
	</p>

	<p align="center">
		<input class="red" type="submit" value="Delete Schedule event <% $schedule->name %>">
		</form>
	</p>
