<%args>
	$panel_id
	$from => undef
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);
	my $round = $panel->round;

	my $msg = "Section ".$panel->letter." of ".$round->realname." has been deleted.  I hope you know what you're doing.";

	$panel->delete;

	$m->redirect("manual_debate.mhtml?round_id=".$round->id."&msg=$msg") unless $from eq "schemat";
	$m->redirect("/panel/schemat/show.mhtml?round_id=".$round->id."&msg=$msg");

</%init>
