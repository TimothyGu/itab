<%args>
	$panel_id
	$tourn
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);


	foreach my $comp ($panel->comps) {

		my $order = $ARGS{$comp};

		foreach my $ballot ($comp->ballots(panel => $panel->id)) {
			$ballot->speakerorder($order);
			$ballot->update;
		}
	
	}

	$m->redirect("$Tab::url_prefix/panel/panel_view.mhtml?panel_id=$panel_id");


</%init>
