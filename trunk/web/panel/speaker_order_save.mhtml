<%args>
	$panel_id
	$comp_id => undef
</%args>
<%perl>

	my $panel = Tab::Panel->retrieve($panel_id);

	foreach my $o_comp ($panel->comps) { 

		my $order = $ARGS{$o_comp->id};

		$o_comp->setorder($order, $panel_id);
	}

	$m->redirect("/panel/speaker_order.mhtml?comp_id=".$comp_id) if $comp_id;
	$m->redirect("/panel/speaker_order.mhtml?panel_id=".$panel_id);

</%perl>
