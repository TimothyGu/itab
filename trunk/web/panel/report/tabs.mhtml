<%args>
	$tourn
	$account
</%args>
<%init>

	my @events = $m->comp("/funclib/tourn_events.mas", tourn => $tourn);
	my @timeslots = $tourn->timeslots;
	@events = sort { $a->name cmp $b->name } @events;
	@timeslots = sort { $a->start cmp $b->start } @timeslots;
	my $switch; 

</%init>

