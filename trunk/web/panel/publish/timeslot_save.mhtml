<%args>
	$timeslot_id
	$result => undef
</%args>
<%init>

	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);

	foreach my $round ($timeslot->rounds) { 
		$round->publish(1);
		$round->post_results(2) if $result;
		$round->update;
	}

	my $msg = "Rounds published in timeslot ".$timeslot->name;

	$m->redirect("timeslot.mhtml?msg=$msg");

</%init>
