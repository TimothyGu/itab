<%args>
	$round_id
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);
	my $msg;

	if ($round->post_results == 1) { 
		$round->post_results(2);
		$msg = "Speaker points have been removed from the public website";
	} elsif ($round->post_results == 2) { 
		$round->post_results("");
		$msg = "Round results have been removed from the public website";
	} else {
		$round->post_results(1);
		$msg = "Round results have been posted on the public website";
	}

	$round->update;

	$m->redirect("show.mhtml?round_id=$round_id&msg=$msg");


</%init>
