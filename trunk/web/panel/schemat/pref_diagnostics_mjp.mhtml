<%args>
	$event_id
</%args>
<%init>
	use Time::HiRes qw( time );
	my $start = time(); 
	
	my $event = Tab::Event->retrieve( $event_id );
	my @rounds = Tab::Round->search( event => $event_id );

</%init>

<div class="left huge">

%	my %pref_tot; my $pref_count; my %off_tot; my $off_count;

	<h2>Ordinal MJP Diagnostics for <% $event->name %></h2>
	<h5>How am I doing, and how many people are going to yell at me?</h5>
	<br>
					
	<& /funclib/tablesorter.mas, table => "sortme" &>

	<table cellpadding="0" cellspacing="1" width="100%" id="sortme"> 

		<thead>
		
		<tr class="yellowrow">

			<th class="smallish">
				Round
			</th>
			<th class="smallish">
				Avg pref
			</th>
			<th class="smallish">
				Worst
			</th>
			<th class="smallish">
				Avg mut
			</th>
			<th class="smallish">
				Worst mut
			</th>
			<th class="smallish">
				Lost
			</th>
			<th class="smallish">
				Needed/Left
			</th>

%		for ( my $i=1; $i <= 10; $i++) {

			<th class="smallish">
				Top <% $i*10 %>%
			</th>

%		}

		</tr>

		</thead>

		<tbody>

%		my $switch = 1;

%		foreach my $round (@rounds) {
%		my ($avg_pref, $avg_mut, $worst_pref, $worst_mut, $deciles) = $m->comp("/funclib/mjp_diagnostics.mas", round => $round );
%		my %deciles = %{$deciles};
%		my @avg_pref = @{$avg_pref};	
		<tr>

			<td>
				<% $round->name %> <% $round->label %>
			</td>
			<td>
				<% sprintf("%.1f", $avg_pref[0]) %> - 
				<% sprintf("%.1f", $avg_pref[1]) %>
			</td>
			<td>
				<% sprintf("%.1f", $worst_pref) %>
			</td>
			<td>
				<% sprintf("%.1f", $avg_mut) %>
			</td>
			<td>
				<% sprintf("%.1f", $worst_mut) %>
			</td>
			<td>42
			</td>
			<td>42/42
			</td>
%			for ( my $i=1; $i <= 10; $i++) {
			
			<td>
				<% $deciles{$i} %>
			</td>
			
%			}


		</tr>

%		}

		</tbody>
		
	</table>

</div>


<div class="right small">

	Use back button to return to previous screen or:
	
	<a class="yellow block" href="/panel/schemat/show.mhtml?event_id=<% $event->id %>">
		Back to <% $event->name %>
	</a>
	<p>
% 	my $end = time();
% 	print "Total load time:  "; printf("%.2f\n", $end - $start); print "<br>";
	</p>

</div>

