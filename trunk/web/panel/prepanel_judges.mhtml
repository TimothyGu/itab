%							}

						</td>

%					}
					
%					if ($group->coach_ratings) { 
						<td class="smaller">
							<% $rating_by_id{$judge->id} %>
						</td> 
%					}
				
					<td class="smaller">
						<a class="redblock" href="/panel/judge_rm.mas?judge_id=<%$judge->id %>&panel_id=<% $panel->id %>&from=pre">Delete</a>
					</td> 
				
				</tr>

% 			}

