<%init>

	foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) {

		foreach my $round ($event->rounds) { 

			$round->listed($ARGS{$round->id});
			$round->update;
		}

	}

	my $msg = "Lists of clearing competitors settings saved.";

	$m->redirect("/panel/publish_rounds.mhtml?msg=$msg");

</%init>

