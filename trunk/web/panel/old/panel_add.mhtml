<%args>
	$tourn
	$round_id
	$account
</%args>
<%init>	
	
	my $round = Tab::Round->retrieve($round_id);

	my @panels = $round->panels;
	@panels = sort { $b->letter cmp $a->letter } @panels;

	my $last_letter = $panels[0]->letter if @panels;
	$last_letter++ if $last_letter;
	$last_letter = "A" unless $last_letter;

	my $event = $round->event;
	my $event_id = $event->id;

	my $panel = Tab::Panel->create({ 
		event 		=> $event->id,
		letter		=> $last_letter,
		type 		=> $round->type,
		round		=> $round->id
	});


	my $err = "Panel $last_letter added ";

	$m->redirect("$Tab::url_prefix/panel/schemat/show.mhtml?event_id=$event_id?err=$err");


</%init>
