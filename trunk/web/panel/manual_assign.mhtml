<%args>
	$account
	$league
	$tourn
	$session
	$panel_id
</%args>
<%perl>

	my $panel = Tab::Panel->retrieve($panel_id);
	my $event = $panel->round->event;

</%perl>

<table width="100%">
<tr>
<td width="100%">
<h3>Manually alter the students in <% $event->name." Round ".$panel->round->name." Section ".$panel->letter %> <% ($account->site_admin) ? $panel->id : "" %></h3>
</td>
<td>
	<form action="panel_view.mhtml" method="post">
	<input type="hidden" name="panel_id" value="<% $panel_id %>">
	<input type="submit" value="Return to Panel">
	</form>
</td>
</tr>
</table>


<div style="float: left; width: 250px;">

<h4>Add speaker codes:</h4>
<p>Separate codes with commas: </p>

<center>
<table cellpadding="5" cellspacing="1">
	<tr>
		<td align="center">
			<form action="comp_multiadd.mas" method="post">
			<textarea rows="10" cols="25" name="comp_codes"></textarea>
		</td>
	</tr>

	<tr>
		<td align="center">
		<input type="hidden" name="return" value="manual">
		<input type="hidden" name="shut_up" value="yes">
		<input type="hidden" name="panel_id" value="<% $panel_id %>">
		<input type="submit" value="   Add Codes to Panel  ">
		</form>
		</td>
	</tr>
</table>
</div>


<div style="float: right; width: 500px;">

<h4>Existing panel:</h4>
<table cellpadding="5" cellspacing="1">

	<tr><td><br></td></tr>


%	my $switch;

%	foreach my $comp (sort {$a->code <=> $b->code} $panel->comps) { 

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

		<th><% $comp->code %></th>

%		if ($event->team == 1) { 
			<td><% $comp->student->first." ".$comp->student->last %></td>
%		} elsif ($event->team == 2) { 
			<td><% $comp->student->first." ".$comp->student->last %>
			and <% $comp->partner->first." ".$comp->partner->last %></td>
%		} elsif ($event->team == 3) { 
			<td><% $comp->name %></td>
%		}

		<td>
			<% $comp->school->name %>
		</td>

%		if ($league->diocese_based) {

			<td>
				<% $comp->school->region->name %>		
			</td>
%		}


		<td colspan="2" align="right">
			<form action="comp_rm_from_panel.mhtml" method="post">
			<input type="hidden" name="from" value="manual">
			<input type="hidden" name="certain" value="I am certain">
			<input type="hidden" name="comp_id" value="<% $comp->id %>">
			<input type="hidden" name="panel_id" value="<% $panel_id %>">
			<input type="submit" value="Remove">
			</form>
		</td>

	</tr>

%	}


</table>
</div>

<div style='clear: both;'></div>

