<%args>
	$tourn
</%args>
<%perl>

	foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

		next if $event->type eq "debate";

		foreach my $round ($event->rounds) { 

			if ($ARGS{$round->id}) { 

				$round->published(1);

			} else { 

				$round->published(0);

			}

			$round->update;

		}

	}

	$m->redirect("$Tab::url_prefix/panel/publish_rounds.mhtml");

</%perl>
