<%args>
	$comp_id
</%args>
<%init>

	my $comp = Tab::Entry->retrieve($comp_id);

	my $school = $comp->school;

	my $msg;

	if ($comp->ada > 0) { 

		$comp->ada(0);
		$msg = "ADA accomodation requested for ".$comp->code;

	} else { 

		$comp->ada(1);
		$msg = "ADA accomodation cancelled for ".$comp->code;

	}

	$comp->update;

	$m->redirect("/user/tourn/entry/students.mhtml?school_id=".$school->id."&event_id=".$comp->event->id."&msg=$msg");

</%init>

