<%args>
	$school
	$session
	$account
</%args>
<%perl>

	my $now = DateTime->now;

	my $tourn = $school->tournament;

	my $switch;

</%perl>

    <h2><% $school->name %> at the <% $tourn->name %></h2>

    <& menubar.mas, school => $school, whoami => "concessions" &>

	<h3>Order <% ($tourn->method->concession_name) ? $tourn->method->concession_name : "Concessions" %> </h3>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="liblrow">

				<th>
					<form action="concessions_save.mhtml" method="post">
					<input type="hidden" name="school_id" value="<% $school->id %>">
					Name
				</th>

				<th>
					Description
				</th>

				<th>
					Each
				</th>

				<th>
					Quant.
				</th>

				<th>
					Total
				</th>

			</tr>

%			foreach my $item (sort {$a->name cmp $b->name} $tourn->items) { 

%				if ($item->deadline && $item->deadline < $now) { 

					<tr <% ($switch % 2) ? "class=\"lirdrow\"" : "class=\"redrow\"" %>>

						<td class="smaller">
							<% $item->name %>
						</td>

						<td class="smaller">
							<% $item->description %>
						</td>

						<td class="smaller">
%							if ($item->price > 0) { 
								$<% sprintf ("%.2f", $item->price) %> 
%							} else { 
								FREE
%							}
						</td>

						<td class="smaller">
							<input type="hidden" name="<% $item->id %>_amount" value="<% $school->item_count($item) %>" size="4">
							<% $school->item_count($item) %>
						</td>

						<td class="smaller">
							$<% sprintf ("%.2f", $school->item_cost($item)) %>
						</td>

					</tr>

					<tr <% ($switch++ % 2) ? "class=\"lirdrow\"" : "class=\"redrow\"" %>>
	
						<td class="explain" colspan="5" align="right">
							The deadline to change orders for "<% $item->name %>" was 
							<% &Tab::niceshortdt($item->deadline->set_time_zone($tourn->league->timezone)) %>.
						</td>

					</tr>

%				} else { 

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<td class="smaller">
							<% $item->name %>
						</td>

						<td class="smaller">
							<% $item->description %>
						</td>

						<td class="smaller">
%							if ($item->price > 0) { 
								$<% sprintf ("%.2f", $item->price) %> 
%							} else {
								FREE
%							}
						</td>

						<td class="smaller">
							<input type="text" name="<% $item->id %>_amount" value="<% $school->item_count($item) %>" size="4">
						</td>

						<td class="smaller">
							$<% sprintf ("%.2f", $school->item_cost($item)) %>
						</td>

					</tr>

%				}

%			}

			<tr class="liblrow">

				<td class="right" colspan="5">
					<input class="blue" type="submit" value="   Save Order   ">
				</td>

			</tr>
	
		</table>

