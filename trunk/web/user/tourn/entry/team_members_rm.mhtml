<%args>
	$league
	$comp_id
	$student_id
</%args>
<%init>

	my $comp = Tab::Comp->retrieve($comp_id);
	my $student = Tab::Student->retrieve($student_id);

	my @team_members = Tab::TeamMember->search( student => $student->id, comp => $comp_id );

	my $msg .= $student->first." ".$student->last." has been removed from ".$comp->name;

	foreach (@team_members) { $_->delete; }

	$m->redirect("team_members.mhtml?comp_id=$comp_id&school_id=".$comp->school->id."&msg=$msg");
	
</%init>
