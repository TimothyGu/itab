<%args>
	$entry_id
	$school_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	my $event = $entry->event;

	my $tourn = $event->tournament;

	my $circuit = $tourn->circuit;

	my $school = Tab::School->retrieve($school_id);

</%init>

	<div class="left huge">

		<h2>Additional Details Needed</h2>

		<form action="details_save.mhtml" method="post">
		<input type="hidden" name="entry_id" value="<% $entry->id %>">
		<input type="hidden" name="school_id" value="<% $school->id %>">

%		if ($event->ask_for_titles) {
			
			<h3>This tournament requires piece titles </h3>

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr class="oddrow">

					<td>
						Please provide the piece title (or ISBN) for this entry:
					</td>

				</tr>

				<tr class="evenrow">

					<td class="rightalign">
						<input type="text" name="title" value="<% $entry->title %>" size="75">
					</td>

				</tr>

			</table>

			<br />
			<hr />

%		}
	
%		if ($tourn->method->ask_qualifying_tournament) { 
			
			<h3>This tournament requires qualification:</h3>

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr class="oddrow">

					<td>
						What tournament did the entry qualify at?
					</td>

				</tr>

				<tr class="evenrow">

					<td class="rightalign">
						<input type="text" name="qualifier" value="<% $entry->qualifier %>" size="75">
					</td>

				</tr>

			</table>

%		}
	
%		if ($tourn->method->ask_two_quals) {

			<h3>This tournament requires qualification:</h3>

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr class="oddrow">

					<td>
						First qualifying tournament:
					</td>

					<td class="rightalign" colspan="2">
						<input type="text" name="qualifier" value="<% $entry->qualifier %>" size="35">
					</td>

				</tr>

				<tr class="evenrow">

					<td>
						<% ($circuit->id == 36) ? "Qualifying points earned (2 or 4):" : "Placement/Size of Field (eg: 2/44)" %>
					</td>

					<td class="rightalign">
						<input type="text" name="qualexp" value="<% $entry->qualexp %>" size="35">
					</td>

				</tr>

				<tr>
					<td colspan="2">
						<hr />
					</td>

				</tr>

				<tr class="oddrow">

					<td>
						Second qualifying tournament:
					</td>

					<td class="rightalign" colspan="2">
						<input type="text" name="qual2" value="<% $entry->qual2 %>" size="35">
					</td>

				</tr>

				<tr class="evenrow">

					<td>
						<% ($circuit->id == 36) ? "Qualifying points earned (2 or 4):" : "Placement/Size of Field)" %>
					</td>

					<td class="rightalign">
						<input type="text" name="qual2exp" value="<% $entry->qual2exp %>" size="35">
					</td>

				</tr>

			</table>

%		}

		<hr />

		<table cellpadding="5" cellspacing="1" width="100%">
			
			<tr class="liblrow">

				<td align="right">
					<input type="submit" value=" Save Entry Details ">
					</form>
				</td>

			</tr>


		</table>

	</div>

	<div class="right small">

		<h3>Entry</h3>

		<p><% ($event->no_codes) ? "" : "Entry code: ".$event->code %></p>

		<p><% $entry->team_name %></p>

		<p><% $event->name %></p>

	</div>

