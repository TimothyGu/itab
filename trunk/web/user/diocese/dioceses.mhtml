<%args>
	$league => undef
	$account
	$tourn => undef
	$session
</%args>
<%init>

    if ($session->entry) {
		$session->entry("");
		$session->update;
	}


	unless ($league->diocese_based || 
			( $league->region_based && not defined $league->direct_access)) { 
		$m->redirect("$Tab::url_prefix/user/diocese/schools.mhtml");
	}


	my @dioceses = Tab::Region->search( director => $account->id, league => $league->id); 


	if (scalar @dioceses == 1) { 

		$m->redirect("$Tab::url_prefix/user/diocese/diocese_view.mhtml?diocese_id=".$dioceses[0]->id);

	}

	unless (@dioceses || $account->site_admin) { 

		$m->redirect("$Tab::url_prefix/league/select_tournament.mhtml");

	}


</%init>

%	if ($account->site_admin) {
	

	<h3>See what they're seeing:</h3>

		<center>
		<table width="100%">

		<tr>

		<th>View a diocese's registration screen:</th>

		<td>
		<form action="diocese_view.mhtml" method="post">
		<select name="diocese_id">

%		my @dioceses = $tourn->regions if $tourn && $tourn->regions;
%		@dioceses = $league->regions unless @dioceses;

%		foreach my $diocese (sort {$a->name cmp $b->name} @dioceses) { 
			<option value="<% $diocese->id %>"><% $diocese->name %></option>
%		}

		</select>
		</td>

		<td>
		<input class="blue" type="submit" value="    View Registration for Diocese   ">
		</form>
		</td>
		</tr>

		<tr>
		<td colspan="3" align="center" style="padding-top: 25px;">
		<form action="/league/select_tournament.mhtml" method="post">
		<input class="blue" type="submit" value="      Or, Choose a Tournament     ">
		</form>
		</td>
		</tr>

		</table>

		<center>

%	}

