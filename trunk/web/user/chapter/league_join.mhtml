<%args>
	$league_id => undef
	$chapter_id => undef
	$account
	$type
	$region_id => undef
	$membership_id => undef
</%args>
<%init>

	my $league = Tab::League->retrieve($league_id);
	my $chapter = Tab::Chapter->retrieve($chapter_id); 
	
	my @cls = Tab::ChapterLeague->search( chapter => $chapter->id, league => $league->id );

	my @memberships = $league->memberships;
	my @regions = $league->regions if $league->region_based;

	if (@cls) { 
		my $err = "You are already a member of that league";
		$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&err=$err");
	}

	if ($type eq "to") {  #Tournaments only 

		unless ($league->tourn_only) {
			my $err = "That league does not allow registrations from nonmembers.  You must join to register";
			$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&err=$err");
		}

		my $cl = Tab::ChapterLeague->create({
			league => $league->id,
			chapter => $chapter->id,
			active => 1,
			full_member => 0
		});

		my $msg = "You can now register for tournaments in ".$league->name;
		$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&msg=$msg");

	} 

	if ($type eq "full") { 

		my $missing;

		unless ($league->full_members) {
			my $err = "That league does not have full members";
			$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&err=$err");
		}

		# Check if regions are required
		if ($league->region_based) { 
			$region_id = shift @regions if @regions && scalar @regions == 1;
			$missing = "league" unless $region_id;
		}

		if ($league->memberships) { 
			$membership_id = shift @memberships if @memberships && scalar @memberships == 1;
			$missing .="membership" unless $membership_id;
		}

		unless ($missing) { 

			my $cl = Tab::ChapterLeague->create({
				league => $league->id,
				chapter => $chapter->id,
				region => $region_id,
				membership => $membership_id,
				active => 1,
				full_member => 1,
			});

			my $msg = "You are now a member of ".$league->name;
			$m->redirect("/user/chapter/leagues.mhtml?chapter_id=".$chapter->id."&msg=$msg");

		}

	}

	my $switch;

</%init>

	<div id="leftbig">

		<h2>More details needed:</h2>

			<form action="league_join.mhtml" method="post">
			<input type="hidden" name="league_id" value="<% $league->id %>">
			<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
			<input type="hidden" name="type" value="<% $type %>">

%			if ($league->memberships && scalar $league->memberships > 1) { 

				<h3>Choose membership type:</h3>

				<table cellpadding="5" cellspacing="1" width="100%">

%					foreach my $mem (@memberships) { 

						<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

							<td>
								<% $mem->name %>
							</td>

							<td>
								<% ($mem->dues) ? "Dues: \$".$mem->dues : "" %>
							</td>

							<td>
								<input type="radio" name="membership_id" value="<% $mem->id %>">
							</td>

						</tr>

%					}

				</table>

%			} 

%			if ($league->region_based) { 

				<h4>Choose your school's region:</h4>

				<table cellpadding="7" cellspacing="1" width="100%">

%					foreach my $region ($league->regions) { 
							
						<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

							<td>
								<% $region->name %>
							</td>

							<td>
								<% ($region->director) ? "Director: ".$region->director->first." ".$region->director->last : "" %>
							</td>

							<td>
								<input type="radio" name="region_id" value="<% $region->id %>">
							</td>
			
						</tr>

%					}

				</table>

%			}
				
			<table cellpadding="5" cellspacing="1" width="100%">
				
				<tr class="liblrow">

					<td align="right">
						<input type="submit" value="   Save League Settings   ">
						</form>
					</td>

				</tr>

			</table>

	</div>
