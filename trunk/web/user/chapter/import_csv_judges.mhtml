<%args>
	$account
	$chapter_id
</%args>
<%init>

	my $chapter =  Tab::Chapter->retrieve($chapter_id);
	
	my $tz = $account->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now(time_zone => $tz);

	# Get the upload and create the file handle.
	my $req = Apache2::Request->new($r);
	my @csv_handles = $r->upload; 
	my $csv_file = $req->upload($csv_handles[0]);
	my $io = $csv_file->io;

	my @lines = <$io>;

	my $has_codes;

	my @judges;

	foreach (@lines) { 
		$_ =~ s/[\r]+/\n/g;
		$_ =~ s/[\r\n]+/\n/g;
		$_ =~ s/[\n]+/\n/g;
		push @judges, split (/\n/, $_);
	}

	ENTRY:
	foreach my $judge (@judges) { 

		my ($first_name, $last_name, $gender, $phone, $diet) = split(/,/, $judge);
		($first_name, $last_name, $gender, $phone, $diet) = split(/;/, $judge) unless $last_name;

		next if $first_name eq "First Name";

		$gender = uc($gender);
		undef $gender unless $gender eq "M" || $gender eq "F";

		$phone =~ s/[\D_]//g;

		$judge = Tab::ChapterJudge->create({
			chapter  => $chapter_id,
			first    => $first_name,
			last     => $last_name,
			gender   => $gender,
			cell     => $phone,
			diet     => $diet,
			created  => $now
		});

	}	

	my $msg = scalar @judges ." judges imported into ". $chapter->name;
	$m->redirect("judges.mhtml?chapter_id=$chapter_id&msg=$msg");

</%init>
