<%args>
	$tourn
	$account
	$chapter_id => undef
</%args>
<%init>

    my $chapter;

    unless ($chapter_id) {

        my @chapters = $account->chapters;
        $chapter = shift @chapters if scalar @chapters == 1;

        unless ($chapter) { 
            my $err = "You have not chosen a team/school.  Please choose at right";
            $m->redirect("/user/home.mhtml?err=$err");
        }   

    } else { 
        $chapter = Tab::Chapter->retrieve($chapter_id);
    }   

</%init>

	<div class="left huge">

		<h2><% $chapter->name %>: Students & Judges</h2>

		<& tabbar.mas, chapter => $chapter, whoami => "students" &> 

		<h2>Import with Spreadsheets</h2>

		<p>Files must be saved in CSV (Comma Separated Values) format.  Please
		use the templates provided below</p>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="students" action="import_csv_students.mhtml" method="post">
		<input type="hidden" name="chapter_id" value="<% $chapter_id %>">

		<div class="evenrow block">

			<span class="smallishspan">
				Students
			</span>

			<span class="halfspan smallish">
				<input name="students" type="file" class="button">
			</span>

			<span class="medspan rightalign" style="margin-left: 15px;">
				<input type="submit" value="Upload" class="thin">
			</span>

		</div>
		
		</form>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="judges" action="import_csv_judges.mhtml" method="post">
		<input type="hidden" name="chapter_id" value="<% $chapter_id %>">

		<div class="oddrow block">

			<span class="smallishspan">
				Judges:
			</span>

			<span class="halfspan smallish">
				<input name="judges" type="file" class="button">
			</span>

			<span class="medspan rightalign" style=" margin-left: 15px;">
				<input type="submit" value="Upload" class="thin">
			</span>

		</div>
		</form>

		<br />
		<br />

		<h4>Templates</h4>

		<div class="evenrow centeralign block">

			<br />

			<a class="dkblue centeralign inline medbigspan smallish"  href="import_csv_template.mhtml">
				Download Students template
			</a>

			<a class="dkblue centeralign inline medbigspan smallish" style="margin-left: 15px;"  href="import_csv_template.mhtml?judge=y">
				Download Judges template
			</a>

			<br />
			<br />

		</div>

	</div>

	<div class="right">

		<div class="sidenote">

			<h4>Return</h4>

			<a href="students.mhtml?chapter_id=<% $chapter_id %>" class="blue block">
				Student Roster
			</a>

			<a href="judges.mhtml?chapter_id=<% $chapter_id %>" class="blue block">
				Judge Roster
			</a>

		</div>

	</div>


