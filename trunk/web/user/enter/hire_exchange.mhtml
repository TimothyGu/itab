<%args>
	$tourn
	$school
	$group_id
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my @judges = $m->comp("/funclib/exchange_judges.mas", group => $group);

	my @hires = $school->hires;

</%init>

	<& /funclib/tablesorter.mas, table => "exchange" &>

	<div class="left huge">

		<h2><% $school->tourn->name %></h2>
	
		<& menubar.mas, school => $school, whoami => "judges" &>

		<h2>Hired Judge Exchange: <% $group->abbr %></h2>

		<table cellpadding="4" cellspacing="1" id="exchange">

			<thead>
				
				<tr class="yellowrow">

					<th class="smaller">
						First
					</th>

					<th class="smaller">
						Last
					</th>

					<th class="smaller">
						School
					</th>

					<th class="smaller">
						Rnds Avail
					</th>

					<th class="smaller">
						Contact
					</th>

					<th class="smaller" colspan="2">
						Hire Rounds
					</th>

				</tr>

			</thead>

			<tbody>

%			foreach my $judge (@judges) { 

				<tr>

					<td class="smaller">
						<% $judge->first %>
					</td>

					<td class="smaller">
						<% $judge->last %>
					</td>

					<td class="smaller">
						<% $judge->school ? $judge->school->short_name : "Hired " %>
					</td>

					<td class="smaller centeralign">
						<% $judge->hire_offer - $judge->hired %>
					</td>

					<td class="smaller">
						<a class="white block" href="mailto:<% $judge->account->email %>">
							<% $judge->account->email %>
						</a>
					</td>

					<td class="smaller">
						<form action="hire_confirm.mhtml" method="post">
						<input type="hidden" name="judge_id" value="<% $judge->id %>">
						<input type="hidden" name="school_id" value="<% $school->id %>">
						<input type="number" name="rounds" size="5" min="0" max="<% $judge->hire_offer - $judge->hired %>">
					</td>

					<td>
						<input type="submit" value="Hire" class="thin">
						</form>
					</td>

				</tr>

%			}

			</tbody>

		</table>
		
	</div>
		
	<div class="right small">

		<div class="sidenote">
			<h4>Judge Exchange</h4>

			<p>Please contact all judges to arrange payment in advance of
			hiring them for rounds.  Judges will also be notified by email when
			you hire them.</p>

		</div>

%		if (@hires) { 

			<div class="sidenote">

				<h4>Your Hires</h4>

				<p>Tap a hire's name to cancel</p>

%				foreach my $hire (@hires) { 

%					next unless $hire->judge;

					<a class="blue block" href="hire_cancel.mhtml?hire_id=<% $hire->id %>">
						<% $hire->judge->first." ".$hire->judge->last %>
						<span class="tinyspan right">
							<% $hire->rounds %> Rnds
						</span>
					</a>
%				}

			</div>

%		}

	</div>

