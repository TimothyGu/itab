<%args>
	$entry_id => undef
	$clone_id
	$session
	$account
	$debug => 1
</%args>
<%init>

	my $now = DateTime->now;

	my $msg;

	my $clone = Tab::Entry->retrieve($clone_id);

	if ($entry_id) { 

		my $entry = Tab::Entry->retrieve($entry_id);

		unless ($entry->school->id == $clone->school->id) { 

			$m->print("<p>Very freakin' clever.  Trying to clone the ratings of another school's debaters?</p>");
			$m->print("<p>But not clever enough.  Go away, and fear the wrath of Palmer</p>");
			$m->abort("");

		}

		foreach my $strike ($clone->strikes) { 

			next if $strike->judge->cannot_judge($entry);

			my $new_strike = $strike->copy({
				entry => $entry->id
			});

		}

		$msg = "Strikes for ".$clone->team_name." have been copied to ".$entry->team_name;

	} else { 

		foreach my $entry ($clone->school->group_entries($clone->event->class->judge_group)) { 

			next if $entry->id == $clone->id;
 
			foreach my $strike ($clone->strikes) { 

				my $new_strike = $strike->copy({
					entry => $entry->id
				});

			}

		}
	
		$msg = "Strikes for ".$clone->team_name." have been copied to ".$clone->school->name;

	}

	$m->redirect("/user/tourn/entry/ratings/entry_strikes.mhtml?school_id=".$clone->school->id."&clone_id=".$clone->id."&group_id=".$clone->event->judge_group->id."&entry_id=$entry_id&msg=".$msg);


</%init>

