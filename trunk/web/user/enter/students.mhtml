<%args> 
	$school
	$account
	$event_id => undef
</%args>
<%init>

	my $tourn = $school->tourn;
	my $event = Tab::Event->retrieve($event_id) if $event_id;	

	my $tz = $tourn->tz;

    my $now = DateTime->now;

	if ($event) { 

		my @already_entered = Tab::Entry->search( 
			school => $school->id, 
			event => $event_id, 
			waitlist => 0
		);

		my @waitlist = Tab::Entry->search( 
			school => $school->id, 
			event => $event_id, 
			waitlist => 1
		);

</%init>

	<div class="left huge">
	
		<h2><% $school->name %> at the <% $tourn->name %></h2>
		
		<& menubar.mas, school => $school, whoami => "students" &>

%		if ($tourn->setting("drop_deadline") && $now > $tourn->setting("drop_deadline")) { 

			<h2>Change deadline has passed</h2>
							
			<p>
				If you have additional changes, you can no longer enter them
				online.  Please contact the tournament directly.
			</p>

%		}

		<h3><% $event->name %> Entries:</h3>

%			if ($tourn->setting("ask_two_quals")) { 

				<p>
					Please enter the qualifying tournaments in the slots
					providing, along with the student's placement at that
					tournament and the size of the entry in that event.  
				</p>

%			}

% 			my $count;

% 			my $waitlist_done;

			<table cellpadding="5" cellspacing="1"  width="100%">

				<tr class="yellowrow">

					<th>
						Code
					</th>

					<th>
						Name
					</th>

					<th>
						Access*
					</th>

					<th>
					</th>

				</tr>

% 				foreach my $already (@already_entered, @waitlist) { 

%					if ($already->waitlist &! $waitlist_done) { 

						<tr>

							<td colspan="8">
								<h4>Waitlisted Entries:</h4>
							</td>

						</tr>

%						$waitlist_done++;
	
%					}

					<tr <% ($count % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
						<td>
							<% $already->dropped ? "DROP" : $tourn->setting("hide_codes") ? "" : $already->code %>
						</td>

						<td class="<% $already->dropped ? "strike" : "" %> nowrap"> 
							<% $already->team_name %>
						</td>

						<td>
%							if ($already->ada) { 
								Yes
%							} else { 
								No
%							}
						</td>

						<td align="center">
%							unless ($now > $tourn->drop_deadline) { 
								<a class="dkgreen centeralign block" href="entry_edit.mhtml?school_id=<% $school->id %>&entry_id=<% $already->id %>">
%							}
						</td>

						<td align="center">
%							unless ($now > $tourn->drop_deadline) { 

%								if ($already->dropped) {
									<a class="dkred centeralign block" href="entry_drop.mhtml?school_id=<% $school->id %>&entry_id=<% $already->id %>">
										DROP
									</a>

%								} elsif ($now < $tourn->reg_end && $now < $event->deadline) { 

									<a class="dkgreen centeralign block" href="entry_drop.mhtml?school_id=<% $school->id %>&entry_id=<% $already->id %>">
										UNDROP
									</a>
%								}

%							}

						</td>

					</tr>

% 					if ($event->ask_for_titles) {

						<tr <% ($count % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

							<th class="smallrt">
								Title/ISBN:
							</th>

							<td colspan="4" class="smaller">
								<a class="white block" href="details.mhtml?entry_id=<% $already->id %>&school_id=<% $school->id %>">
									<% ($already->title) ? $already->title : "Click to Enter Title" %>
								</a>
							</td>

						</tr>

%					}

%					if ($tourn->method->ask_qualifying_tournament || $tourn->method->ask_two_quals) { 

						<tr <% ($count % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

							<th class="smallrt">
								Qualifiers:
							</th>

							<td colspan="3" class="smaller">
								<a class="white block"  style="padding: 1px; margin: 1px;" href="details.mhtml?entry_id=<% $already->id %>&school_id=<% $school->id %>">
									<% ($already->qualifier) ? $already->qualifier." ". $already->qualexp : "Enter Qualifier" %>
									<% ($tourn->method->ask_two_quals && $already->qualifier) ? "<br />".$already->qual2." ".$already->qual2exp : "" %>
								</a>
							</td>

						</tr>

%					}

%					$count++;

					</tr>

% 				} #end of foreach my already


%				if ($waitlist_done) {

					<tr>
						<td>
						</td>
					</tr>

					<tr>
						<td colspan="4" style="border: 1px solid black; padding: 8px;" class="explain">

							You have waitlisted students.  You will be notified
							by email when (or if) the tournament accepts your
							students off the waitlist.  Until then, it's
							difficult to predict when and by how much a
							waitlist is going to move.  

						</td>
						
					</tr>

%				}

%				if (@already_entered) {

					<tr>
						<td colspan="5" class="explain" style="border-top: 1px solid black;">
							<br />

							<b>*Access:</b>

							Use this box to indicate that the entry needs wheelchair or
							other access considerations.  Email the tournament
							staff if more details are needed.

						</td>
					</tr>

%				}

% 				if ($event->setting("description")) { 

					<tr>
						<td colspan="8">
							<br />
							<br />
							<br />
							<br />
							<h4>Description and rules for <% $event->name %> </h4>
						</td>
					</tr>

					<tr>

						<td colspan="8">
							<% $event->setting("description") %>
						</td>
				
					</tr>
% 				}
	
			</table>

%		} else { 
			
			<div class="left huge">

			<h2>Enter students into <% $tourn->name %></h2>
	
			<& menubar.mas, school => $school, whoami => "students" &>


				<p>Choose an event at right to register students</p>
%		}

	</div>

	<div class="right small">
	
%		if ($event) {
			
			<div class="sidenote">

			<h4>Stats & Deadlines</h4> 

<%perl>
				my $caphit = "Your school's limit of ".$event->setting("school_cap")." Reached" if (
					 ((scalar Tab::Entry->search( school => $school->id, event => $event->id, unconfirmed => 0, waitlist => 0)) 
				 	>= ($event->setting("school_cap"))) && ($event->setting("school_cap") > 0) 
				);

			    $caphit = "This event is full." if (
					((scalar Tab::Entry->search(event => $event->id, dropped => 0, waitlist => 0, unconfirmed => 0)) 
						>= ($event->setting("cap"))) && ($event->setting("cap") > 0)
				) ;

				$caphit.= " Add entries to the waitlist:" if $caphit && $event->setting("waitlist");
				$caphit .= "All entries are waitlisted pending admission by director" if $event->setting("waitlist_all");

</%perl>

%			if ($event->setting("deadline") && $now > $event->setting("deadline")) { 

				<a class="blue block">
					Add deadline <% Tab::niceshortdt($event->deadline->set_time_zone($tz)) %>
				</a>

%			} else { 
				
				<a class="blue block">
					Add Deadline:  <% Tab::niceshortdt($tourn->reg_end->set_time_zone($tz)) %>
				</a>

%			}

%			unless (    ($now > $tourn->reg_end) 
%					    || (  $event->setting("deadline") && $now > $event->setting("deadline")  ) 
%						|| (  $caphit && $event->setting("waitlist") < 1) ) { 


<%perl>
			    my @clean_students = $m->comp("/funclib/students_evententer.mas",
    	    	    event => $event,
       			    tourn => $tourn,
					school => $school,
					chapter => $school->chapter);

</%perl>

%				if ($event->setting("school_cap")) {
					<a class="blue halfblock"> 
						School cap:  <% $event->setting("school_cap") %>
					</a>
%				}

%				if ($event->setting("cap")) {
					<a class="blue halfblock">
						Overall cap: <% $event->setting("cap") %>
					</a>
%				}
			

%				if ($caphit) { 
					<a class="dkred block"><% $caphit %></a>
%				}

			</div>
			<div class="sidenote">

%				if ($event->setting("max_entry") > 2) {
	
					<a href="entry_edit.mhtml&school_id=<% $school->id %>&event_id=<% $event->id %>" class="dkgreen block">
						Add Entry
					</a>

%				} else { 

					<h4 style="padding-bottom: 1px; margin-bottom: 1px;">Add Entry</h4>

					<table cellpadding="2" cellspacing="1" width="100%">
				
						<tr>
							<td class="centeralign">
								<form action="student_save.mhtml" method="post">
								<input type="hidden" name="school_id" value="<% $school->id %>">
								<input type="hidden" name="waitlist" value="<% ($caphit) ? 1 : 0 %>"> 
								<input type="hidden" name="event_id" value="<% $event->id %>">

								<select name="student_id" size="<% 10 / ($event->setting("max_entry")) %>" class="fixedmedsmall" >
%									foreach my $student (@clean_students) { 
										<option value="<% $student->id %>">
											<% $student->last.", ".$student->first %>
										</option>
%									}
								</select>
							</td>
						</tr>

%						if ($event->setting("max_entry") == 2) { 

							<tr>
								<td style="border-top: 1px solid black;" class="centeralign">
									<select name="partner_id" size="10">

%										foreach my $student (@clean_students) { 
											<option value="<% $student->id %>">
												<% $student->last.", ".$student->first %>
											</option>
%										}

									</select>
								</td>
							</tr>

%						}

						<tr class="liblrow">
						
							<td align="right" colspan="2">
								<input type="submit"  value="  Add Entry  " class="thin">
								</form>
							</td>

						</tr>

					</table>

%				} 
			
				<a class="yellow block" href="/user/chapter/student_roster.mhtml?chapter_id=<% $school->chapter->id %>">
					Add Students to Roster
				</a>
	
%			} 


			</div>
%		}

		<div class="sidenote">

		<h4>Events:</h4>

%		foreach my $event (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

			<a class="<% ($event->id == $event_id) ? "dk" : "" %>blue block"
				href="students.mhtml?school_id=<% $school->id %>&event_id=<% $event->id %>">
				<% scalar($school->entries(event => $event->id)) %> - <% $event->name %>
			</a>

%		}

		</div>

	</div>

