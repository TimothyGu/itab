<%args>
	$account
	$entry_id
	$panel_id
	$judge_id
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);
	my $judge = Tab::Judge->retrieve($judge_id);
	my $entry = Tab::Entry->retrieve($entry_id);

	my @values = $m->comp("/funclib/panel_ballot_values.mas", panel => $panel, judge => $judge, rfd => "rfd", entry => $entry);

</%init>

	<& /user/menu.mas, whoami => "student", account => $account &>

	<div class="left huge">

		<h2><% $panel->round->event->tourn->name %></h2>

		<h3><% $entry->code %></h3>
		<h4>Round <% $panel->round->realname %> decision from <% $judge->first." ".$judge->last %></h4>

%		foreach my $value (@values) { 

%			if ($value->tag eq "rfd") { 
				<h4>Reason for decision:</h4>
				<div class="padmore">
					<% $value->content %>
				</div>
%			}

%			if ($value->tag eq "comments") { 
				<h4>Comments specific to you:</h4>
				<div class="padmore">
					<% $value->content %>
				</div>
%			}

%		}	

	</div>


