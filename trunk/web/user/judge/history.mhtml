<%args>
	$account
</%args>

%	my $switch;

	<div class="left huge">

		<h2>Your judging history</h2>

		<table cellpadding="5" cellspacing="1">

			<tr class="yellowrow">
				
				<th class="smaller">
					Tournament
				</th>

				<th class="smaller">
					Year
				</th>

				<th class="smaller">
					Dates
				</th>

				<th class="smaller">
					Division
				</th>

				<th class="smaller">
					Rounds
				</th>

			</tr>

%			foreach  my $judge (sort {$b->id <=> $a->id} $account->judges) { 

%				my $tourn = $judge->judge_group->tourn;

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						<a class="white nowrap block" href="/index/tourn.mhtml?tourn_id=<% $tourn->id %>">
						<% $tourn->name %>
						</a>
					</td>

					<td class="smaller">
						<% $tourn->start->year %>
					</td>

					<td class="smaller" width="75px">
						<% Tab::niceshortdate($tourn->start->set_time_zone($tourn->tz)) %>
						<% ($tourn->start->day != $tourn->end->day) ? "-".Tab::niceshortdate($tourn->end->set_time_zone($tourn->tz)) : "" %>
					</td>

					<td class="smaller">
						<% $judge->judge_group->name %>
					</td>

					<td class="centeralign">
						<% scalar $m->comp("/funclib/judge_panels.mas", judge => $judge)  %>
						<% ($judge->obligation) ? "/".$judge->obligation : "" %> 
					</td>

				</tr>

%			}

		</table>

	</div>

	<div class="right small">

		<div class="sidenote">

			<h4>Your teams</h4>

%			foreach my $cj ($account->chapter_judges) { 
				<a class="yellow block" href="chapter.mhtml?chapter_judge_id=<% $cj->id %>">
					<% $cj->chapter->name %>
				</a>
%			}

		</div>

		<div class="sidenote">

			<h4>Recent judging</h4>

%			my $count;
%			foreach my $judge (sort {$b->id <=> $a->id} $account->judges) { 
%				last if $count++ > 10;
				<a class="blue nowrap block" href="judge.mhtml?judge_id=<% $judge->id %>">
					<% $judge->judge_group->abbr %> at <% $judge->judge_group->tourn->name %>
				</a>
%			}

			<a class="dkblue block" href="history.mhtml?account_id=<% $account->id %>" style="margin-top: 10px;">
				Full Judging History
			</a>
	
		</div>

	</div>

