<%args>
	$account
	$judge_id => undef
	$past     => undef
</%args>
<%init>

	my $judge = Tab::Judge->retrieve($judge_id);

	if ($judge > 0 && $judge->account && $judge->account->id != $account->id) { 
		my $name = $account->last;
		$m->print("That judge is not you.  Stop messing around, $name");
		$m->abort;
	}

	my @judges = $account->judges unless $judge;
	push (@judges, $judge) if $judge;

	my $switch;
	my $now = DateTime->now;

</%init>

	<& /user/menu.mas, account => $account &>

	<div class="huge left">

		<h2>Judging record</h2>

%		foreach my $judge (@judges) { 

%			my $switch;
%			my $tourn = $judge->judge_group->tourn;
%			my $tz = $tourn->tz;  
%			$tz = "UTC" unless $tz;
%			my $start = $tourn->start->set_time_zone($tz);
%			my $end = $tourn->end->set_time_zone($tz);

%			next if not defined $past && $judge->id != $judge_id && $end < $now;

			<div class="block">
				<span class="hugespan padno nowrap">
					<h4><% $tourn->name %> </h4>
				</span>
				<span class="onefifty padno nowrap rightalign">
					<% Tab::niceshortdate($start) %><% $start->day != $end->day ? " - ".Tab::niceshortdate($end) : "" %>/<% $start->year %>
				</span>
			</div>

			<div class="half left">

				<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
					<span class="medspan">
						School
					</span>
					<span class="onefifty nowrap padno">
						<% $judge->school ? $judge->school->short_name : "Hired" %>
					</span>
				</span>

				<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
					<span class="medspan">
						Judge Group
					</span>
					<span class="onefifty nowrap padno">
						<% $judge->judge_group->name %>
					</span>
				</span>
	
%				unless  ($judge->judge_group->setting("no_codes")) { 

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
						<span class="medspan">
							Judge Code
						</span>
						<span class="onefifty nowrap padno">
							<% $judge->code %>
						</span>
					</span>

%				}

			</div>

			<div class="right half">

%				undef $switch;

%				if ($end < $now) { 

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
						<span class="medbigspan">
							Rounds judged
						</span>
						<span class="evensmallerspan">
							<% scalar $m->comp("/funclib/judge_panels.mas", judge => $judge) %>
						</span>
					</span>

%				} elsif ($judge->judge_group->setting("rounds_per")) { 

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
						<span class="medbigspan">
							Obligation for School
						</span>
						<span class="evensmallerspan">
							<% $judge->obligation %>
						</span>
					</span>

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">
						<span class="medbigspan">
							Hired Rounds
						</span>
						<span class="evensmallerspan">
							<% $judge->hired %>
						</span>
					</span>
%				}


%				if ($m->comp("/funclib/account_panels.mas", account => $account, judge => $judge)) {

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">

						<span class="medbigspan" style="margin-top: 6px;">
							Enter Ballots Online:
						</span>

						<span class="smallishspan padno">
							<a class="dkgreen inline" href="panels.mhtml">
								ENTER
							</a>
						</span>
					</span>

%				} elsif ($m->comp("/funclib/account_published.mas", account => $account, judge => $judge)) {

					<span class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %> block padmore smallish">

						<span class="medbigspan">
							Online Pairings:
						</span>

						<span class="hundo padno">
							<a class="white block" href="panels.mhtml">Pairings </a>
						</span>
					</span>
%				}

			</div>

			<br style="clear: both;" />

%		}

	</div>

