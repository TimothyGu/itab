<%args>
	$account
	$session
</%args>
<%init>

	my @judges = $m->comp("/funclib/account_judges.mas", account => $account);
	my @tourns = $m->comp("/funclib/account_tourns.mas", account => $account);
	my @entries = $m->comp("/funclib/account_entries.mas", account => $account);
	my @chapters = $m->comp("/funclib/account_chapters.mas", account => $account);
	my @circuits = $m->comp("/funclib/account_circuits.mas", account => $account);
	my @followed = $m->comp("/funclib/account_followed.mas", account => $account);

</%init>

	<div class="right small">

%		if (@chapters) { 
			<div class="sidenote">
				<h4>
					Schools
				</h4>

%				foreach my $chapter (@chapters) { 
					<a class="blue block" href="chapter/index.mhtml?chapter_id=<% $chapter->id %>">
						<% $chapter->name %>
					</a>
%				}

			</div>
%		}

%		if (@judges) { 

			<div class="sidenote">

				<h4>
					Judging
				</h4>

%				foreach my $judge (@judges) { 
					<a class="blue block" href="judge/index.mhtml?judge_id=<% $judge->id %>">
						<% $judge->judge_group->abbr %> at <% $judge->judge_group->tourn->name %>
					</a>
%				}

			</div>
%		}

%		if (@tourns) { 

			<div class="sidenote">
				<h4>
					Tournaments
				</h4>

%				foreach my $tourn (@tourns) { 
					<a class="blue block" href="tourn/select.mhtml?tourn_id=<% $tourn->id %>">

						<span class="medspan">
							<% $tourn->name %>
						</span>

						<span class="location">
							<% $tourn->location %>
						</span>
					</a>
%				}

				<a class="yellow block" href="tourn/all.mhtml" style="margin-top: 5px;">
					See Past Tournaments
				</a>

			</div>
%		}

%		if (@entries) { 

			<div class="sidenote">

				<h4>
					Entries
				</h4>

%				foreach my $entry (@entries) { 
					<a class="blue block" href="entry/index.mhtml?entry_id=<% $entry->id %>">
						<% $entry->event->abbr %> at <% $entry->event->tourn->name %>
					</a>
%				}

%				foreach my $student ($account->students) { 
					<a class="blue block" href="entry/students.mhtml?student_id=<% $student->id %>">
						<% $student->chapter->name %> signups
					</a>
%				}

			</div>
%		}

%		if (@followed) { 

			<div class="sidenote">
				<h4>
					Following
				</h4>

%				foreach my $account (@followed) { 
					<a class="blue block" href="follow/index.mhtml?follow_id=<% $account->id %>">
						<% $account->first." ".$account->last %>
					</a>
%				}

			</div>

%		}

%		if (@circuits) { 

			<div class="sidenote">

				<h4>
					Circuits
				</h4>

%				foreach my $circuit (@circuits) { 

					<a class="blue block" href="circuit/index.mhtml?circuit_id=<% $circuit->id %>">

						<span class="medspan">
							<% $circuit->name %>
						</span>

						<span class="location">
							<% $circuit->state." ".$circuit->country %>
						</span>

					</a>
%				}

			</div>
%		}

%		if ($account->site_admin) { 
			<& /admin/menu.mas, account => $account &>
%		}

	</div>

	<div class="huge left">

		<h2>
			Welcome to Tabroom
		</h2>

		<p>
			The Tabroom online tournament manager is a free online tournament
			management system supported by the Open Society Foundation and the
			<a href="http://www.idebate.org">International Debate Education Association (IDEA)</a>.
		</p>

%		my $switch;

		<h4>
			Coaches
		</h4>

			<table cellpadding="5" cellspacing="1">

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To register online for tournaments, first:
					</td>

					<td class="centeralign" width="200px;">
						<a class="dkgreen noline block" href="chapter/create.mhtml">
							Create your school
						</a>
					</td>

				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To manage your own tournament with Tabroom, first:
					</td>

					<td class="centeralign">
						<a class="dkgreen noline block" href="tourn/request.mhtml">
							Request a tournament
						</a>
					</td>

				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To manage an entire league or circuit:
					</td>

					<td class="centeralign">
						<a class="dkgreen noline block" href="circuit/request.mhtml">
							Request a circuit
						</a>
					</td>

				</tr>

			</table>

		<br />

%		undef $switch;
		<h4>
			Judges
		</h4>

			<table cellpadding="5" cellspacing="1">

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To enter online ballots and get emails or text pairings:
					</td>

					<td class="centeralign" width="200px;">
						<a class="dkgreen noline block" href="judge/search.mhtml">
							Link your account
						</a>
					</td>

				</tr>

			</table>

		<br />

%		undef $switch;

		<h4>
			Students
		</h4>

			<table cellpadding="5" cellspacing="1">

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To sign up for tournaments and get emails or text pairings:
					</td>

					<td class="centeralign" width="200px;">
						<a class="dkgreen noline block" href="student/search.mhtml">
							Link your account
						</a>
					</td>

				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						To follow a student entry (e.g., if you're a parent):
					</td>

					<td class="centeralign">
						<a class="dkgreen noline block" href="student/follow.mhtml">
							Sign up for updates
						</a>
					</td>

				</tr>

			</table>

	</div>

