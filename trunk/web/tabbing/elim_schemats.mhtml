<h3>Elimination Rounds:</h3>

<table cellpadding="3" width="100%">

% foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 

<tr> 
	<td><% $event->abbr %>: </td>


%	foreach my $round (sort {$a->name <=> $b->name} $event->rounds( type => "elim") ) { 
	<td>(<a href="<% $Tab::url_prefix %>/panel/schemat_show.mhtml?event_id=<% $event->id %>&round_id=<% $round->id %>"><% $round->label %></a>)</td>
% } 

%	foreach my $round (sort {$a->name <=> $b->name} $event->rounds( type => "final") ) { 
	<td>(<a href="<% $Tab::url_prefix %>/panel/schemat_show.mhtml?event_id=<% $event->id %>&round_id=<% $round->id %>"><% $round->label %></a>)</td>
% } 




% }

</table>



