%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan">
			</span>

			<span class="smallspan centeralign">
				<input type="submit" class="thin" value=" Go ">
				</form>
			</span>

		</div>

		<br style="clear: both;">

