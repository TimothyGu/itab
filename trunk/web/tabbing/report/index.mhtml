<%args>
	$tourn
</%args>
<%init>

</%init>

	<& menu.mas &>

	<div class="left huge">

		<h2>
			Results Reports
		</h2>

		<h4>
			By Event
		</h4>

		<div class="greynohover block">

			<form action="event_results.mhtml" method="post">

			<span class="medspan">
				Print Full Results
			</span>

			<span class="medbigspan">
				<select name="event_id" class="fixedmed">
					<option value="all">All Events</option>
%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan">
				<select name="report" class="fixedmed">
					<option value="all">All Rounds</option>
					<option value="final">Final Round</option>
					<option value="elims">All Break Rounds</option>
					<option value="prelims">Prelims</option>
					<option value="speakers">Speaker Awards</option>
				</select>
			</span>

			<span class="smallspan centeralign">
				<input type="submit" class="thin" value=" Go ">
				</form>
			</span>

		</div>

		<div class="whitenohover block padmore">

			<form action="awards_ceremony.mhtml" method="post">

			<span class="medspan">
				Print Awards
			</span>

			<span class="medbigspan">
