<%args>
	$tourn
	$judge_code => undef;
	$timeslot_id => undef
</%args>
<%init>

	my @timeslots = sort {$a->start->epoch <=> $b->start->epoch} $tourn->timeslots;
	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);
	$timeslot = $timeslots[0] unless $timeslot;

	my @judges;
	my $judge;

	my @ballots;
	my $panel;

	if ($judge_code) { 
	
		@judges = $m->comp("/funclib/judge_by_code.mas", tourn => $tourn, code => $judge_code);

		if (@judges || $judge) { 
			$judge = shift @judges unless $judge;
			@ballots = $m->comp('/funclib/judge_ballots.mas', judge => $judge, timeslot => $timeslot);
 			$panel = $ballots[0]->panel if @ballots;
		}	

	}

</%init>

	<div class="right small">
	
		<div class="sidenote">

			<h4>Reports</h4>

			<a class="blue block" href="code_list.mhtml">
				View complete codebreaker
			</a>

			<a class="blue block" href="code_print.mhtml">
				Print complete codebreaker
			</a>

			<h4>Timeslot</h4>

			<span class="evenrow block padless">
				<form action="codebreaker.mhtml" method="post">
				<select name="timeslot_id" onchange='this.form.submit()' class="fixedsmall"> 
%					foreach my $ts (@timeslots) { 
						<option value="<% $ts->id %>" <% ($ts->id == $timeslot_id) ? "selected" : "" %>>
							<% $ts->name %>
						</option> 
%					}
				</select>
				</form>

			</span>

			<h4>Choose judge</h4>

			<span class="evenrow block padless">
				<form action="codebreaker.mhtml" method="post">
				<input type="hidden" name="timeslot_id" value="<% $timeslot ? $timeslot->id  : "" %>">
				<input type="text" name="judge_code" size="6">
				<input type="submit" class="thin" value="Go">
				</form>
			</span>

		</div>

	</div>

	<div class="left huge">

		<& /funclib/tablesorter.mas, table => "sortme" &>

%		if ($judge && $panel) { 

			<h2>Judge <% $judge->code." ".$judge->first." ".$judge->last %></h2>
	
			<h5><% $panel->round->event->name." Section ".$panel->letter." ".$panel->round->realname %></h5>

			<table cellpadding="16" width="100%" cellspacing="1" id="sortme">

				<thead>

					<tr class="yellowrow">

						<th class="smaller">
							Speaker
						</th>

						<th class="smaller">
							Code
						</th>

						<th class="smaller">
							School
						</th>

						<th class="smaller">
							School Name
						</th>

						<th class="smaller">
							Name
						</th>

					</tr>

				</thead>

				<tbody>

%				my $switch; 
%				foreach my $ballot (@ballots) { 

					<tr>

						<td style="padding-left: 40px;">
							<% $ballot->speakerorder %>
						</td>
	
						<td class="centeralign">
							<% $ballot->entry->code %>
						</td>
	
						<td class="centeralign">
							<% $ballot->entry->school->code %>
						</td>

						<td>
							<% ($ballot->entry->school->region) ? $ballot->entry->school->region->code." - " : "" %>
							<% $ballot->entry->school->short_name %>
						</td>

						<td style="padding-left: 50px;">
							<% $ballot->entry->name %>
						</td>
					
					</tr>
%				}

				</tbody>

			</table>

%		} elsif ($judge) { 

			<h4>No ballot found with that judge & timeslot </h4>

%		} else {
		
			<h2><% $timeslot->name %> Codebreaker</h2>
%		}

	</div>

	<br style="clear: both;" />
