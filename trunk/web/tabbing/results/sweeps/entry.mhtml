<%args>
	$tourn
</%args>
<%init>

	my ($pointsref, $entref) = $m->comp("sweep_tourn.mas", tourn => $tourn);

</%init>

	<div class="left huge">

		<h2>Individual Sweeps</h2>

		<& /funclib/tablesorter.mas, table => "sortme" &>

		<table>

			<thead>
				<tr class="yellowrow">

					<th>
						Code
					</th>

					<th>
						Name
					</th>

					<th>
						School
					</th>

					<th>
						Points
					</th>

				</tr>
			</thead>

			<tbody>

%				foreach my $ent (sort {%{$pointsref{$b->id}} <=> %{$pointsref{$a->id}}} @{$entref}) { 
			
					<tr>

						<td>
							<% $ent->code %>
						</td>

						<td>
							<% $ent->name %>
						</td>

						<td>
							<% $ent->school->short_name %>
						</td>

						<td>
							<% ${$pointsref{$ent->id}} %>
						</td>

					</tr>

%				}

			</tbody>

		</table>


	</div>
