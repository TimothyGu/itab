<%args>
	$tourn
	$account
	$timeslot_id
	$event_id => undef
</%args>
<%init>

	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);
	my @panels = $timeslot->panels($event_id);

	foreach my $panel (@panels) { 

		my $argstring = "room_id_".$panel->id;
		$panel->room($ARGS{$argstring}) if $ARGS{$argstring};
		$panel->update;

	}

	$m->redirect("$Tab::url_prefix/tabbing/rooms.mhtml?timeslot_id=$timeslot_id&event_id=$event_id");

</%init>
