<%args>
	$account
	$ballot_id
	$tz
</%args>
<%init>

	my $now = DateTime->now;
	$now->set_time_zone($tz);

	my $ballot = Tab::Ballot->retrieve($ballot_id);


	my @all_ballots = Tab::Ballot->search( panel => $ballot->panel->id, judge => $ballot->judge->id);

	foreach my $ab (@all_ballots) { 

		$ab->collected_by("");
		$ab->collected($now);
		$ab->update;

	}

	my $msg = "Ballots checked out for judge ".$ballot->judge->code;

	$m->redirect("/tabbing/checkin.mhtml?timeslot_id=".$ballot->panel->round->timeslot->id."&msg=$msg");


</%init>
