<%args>
	$account
	$tourn
	$panel_id
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now(time_zone => $tz);

	my $panel = Tab::Panel->retrieve($panel_id);

	Tab::Panel->set_sql(nullify_confirmed =>  "
		update panel
		set confirmed = NULL
		where id = ? 
	");

	if ($panel->confirmed) { 
		
		Tab::Panel->sql_nullify_confirmed->execute($panel_id);

	} else { 
		$panel->confirmed($now);
		$panel->started($now) unless $panel->started;
		$panel->update;
	}

	$m->redirect("confirm.mhtml?timeslot_id=".$panel->round->timeslot->id);

</%init>
