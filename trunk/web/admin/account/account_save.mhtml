<%args>
	$edit_id
	$first
	$last
	$email
	$noemail => undef
	$phone => undef
	$is_cell => undef
	$site_admin => undef
	$street => undef
	$city	=> undef
	$state	=> undef
	$zip	=> undef
</%args>

<%init>

	my $edit = Tab::Account->retrieve($edit_id);

	unless ($email eq $edit->email) { 

		my @existing_emails = Tab::Account->search( email => $email);

		if (@existing_emails) { 

			my $err = "Email address $email already has an account: ".$existing_emails[0]->first." ".$existing_emails[0]->last;
			$m->redirect("$Tab::url_prefix/admin/account/account_edit.mhtml?edit_id=$edit_id&err=$err");			

		}

	}

	
	$edit->first($first);
	$edit->last($last);
	$edit->street($street);
	$edit->city($city);
	$edit->email($email);
	$edit->noemail($noemail);
	$edit->state($state);
	$edit->zip($zip);
	$edit->phone($phone);
	$edit->is_cell($is_cell);
	$edit->site_admin($site_admin);
	$edit->update;
	
	my $msg = "Changes saved";
	
	$m->redirect("$Tab::url_prefix/admin/account/account_edit.mhtml?edit_id=$edit_id&msg=$msg");

</%init>
