
<%args>
	$err => undef
	$edit_id
	$first => undef
</%args>

%	my $edit = Tab::Account->retrieve($edit_id);

%	my $switch;

	<div class="left huge">

	<h2><% $edit->first." ".$edit->last %>'s Chapters</h2>

	<table cellpadding="5" width="100%" border="0">

%		foreach my $chapter ($edit->chapters) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<th>
					<% $chapter->name %>
				</th>

				<td align="right">
					<form action="/admin/chapter/chapter_edit.mhtml" method="post">
					<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
					<input type="submit" value="  Edit Chapter  ">
					</form>
				</td>

			</tr>

%		}

	</table>

</div>


	<& account_menu.mas, edit_id => $edit_id &>

