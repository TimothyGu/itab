<%args>
	$err => undef
	$edit_id
	$first => undef
</%args>

%	my $edit = Tab::Account->retrieve($edit_id);

%	my $switch;

	<div id="leftbig">

	<h2><% $edit->first." ".$edit->last %>'s Leagues</h2>

	<table cellpadding="5" width="100%" border="0">

%		foreach my $league ($edit->leagues) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<th>
					<% $league->name %>
				</th>

				<td align="right">
					<form action="/admin/league_edit.mhtml" method="post">
					<input type="hidden" name="league_id" value="<% $league->id %>">
					<input type="submit" value="  Edit League  ">
					</form>
				</td>

			</tr>

%		}

	</table>

</div>


	<& account_menu.mas, edit_id => $edit_id &>

