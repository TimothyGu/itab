<%args>
	$tourn_id => undef
	$search_value => undef
	$circuit_id => undef
</%args>
<%init>

	my @circuits = sort {$a->name cmp $b->name} Tab::Circuit->search(active => 1);

	my @tourns;

	if ($search_value) { 

		$search_value = "%".$search_value."%";

		@tourns = Tab::Tournament->search_like(name => $search_value);

		# I wish ClassDBI had an easy way to do this.

		if ($circuit_id) {

			my @clean_tourns;

			foreach my $tourn (@tourns) { 
				push(@clean_tourns, $tourn) if $tourn->circuit->id == $circuit_id;
			}

			@tourns = @clean_tourns;

		}

	}

	@tourns = sort {$b->start->epoch <=> $a->start->epoch} @tourns;

	my $switch;

</%init>

	<div class="left huge">

		<h2>Tournaments</h2>

%		if (@tourns) { 

			<table cellpadding="4" cellspacing="1" width="100%">

				<tr>
					<th>	
						Tourn	
					</th>

					<th>
						Circuit
					</th>

					<th>
						Start
					</th>

					<th>
					</th>
				</tr>

%				foreach my $tourn (@tourns) {

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<td>
			   				<a href="/user/tourn/select.mhtml?tourn_id=<% $tourn->id %>" class="whiteblock">
							<% $tourn->name %>
							</a>
						</td>
	
						<td>
							<% $tourn->circuit->short_name %>
						</td>

						<td>
							<% $tourn->start->mdy('/') %>
						</td>


					</tr>
	
%				}

			</table>

%		}



	</div>

	<div id="rightsmall">

		<h3>Search:</h3>

		<table cellpadding="3" width="100%">

			<tr>
				<td>
					<form action="tournaments.mhtml" method="post">
					<input type="text" name="search_value" size="30">
				</td>
			</tr>

			<tr class="oddrow">
				<td>
					<select name="circuit_id">
						<option value="">All Circuits</option>
%						foreach my $circuit (@circuits) {
							<option value="<% $circuit->id%>"><% substr($circuit->name,0,25) %></option>
%						}
					</select>
				</td>
			</tr>

			<tr class="liblrow">
				<td align="right">
					<input type="submit" value="Search Tournaments">
					</form>
				</td>
			</tr>

		</table>

		<& /admin/menu.mas &>

	</div>

