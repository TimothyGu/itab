<%args>
	@chapters
	$search_value
</%args>
<%init>

	my $switch;

</%init>

	<div class="left huge">

	<h2>Search chapters</h2>

	<table cellpadding="5" cellspacing="1" width="100%">

		<tr class="lirdrow">

			<th>

			</th>

			<th class="smaller">
				Name:
			</th>

			<th class="smaller">
				ID
			</th>

			<th class="smaller">
				ST
			</th>

			<th class="smaller">
				Kids
			</th>

			<th width="25%" class="smaller">
				Circuits
			</th>

			<th>
			</th>

		</tr>

% 		foreach my $chapter (sort {$a->name cmp $b->name} @chapters) { 

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td class="center">
					<a class="white block" href="chapter_edit.mhtml?chapter_id=<% $chapter->id %>">
						Edit
					</a>
				</td>

				<td class="smaller">
					<% $chapter->name %>
				</td>

				<td class="smaller" align="center">
					<% $chapter->id %>
				</td>

				<td class="smaller" align="center">
					<% $chapter->state %>
				</td>

				<td class="smaller" align="center">
					<% scalar ($chapter->students) %>
				</td>

				<td class="explain">
%					foreach my $circuit ($chapter->circuits) {
						<% $circuit->short_name %>
%					}
				</td>

				<td align="center" class="smaller">
                    <a class="white block" href="chapter_edit.mhtml?chapter_id=<% $chapter->id %>&search=<% $search_value %>">
						Delete
					</a>
				</td>

			</tr>

% 		} # end of foreach chapter. 

	</table>

	</div>

