<%args>
	$account
	$student_id => undef
	$first =>  undef
	$last => undef
	$phonetic => undef
	$grad_year => undef
	$gender => undef
	$retired => '0'
	$novice => '0'
	$chapter_id
</%args>

<%init> 

	my $err;
	my $student;
	my $now = DateTime->now;

#	Remove leading spaces
	$first =~ s/^\s+//;
	$last =~ s/^\s+//;
	$phonetic =~ s/^\s+//;

#	Capitalize, bitches
	$first = ucfirst($first);
	$last = ucfirst($last);

	unless ($first) { 
		$err = "WARNING: You have not supplied a first name ";
	}

	unless ($last) { 
		$err = "WARNING: You have not supplied a last name " unless $err;
		$err = $err ." or last name " if $err;
	}

	if ($err) { 
		$err = $err. ". Student not saved.";
		$m->redirect("student_roster.mhtml?student_id=$student_id&err=$err") if ($student_id);
		$m->redirect("student_roster.mhtml?chapter_id=$chapter_id&err=$err");
	}		

	if ($grad_year) { 

		my $now_year = $now->year;
		$now_year++ if $now->month > 6;
	
		
		unless ($grad_year >= $now_year) { 
			$err = "WARNING: You have entered a graduation year in the past! ";
		}
		if ($grad_year > ($now_year + 4)) {
			$err = "WARNING:  You have entered a graduation year far in the future! ";
		}

	} else { 

		$err = $err ." or year of graduation " if $err;
		$err = "WARNING: You have not supplied a year of graduation! " unless $err;

	}
	
	if ($student_id) { 

		$student = Tab::Student->retrieve($student_id);
		my $student_school = $student->chapter;
		my $student_school_id = $student_school->id;

		$student->first($first);
		$student->last($last);
		$student->phonetic($phonetic);
		$student->grad_year($grad_year);
		$student->novice($novice);
		$student->retired($retired);
		$student->gender($gender);
		$student->chapter($chapter_id);
		$student->update;

	} else { 

		$student = Tab::Student->create({ 	
			first => $first,
			last => $last,
			phonetic => $phonetic,
			grad_year => $grad_year,
			gender => $gender,
			novice => $novice,
			retired => $retired,
			chapter => $chapter_id
		});

		$err = $err." ".$first." ".$last." has been added to your school.";
	}

	$m->redirect("student_roster.mhtml?err=$err&chapter_id=$chapter_id");


</%init> 


