<%args> 
	$account
	$league_id => undef
	$err => undef
</%args>
<%init> 

	my $league = Tab::League->retrieve($league_id) if $league_id;
	my $switch;

</%init>

	<div id="leftbig">

		<table cellpadding="0" cellspacing="0" width="100%">

   	    	<tr>

            	<td width="100%">
					<h2><% ($league) ? $league->name : "Create League" %></h2> 
            	</td>

            	<td>
            	    <form action="leagues.mhtml" method="post">
            	    <input type="submit" class="grey" value="  Back ">
            	    </form>
				</td>

			</tr>

   	 	</table>

		<table cellpadding="5" width="100%" cellspacing="0">


			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>
					Full Name:
				</td>
			
				<td align="right" colspan="2">
					<form action="league_save.mhtml" method="post"> 
					<input type="hidden" name="league_id" value="<% $league_id %>">
					<input type="text" size="25" name="name" value="<% ($league) ? $league->name : "" %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>Short Name:</td>
				<td align="right" colspan="2"><input type="text" size="25" name="short_name" value="<% ($league) ? $league->short_name : "" %>"></td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>State/Locale:</td>
				<td align="right" colspan="2"><input type="text" size="25" name="state" value="<% ($league) ? $league->state : "" %>"></td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>Website URL:</td>
				<td align="right" colspan="2"><input type="text" size="25" name="url" value="<% ($league) ? $league->url : "" %>"></td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				<td>Timezone:</td>
				<td align="right" colspan="2"><select name="timezone">
					<option value="">----Select One------</option>
					<option value="America/New_York"
						<% ($league) ? ($league->timezone eq "America/New_York") ? "selected" : "" : ""%>
						>Eastern</option>
					<option value="America/Indianapolis"
						<% ($league) ? ($league->timezone eq "America/Indianapolis") ? "selected" : "" : "" %>
						>Indiana</option>
					<option value="America/Chicago"
						<% ($league) ? ($league->timezone eq "America/Chicago") ? "selected" : "" : "" %>
						>Central</option>
					<option value="America/Denver"
						<% ($league) ? ($league->timezone eq "America/Denver") ? "selected" : "" : "" %>
						>Mountain</option>
					<option value="America/Phoenix"
						<% ($league) ? ($league->timezone eq "America/Phoenix") ? "selected" : "" : "" %>
						>Arizona</option>
					<option value="America/Los_Angeles"
						<% ($league) ? ($league->timezone eq "America/Los_Angeles") ? "selected" : "" : "" %>
						>Pacific</option>
					</select>
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Active League:</td>
			
				<td align="right">
					<input 	type="radio" name="active" value="1" <% ($league) ? ($league->active) ? "checked" : "" : "" %> > 
					Yes
			
					<input type="radio" name="active" value="" <% ($league) ? ($league->active) ? "" : "checked" : "" %> > 
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Host Site Here:</td>
			
				<td align="right">
					<input 	type="radio" name="hosted_site" value="1" <% ($league) ? ($league->hosted_site) ? "checked" : "" : "" %> > 
					Yes
			
					<input type="radio" name="hosted_site" value="" <% ($league) ? ($league->hosted_site) ? "" : "checked" : "" %> > 
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Full Memberships:</td>
				
				<td align="right"> 
					<input type="radio" name="full_members" value="1" <% ($league) ? ($league->full_members) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="full_members" value="" <% ($league) ? ($league->full_members) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Open to non-members</td>
				
				<td align="right"> 
					<input type="radio" name="tourn_only" value="1" <% ($league) ? ($league->tourn_only) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="tourn_only" value="" <% ($league) ? ($league->tourn_only) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Track Bids:</td>
				
				<td align="right">
					<input type="radio" name="track_bids" value="1" <% ($league) ? ($league->track_bids) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="track_bids" value="" <% ($league) ? ($league->track_bids) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Public Emails:</td>
				
				<td align="right">
					<input type="radio" name="public_email" value="1" <% ($league) ? ($league->public_email) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="public_email" value="" <% ($league) ? ($league->public_email) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">APDA Seedings:</td>
				
				<td align="right">
					<input type="radio" name="apda_seeds" value="1" <% ($league) ? ($league->apda_seeds) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="apda_seeds" value="" <% ($league) ? ($league->apda_seeds) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Use Regions:</td>
				
				<td align="right">
					<input type="radio" name="region_based" value="1" <% ($league) ? ($league->region_based) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="region_based" value="" <% ($league) ? ($league->region_based) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td colspan="2">Use Dioceses (NCFL):</td>
				
				<td align="right">
					<input type="radio" name="diocese_based" value="1" <% ($league) ? ($league->diocese_based) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="diocese_based" value="" <% ($league) ? ($league->diocese_based) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr class="liblrow">
				<td class="center" colspan="3">
					<input class="blue" type="submit" value="Save League Info">
					</form>
				</td>
			</tr>
			
		</table>

	</div>

	<div id="rightsmall">

% 	if ($league_id) { 

%		undef $switch;

		<h3>League Administrators:</h3>

		<table cellpadding="2" width="100%" cellspacing="1">

% 			foreach my $admin (sort {$a->last cmp $b->last} $league->admins) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td class="smaller">
						<% $admin->first." ".$admin->last %>
					</td>

					<td class="smaller">
						<% $admin->email %>
					</td>

					<td class="center">
						(<a href="<% $Tab::url_prefix %>/league/admin_rm.mhtml?admin_id=<% $admin->id%>&league_id=<% $league_id %>">Del</a>)
					</td>

				</tr>

% 			} # end of foreach my admin


			<tr class="liblrow">
				<td colspan="2">
					<form action="admin_add.mhtml" method="post">
					<input type="hidden" name="league_id" value="<% $league_id %>">
					<input type="text" size="25" name="email" value="Add New (Email)" onMouseOver='value=""'>
				</td>

				<td>
					<input class="blue" type="submit" value="Add">
					</form>
				</td>

			</tr>

		</table>
% 	} # end of if league_id 

	</div>




