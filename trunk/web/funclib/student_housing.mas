<%args>
	$student
	$tourn
	$day
</%args>

<%init>

	my @housings = Tab::HousingStudent->search( student => $student->id, tourn => $tourn->id, night => $day->ymd ) if $day;
	@housings = Tab::HousingStudent->search( student => $student->id, tourn => $tourn->id ) unless $day;
	return shift @housings if $day;
	return @housings;

</%init>
