<%args>
	$event
</%args>
<%perl>

	Tab::School->set_sql( by_event => "
       	select distinct school.* 
		from school, entry
		where school.id = entry.school
		and entry.event = ? 
		and entry.dropped != 1
		and entry.waitlist != 1
		order by school.name ");

    return Tab::School->search_by_event($event->id);

</%perl>

