<%args>
	$room
	$tourn
</%args>
<%init>

	Tab::RoomGroup->set_sql( by_room_and_tourn  => "
		select room_group.*
		from room_group, room_group_room
		where room_group_room.room = ? 
		and room_group_room.room_group = room_group.id
		and room_group.tourn = ? 
		order by room_group.name
	");

	return Tab::RoomGroup->search_by_room_and_tourn($room->id, $tourn->id);

</%init>
