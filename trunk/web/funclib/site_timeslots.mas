<%args>
	$site
	$tourn
</%args>
<%init>

	Tab::Timeslot->set_sql(by_site => " 
		select distinct timeslot.*
		from timeslot, round, event
		where timeslot.id = round.timeslot
		and round.event = event.id
		and event.tourn = ? 
		and round.site = ? 
		order by timeslot.start
	");

	return Tab::Timeslot->search_by_site( $tourn->id, $site->id );


</%init>
