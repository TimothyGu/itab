<%args>
	$group => undef
	$school
</%args>
<%init>


	if ($group) { 

    	my @requests = Tab::JudgeHire->search( school => $school->id, judge_group => $group->id );
    	my $request = shift @requests; 

    	foreach my $req (@requests) { $_->delete if $_; }  # Kill the spare, Wormtail.
    	return $request;


	} else { 

		return Tab::JudgeHire->search( school => $school->id );

	}

</%init>
