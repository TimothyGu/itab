<%args>
	$region
	$tourn => undef
</%args>
<%init>

	if ($tourn) { 

		Tab::Event->set_sql(by_region => "
			select distinct event.*
			from entry, school, event
			where entry.school = school.id
			and school.region = ? 
			and school.tourn = ? 
			and entry.event = event.id
			order by event.name
		");

		return Tab::Event->search_by_region($region->id, $tourn->id);

	}

	return;


</%init>

