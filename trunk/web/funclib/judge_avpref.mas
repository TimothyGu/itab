<%args>
	$judge
</%args>
<%init>
	
	Tab::Judge->set_sql(average_pref => "
		select avg(rating_tier.name)
			from rating_tier, rating
			where rating.judge = ? 
			and rating.type = \"comp\"
			and rating.rating_tier = rating_tier.id
	");

	return sprintf("%.2f", Tab::Judge->sql_average_pref->select_val($judge->id));


</%init>
