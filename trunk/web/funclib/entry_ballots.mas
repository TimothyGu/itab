<%args>
	$entry 
	$round => undef
</%args>
<%init>

	if ($round && $round->id) { 

		Tab::Ballot->set_sql( by_round => "
			select distinct ballot.* 
			from ballot, panel
			where ballot.entry = ? 
			and ballot.panel = panel.id
			and panel.round = ?
		");

		return Tab::Ballot->search_by_round($entry->id, $round->id);
	
	} else { 

		return $entry->ballots;

	}


</%init>
