<%args>
	$school
	$charge => undef
</%args>
<%init>


	my @orders = Tab::ConcessionPurchase->search( school => $school->id );

	if ($charge) { 
	
		my $total;

		foreach my $order (@orders) { 
			$total += ($order->concession->price * $order->quantity);
		}

		return $total;

	}

	return @orders;


</%init>
