<%args>
	$school
	$charge => undef
	$concession => undef
</%args>
<%init>

	my @orders = Tab::ConcessionPurchase->search( school => $school->id, concession => undef ) if $concession;

	@orders = Tab::ConcessionPurchase->search( school => $school->id ) unless $concession;

	if ($charge) { 
	
		my $total;

		foreach my $order (@orders) { 

			my $price = ($order->concession->price * $order->quantity);
			$total += $price;

		}

		return $total;

	}

	return @orders;


</%init>
