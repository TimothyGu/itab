<%args>
	$event
	$entries => undef
</%args>
<%init>

	if ($entries) { 

		Tab::Round->set_sql( rounds_with_entry => "
			select distinct round.* 
			from round, panel, ballot
			where round.event = ? 
			and round.id = panel.round
			and panel.id = ballot.panel
			and ballot.entry > 1
			order by round.name
		");

		return Tab::Round->search_rounds_with_entry($event->id);

	} else { 

		return $event->rounds;

	}

</%init>

