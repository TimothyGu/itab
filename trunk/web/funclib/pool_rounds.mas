<%args>
	$pool
</%args>
<%init>

	return unless $pool;

	Tab::Round->set_sql( by_pool => "
		select distinct round.*
		from round, room_group_round, event
		where room_group_round.room_group = ? 
		and room_group_round.round = round.id
		and round.event = event.id
		order by event.abbr, round.name");

	return Tab::Round->search_by_pool($pool->id);


</%init>
