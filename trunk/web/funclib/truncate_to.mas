<%args>
	$event_id
</%args>
<%init>
	my $truncate_to;
	my $event = Tab::Event->retrieve($event_id);
	my @panels = $event->panels;
	foreach my $panel (@panels) { 
		my @ballots = $panel->ballots;
		$truncate_to = scalar @ballots unless $truncate_to;
		$truncate_to = scalar @ballots if (scalar @ballots) < $truncate_to;
	}

	return $truncate_to;

</%init>
