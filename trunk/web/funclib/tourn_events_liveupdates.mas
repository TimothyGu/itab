<%args>
	$tourn
</%args>
<%init>

	Tab::Event->set_sql(by_tourn_liveupdates => "
		select event.*
			from event,event_setting
			where event.tourn = ? 
			and event.id = event_setting.event
			and event_setting.tag = \"liveupdates\"
			and event_setting.value = 1
			order by event.name");

	return Tab::Event->search_by_tourn_liveupdates($tourn->id);

</%init>
