<%args>
	$pool
</%args>
<%init>

	Tab::Judge->set_sql( by_pool => "
		select distinct judge.* 
		from judge, pool_judge
		where pool_judge.pool = ?
		and pool_judge.judge = judge.id
		and judge.dropped != 1
		and judge.active = 1
		order by judge.last");

	return Tab::Judge->search_by_pool($pool->id);


</%init>
