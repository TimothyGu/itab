<%args>
	$account
</%args>
<%init>


	Tab::Account->set_sql(by_follower => "
		select distinct account.* 
			from account, follow_account
			where follow_account.follower = ?
			and follow_account.account = account.id
			order by account.last
	");

	return Tab::Account->search_by_follower($account->id);

</%init>
