<%args>
	$tourn
</%args>
<%init>

	my @regions = sort {$a->name cmp $b->name} $tourn->regions;

	foreach my $region (@regions) { 
		next unless $ARGS{$region->id};
		$region->cooke_pts($ARGS{$region->id});
		$region->update;
	}

	my $err = "Cooke points saved.";

	$m->redirect("$Tab::url_prefix/results/ncfl/cooke_points.mhtml?err=$err");

</%init>
