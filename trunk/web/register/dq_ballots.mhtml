<%args> 
	$entry_id 
	$panel_id
	$undo => undef
</%args>
<%perl>

	my $entry = Tab::Entry->retrieve($entry_id);
	my $panel = Tab::Panel->retrieve($panel_id);

	my @ballots = $entry->ballots( panel => $panel->id);

	foreach my $ballot (@ballots) { 

		$ballot->countmenot(1) unless $undo;
		$ballot->countmenot("") if $undo;
		$ballot->update;

	}

	$m->redirect("$Tab::url_prefix/register/dq_selectively.mhtml?entry_id=".$entry->id);

</%perl>

