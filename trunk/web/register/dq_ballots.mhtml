<%args> 
	$comp_id 
	$panel_id
	$undo => undef
</%args>
<%perl>

	my $comp = Tab::Entry->retrieve($comp_id);
	my $panel = Tab::Panel->retrieve($panel_id);

	my @ballots = $comp->ballots( panel => $panel->id);

	foreach my $ballot (@ballots) { 

		$ballot->countmenot(1) unless $undo;
		$ballot->countmenot("") if $undo;
		$ballot->update;

	}

	$m->redirect("$Tab::url_prefix/register/dq_selectively.mhtml?comp_id=".$comp->id);

</%perl>

