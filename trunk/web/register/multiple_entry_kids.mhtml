	SCHOOL:
	foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 

	my %student_entries = ();


	foreach my $entry ($school->entries) { 

		next if $entry->dropped;

		if ($entry->event->team == 3) { 

			foreach my $member ($entry->members) { 
				push (@{$student_entries{$member->id}}, $entry);
			}

		} else { 

			push (@{$student_entries{$entry->student->id}}, $entry);
			push (@{$student_entries{$entry->partner->id}}, $entry) if $entry->event->team == 2 && $entry->partner;

		}

	}

	my $switch;

</%perl>


