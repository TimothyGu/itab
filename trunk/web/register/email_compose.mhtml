<%args>
	$tourn
	$account
	$email_id => undef;
</%args>
<%init>

	my $email = Tab::Email->retrieve($email_id) if $email_id;

	my @events = $tourn->events;

</%init>

	<div id="leftbig">
	
		<h2>Email the registered coaches</h2>


		<table cellpadding="3" width="100%">

			<tr class="evenrow">

				<td>
					Subject:
				</td>

				<td>
					<form action="email_send.mhtml" method="post"> 
					<input type="hidden" name="status" value="unsent">
					<input type="text" name="subject" size="40" value="<% ($email) ? $email->subject : "" %>" >
				</td>

			</tr>

			<tr>
				<td valign="top">
					Text:
				</td>

				<td>
					<textarea name="text" cols="50" rows="20"><% ($email) ? $email->text : "" %></textarea>
				</td>
			</tr>

		</table>

	</div>

	<div id="rightsmall">

		<a href="/register/email_view.mhtml" class="redblock">View Email Archive</a>

		<h4>Send email to:</h4>

		<table cellspacing="1" cellpadding="3" width="100%">

%			my $switch;

			<tr <% ($switch++ % 2) ? "class=\"bluerow\"" : "class=\"liblrow\"" %>>

				<td class="smaller" colspan="2">
					Send to all registered coaches
				</td>

				<td class="center">
					<input type="checkbox" name="everybody" value="1">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"bluerow\"" : "class=\"liblrow\"" %>>

				<td colspan="2" class="smaller">
					OR Schools short on judges
				</td>

				<td class="center">
					<input type="checkbox" name="judge_short" value="1">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td colspan="3" class="smaller">
					OR Schools with entries in:
				</td>
			</tr>

%				foreach my $event (sort {$a->name <=> $b->name} @events) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td style="width: 7px; background-color: #f6f6f6;"></td>

					<td class="smaller">
						<% $event->name %>
					</td>

					<td class="center">
						<input type="checkbox" name="event_<% $event->id %>" value="1">
					</td>

				</tr>

% 				}

			<tr class="lirdrow">

				<td colspan="3" align="center" style="padding-top: 10px; padding-bottom: 10px;">
					<input class="red" type="submit" value="  Send Email to Registrants"  >
					</form>
				</td>

			</tr>

		</table>
	
	</div>

	<div style="clear: both;" />

