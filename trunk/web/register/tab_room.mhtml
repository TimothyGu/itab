<%args>
	$tourn
	$session
	$circuit
	$order => "last"
</%args>
<%init>

	my @tab_groups = Tab::JudgeGroup->search({ tournament => $tourn->id, tab_room => 1});

	my @staff;

	foreach my $tg (@tab_groups) { 

		push (@staff, $tg->judges);

	}


	my $switch;

</%init>

<h3>Tab Room Personnel</h3>


<table cellpadding="5" cellspacing="1" width="100%">

<tr class="bluerow">

	<th colspan="1">
		<form action="tab_room.mhtml" method="post">
		Display Order:</td>
	<td colspan="1">
		<select name="order">
			<option value="last" <% ($order eq "last") ? "selected" : "" %>>Last Name</option>
			<option value="first" <% ($order eq "first") ? "selected" : "" %>>First Name</option>
			<option value="schoolname" <% ($order eq "schoolname") ? "selected" : "" %>>School Name</option>
			<option value="regionname" <% ($order eq "regionname") ? "selected" : "" %>>Diocese Name</option>
			<option value="cfl_tab_first" <% ($order eq "cfl_tab_first") ? "selected" : "" %>>First Choice</option>
		</select>
	</td>
	<td align="center"><input class="blue" type="submit" value="Resort"></form></td>


	<th colspan="1">
		<form action="tab_room_print.mhtml" method="post">
		Print Ordered by:</td>
	<td colspan="1">
		<select name="order">
			<option value="last" <% ($order eq "last") ? "selected" : "" %>>Last Name</option>
			<option value="first" <% ($order eq "first") ? "selected" : "" %>>First Name</option>
			<option value="schoolname" <% ($order eq "schoolname") ? "selected" : "" %>>School Name</option>
			<option value="regionname" <% ($order eq "regionname") ? "selected" : "" %>>Diocese Name</option>
			<option value="cfl_tab_first" <% ($order eq "cfl_tab_first") ? "selected" : "" %>>First Choice</option>
		</select>
	</td>
	<td align="center"><input class="blue" type="submit" value="Print"></form></td>

</tr>

</table>

<br>
<br>

<table cellpadding="5" cellspacing="1" width="100%">

% 	foreach my $judge (sort {$a->$order cmp $b->$order} @staff) { 

    <tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

		<td><% $judge->first %></td>
		<td><% $judge->last %></td>
		<td><% $judge->school->name %></td>
		<td><% $judge->region->name %></td>
		<td><% $judge->cfl_tab_first %></td>
		<td><% $judge->cfl_tab_second %></td>
		<td><% $judge->cfl_tab_third %></td>

	</tr>

%	}

</table>


