<h3>Concession pre-orders</h3>

<table cellpadding="5" cellspacing="1" width="100%">

<tr>
	<th>Item</th>
	<th>Unit Cost</th>
	<th>Quantity</th>
	<th>Total Cost</th>
</tr>

% 	my $switch; 


%	foreach my $item (sort {$a->name cmp $b->name} $tourn->items) { 

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

	<th><% $item->name %></th>

	<td><% $item->price %></td>

%	my @purchases = $item->purchases;

%	my $total;

%	foreach (@purchases) {  $total += $_->quantity; } 

	<td><% $total %></td>

	<td><% $total*$item->price %></td>

	</tr>

%	}

</table>
