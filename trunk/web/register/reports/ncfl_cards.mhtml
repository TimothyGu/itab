
<%args>
	$tourn
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now->set_time_zone($tz);

    my $filename = "Registration-Cards-".$tourn->name;
	$filename =~ s/[\W_]//g;

    my $filepath = $Tab::file_root."/tmp/";
    my $garbage = `rm -f $filepath"."$filename.*`;

	my @regions = $m->comp("/funclib/tourn_regions.mas", tourn => $tourn);

    $m->comp("/funclib/printout.mas", filename => $filename, head => 1, no_header => 1);

	foreach my $region (@regions) { 

	    $m->comp("/register/region/diocese_entry_cards.mas", filename => $filename, diocese => $region, tourn => $tourn);

		open (TEXOUT, ">>$filepath"."$filename.tex");
		print TEXOUT "\n\n\\newpage\n\n";
		close TEXOUT;

	    $m->comp("/register/region/diocese_judge_cards.mas", filename => $filename, diocese => $region, tourn => $tourn);

		open (TEXOUT, ">>$filepath"."$filename.tex");
		print TEXOUT "\n\n\\newpage\n\n";
		close TEXOUT;

	}

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );

</%init>
