<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<& "menu.mas", tourn => $tourn, whoami => "contact_list" &>

	<div class="left huge">

		<h2>School Contacts</h2>

		<table cellpadding="3" cellspacing="1" width="100%">

			<tr class="yellowrow">
				
				<th class="smaller">
					School	
				</th>

				<th class="smaller">
					Contact
				</th>

				<th class="smaller">
					Phone
				</th>

				<th class="smaller">
					Status
				</th>

			</tr>

%			foreach my $school ($tourn->schools) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
					<td>
						<a class="white block" href="/register/school/edit.mhtml?school_id=<% $school->id %>">
							<% $school->name %>
						</a>
					</td> 
					
					<td class="rightalign">
						<% $school->contact_name %>
					</td>

					<td class="rightalign">
						<% $school->contact_number %>
					</td>

					<td class="rightalign">
						<% ($school->registered) ? "Checked In" : "" %>
					</td>

				</tr>

%			}

		</table>

	</div>

