<%args>
	$session
	$group_id	
	$tourn
	$codes => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $filename = $Tab::file_root."/tmp/".$group->abbr."-cards-".$session->id;

	my $garbage = `rm -f $filename.*`;
	open (TEXOUT, ">$filename.tex");

	print TEXOUT <<"EOF";
\\documentclass[10pt]{report}
\\usepackage{fullpage}
\\usepackage{times}
\\usepackage{nopageno}
\\usepackage{colortbl}
\\usepackage[hmargin=.5in,vmargin=.75in]{geometry}
\\renewcommand{\\arraystretch}{1.4}
\\begin{document}
\\begin{center}

EOF

	close TEXOUT;

	my $switch; 

	foreach my $judge (sort{$a->code <=> $b->code} $group->judges($tourn)) {

		$m->comp("/funclib/judge_info_card.mas", 
			judge_id => $judge->id, 
			filename => $filename);

	}

	open (TEXOUT, ">>$filename.tex");
	print TEXOUT "\\end{center}\n";
	print TEXOUT "\\end{document}\n";
	close TEXOUT;

$garbage = `cd $Tab::file_root/tmp; $Tab::latex_path $filename.tex; $Tab::dvipdfm_path $filename.dvi`;
`rm -f $filename.tex $filename.log $filename.dvi $filename.aux`;
$m->redirect("$Tab::url_prefix/tmp/".$group->abbr."-cards-".$session->id.".pdf");

</%init>
