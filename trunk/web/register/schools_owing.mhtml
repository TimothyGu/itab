<%args>
	$tourn
	$session
</%args>

<h3>Schools owing or who are owed:</h3>

<table cellpadding="5" cellspacing="0">

%	my $switch;

%	foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

%		my ($total, $feline_ref) = $m->comp("/funclib/school_fees.mas", 
%										school_id => $school->id);
%		next if $total == $school->paid_amount;

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
		<td><% $school->name %></td>
		<td><% ($school->paid_amount > $total) ? "IS OWED" : "OWES" %></td>

		<td><% ($school->paid_amount > $total) ? 
						$school->paid_amount - $total :
						$total - $school->paid_amount %></td>
	</tr>

%	} # end of foreach school

</table>


