<%args>
	$circuit
	$tourn
	$err => undef
	$diocese_id => undef
</%args>
<%init>
	my @dioceses = sort {$a->name cmp $b->name} Tab::Region->search( circuit => $circuit->id);

</%init>

<table cellpadding="5" width="100%">

% foreach my $dio (sort {$a->name cmp $b->name} @dioceses) { 
	<tr>	
	<td><% $dio->code %></td>
	<td><% $dio->name %></td>
	<td><% scalar $dio->entries($tourn) %> Entries</td>
	<td><% scalar $dio->judges($tourn) %> Judges</td>
	</tr>
% } 

</table>
