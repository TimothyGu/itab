<%args>
	$event_id
	$tourn
	$account
	$circuit
	$debug => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id); 

	my $log;

	my $count;

	foreach my $school ($event->waitlist_schools) { 

		my @entries = Tab::Entry->search( event => $event->id,  waitlist => 1, school => $school->id );

		@entries = sort {$a->registered_at->epoch <=> $b->registered_at->epoch} @entries;

		my $entry = shift @entries;
		
		$count++;
		$log .= $school->code." ".$entry->code." ";

		$m->comp("unwaitlist_entry.mas", entry => $entry, tourn => $tourn, account => $account);

	}

	my $msg = "Admitted $count competitors <br />";

	$msg .= $log;

	$m->redirect("waitlist.mhtml?event_id=$event_id&msg=$msg");

</%init>
