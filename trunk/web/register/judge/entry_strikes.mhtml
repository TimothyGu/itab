<%args>
	$tourn
	$account
	$name
	$judge_id
</%args>
<%init> 

	my $search_name =$name."%";
	my @entries = $m->comp('/funclib/student_entries.mas', name => $search_name, tourn => $tourn);

	my $switch;

</%init>

%   unless ($judge->hired) {
		<& "/register/menubar.mas", school => $school, whoami => "judges", tourn => $tourn &>
%   } else {
		<div class="left huge">
%	}

	<h2>Multiple entries named <% $name %></h2>

		<table cellpadding="5" width="100%">

			<form action="strike_save.mhtml" method="post">
			<input type="hidden" name="judge_id" value="<% $judge_id %>">

% 			foreach my $entry (@entries) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>> 
				
					<td>
						<% $m->comp("/funclib/entry_code.mas", entry => $entry, full => 1 %>
					</td>

					<td>
						<% $m->comp("/funclib/entry_name.mas", entry => $entry, full => 1 %>
					</td>

					<td>
						<% $entry->event->abbr %>
					</td>
					
					<td>
						<% $entry->school->short_name %>
					</td>
					
					<td>
						<input type="checkbox" name="<% $entry->id %>" id="<% $entry->id %>" value="1" checked>
						<label for="<% $entry->id %>">
							Conflict
						</label>
					</td>

				</tr>
% 			} 

			<tr class="liblrow">

				<td colspan="4" align="right">
					<input type="submit" value="  Save Student Strikes  ">
					</form>
				</td>

			</tr>

		</table>
