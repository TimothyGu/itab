<%args>
	$group_id
	$tourn
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

</%init>

<h3>Judge Blocks by Bin</h3>


<table cellpadding="5" cellspacing="0" width="75%">

%	my $switch;

%	my @judges_available = Tab::Judge->search_usable_judges_by_group( $group->id );

%	foreach my $bin ($group->bins) { 

%	$switch++;

	<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

		<th><% $bin->name %></th>

		<td>
%		my $num_blocks = scalar $bin->strikes;
			<% scalar $num_blocks %> 
		<td>

		<td>
			<% (scalar @judges_available) - $num_blocks %>
		<td>

	</tr>

%	} #end of foreach bin

</table>

