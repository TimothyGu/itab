<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<& judge_menu.mas, tourn => $tourn &>

	<div class="left huge">

		<h2>Judge Groups at <% $tourn->name %></h2>

		<table cellpadding="4" cellspacing="1" width="100%">

			<tr class="yellowrow">

				<th class="smaller">
					Group
				</th>

				<th class="smaller">
					Judges/Rounds
				</th>

				<th class="smaller">
					Hire Requests
				</th>

			</tr>

%			my $total;
%			my $total_hires;

%			foreach my $group (sort {$a->name cmp $b->name} $tourn->groups) { 

%				my @judges = Tab::Judge->search( judge_group => $group->id );

%				$total += scalar @judges;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						<a class="white block" href="roster.mhtml?group_id=<% $group->id %>">
							<% $group->name %>
						</a>
					</td>

					<td class="smallish rightalign">
						<% scalar @judges %>
					</td>

					<td class="smallish rightalign">
					</td>

				</tr>

%			}

			<tr class="liblrow">

				<th>
					<a class="plain block">
					Total
					</a>
				</th>

				<th class="smaller rightalign">
					<% $total %>
				</th>

				<th class="smaller rightalign">
					<% $total_hires %>
				</th>

			</tr>

		</table>

	</div>


