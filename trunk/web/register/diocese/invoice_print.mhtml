	my $diocese = Tab::Region->retrieve($diocese_id);
	my $filename = $Tab::file_root."/tmp/invoice-".$diocese->code."-".$session->id;
	
	my $garbage = `rm -f $filename.*`;

	open (TEXOUT, ">$filename.tex");

	print TEXOUT <<"EOF";
