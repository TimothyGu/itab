<%args>
	$tourn
	$circuit
	$session
</%args>


<table cellpadding="0" cellspacing="0">

<tr>
	<td width="100%">
		<h3>Diocese points of contact for <% $tourn->name %></h3>
	</td>

	<td>
		<form action="contacts_csv.mhtml" method="post">
		<input class="blue" type="submit" value="Download CSV">
		</form>
	</td>

	<td>
		<form action="contacts_print.mhtml" method="post">
		<input class="blue" type="submit" value="Print Contact Sheet">
		</form>
	</td>

</tr>
</table>

<table cellpadding="5" cellspacing="1" width="100%">

%	my $switch;

%	foreach my $diocese (sort {$a->name cmp $b->name} $tourn->regions) {

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

	<td><% $diocese->name %></td>

	<td><% $diocese->director->first." ".$diocese->director->last %></td>

	<td><% $diocese->director->email %></td>

	<td><% $diocese->director->phone %></td>

	<td><% $diocese->director->hotel %></td>
	
	</tr>

%	}	

</table>




