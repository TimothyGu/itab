<%args>
	$tourn
	$circuit
	$session
</%args>
<%init>

	my $filename = "dio-contacts-".$circuit->short_name."-tourn".$tourn->id."-".$session->id;
	my $filepath = $Tab::file_root."/tmp/".$filename;

	my $now = DateTime->now;	
	$now->set_time_zone($circuit->timezone);
	
	my $garbage = `rm -f $filepath.*`;
	open (TEXOUT, ">$filepath.csv");

	foreach my $diocese (sort {$a->name cmp $b->name} $tourn->regions) { 

		print TEXOUT "\"".&Tab::texify($diocese->name)."\",\"";
		print TEXOUT &Tab::texify($diocese->director->first)." ".&Tab::texify($diocese->director->last)."\",\"";
		print TEXOUT &Tab::texify($diocese->director->phone)."\",\"";
		print TEXOUT &Tab::texify($diocese->director->hotel)."\"\r\n";
	}

#	`rm -f $filepath.tex $filepath.log $filepath.dvi $filepath.aux`;

	$m->redirect("$Tab::url_prefix/tmp/".$filename.".csv");

</%init>
