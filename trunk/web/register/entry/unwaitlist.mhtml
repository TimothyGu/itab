<%args> 
	$entry_id
	$notify => undef
	$account
	$tourn
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	if ($notify) { 

		$m->comp("/funclib/unwaitlist_entry.mas", entry => $entry, account => $account, tourn => $tourn);
		my $msg = "Admitted ".$entry->code." off waitlist.  Coach notified";
		$m->redirect("edit.mhtml?entry_id=$entry_id&msg=$msg");

	} else {

		$entry->waitlist("");
		$entry->update;
		my $msg = "Entry ". $entry->code ." admitted off the waitlist";
		$m->redirect("edit.mhtml?entry_id=$entry_id&msg=$msg");

	}
		
</%init>

