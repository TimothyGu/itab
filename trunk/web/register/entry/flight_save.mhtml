<%args>
	$entry_id
	$flight => undef
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);
	$entry->flight($flight);
	$entry->update;

	my $msg = "Entry ".$entry->code." will be scheduled into flight $flight where possible";

	$m->redirect("edit.mhtml?entry_id=$entry_id&msg=$msg");

</%init>
