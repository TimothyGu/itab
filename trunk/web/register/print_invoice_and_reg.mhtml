<%args>
	$name => "RECEIPT";
	$circuit
	$school_id
	$session
	$tourn
	$account
	$debug => undef
</%args>
<%init>

	my $now = DateTime->now;

	my $school = Tab::School->retrieve($school_id);

	my $filename = $Tab::file_root."/tmp/registration-and-invoice-".$school_id."-".$session->id;
	
	my $garbage = `rm -f $filename.*`;

	$name =~ tr/[a-z]/[A-Z]/;
	
	open (TEXOUT, ">$filename.tex");

	print TEXOUT <<"EOF";
\\documentclass[10pt]{letter}
\\usepackage{fullpage}
\\usepackage{helvet}
\\usepackage{colortbl}
\\usepackage{fancyhdr,lastpage}
\\usepackage[hmargin=.8in,vmargin=1in]{geometry}

\\pagestyle{fancy}
\\fancyhf{} % clear all header and footer fields
\\fancyfoot[R]{\\footnotesize Page \\thepage\\ of \\pageref{LastPage}}
\\fancyfoot[L]{\\footnotesize Printed by the Tabroom.com free online tournament management system}
\\renewcommand{\\headrulewidth}{0pt}
\\renewcommand{\\footrulewidth}{0pt}

\\renewcommand{\\familydefault}{\\sfdefault}
\\renewcommand{\\arraystretch}{1.4}

\\addtolength{\\textwidth}{1in}
\\addtolength{\\hoffset}{-.1in}

\\begin{document}
\\small

EOF

    print TEXOUT "\\begin{tabular}{p{.75in}p{2.25in}p{.75in}p{2.25in}} \n  ";

    print TEXOUT "{\\bf Circuit:} & ".&Tab::texify($circuit->name)." & ";
    print TEXOUT "{\\bf Tournament:} & ".&Tab::texify(substr($tourn->name,0,30))." \\\\ \n ";

	my $school_code = "(".&Tab::texify($school->code).")" if $school->code;

    print TEXOUT "{\\bf School:} & $school_code ". &Tab::texify($school->name);

    print TEXOUT " (".&Tab::texify($school->chapter->state).")" if $school->chapter && $school->chapter->state;
    print TEXOUT " & ";
    print TEXOUT "{\\bf Printed:} & ". $now->mdy('/')." ".$now->hour_12.":".$now->strftime('%M')." ".$now->strftime('%p');
    print TEXOUT " \\\\ \n";
    print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\newline\n";
    close TEXOUT;

    $m->comp("/funclib/registration_print_noassigns.mas", 
        school_id => $school->id, 
        filename => $filename);

    $m->comp("/funclib/judges_print.mas", 
        school_id => $school->id, 
        filename => $filename, 
        circuit => $circuit, 
       noassigns => "YooHoo");

    $m->comp("/funclib/housing_print.mas", 
        school_id => $school->id, 
        filename => $filename, 
        circuit => $circuit) if $tourn->method->housing;

	open (TEXOUT, ">>$filename.tex");
	print TEXOUT "\n \\newpage\n";
	close TEXOUT;

	$m->comp("/funclib/fees_print.mas", 
		school_id => $school_id, 
		filename => $filename, 
		circuit => $circuit, 
		name => $name);

    my $label = "Concessions";
    $label = $tourn->method->concession_name if $tourn->method->concession_name;

    $m->comp("/funclib/concessions_print.mas",
            school_id => $school_id,
            label => $label,
            filename => $filename,
            circuit => $circuit) if $school->concession_total;

	open (TEXOUT, ">>$filename.tex");
	print TEXOUT "\\end{document}\n";
	close TEXOUT;

$garbage = `cd $Tab::file_root/tmp; $Tab::latex_path $filename.tex; $Tab::latex_path $filename.tex; $Tab::dvipdfm_path $filename.dvi`;

#`rm -f $filename.tex $filename.log $filename.dvi $filename.aux` unless $debug;

$m->redirect("$Tab::url_prefix/tmp/registration-and-invoice-$school_id-".$session->id.".pdf");

</%init>

<div id="content">

<p><% $filename %></p>
