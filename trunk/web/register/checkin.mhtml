<%args>
	$tourn
	$session
	$all => undef
</%args>
<%init>

	my @here = sort {$a->name cmp $b->name} $tourn->schools(registered => 1);
	my @not_here = sort {$a->name cmp $b->name} $tourn->schools(registered => 0);

	my $switch;

</%init>

	<h2>Fast checkin</h2>

	<div id="halfpage" style="float: left;">

		
		<h3>Not Checked In:</h3>

		<table cellpadding="4" cellspacing="1" width="100%">

%			if (@not_here) { 

				<tr class="liblrow">
					<td colspan="5" align="right" class="smaller">
						<form action="checkin.mhtml" method="post">
						<input type="hidden" name="all" value="ayuh">
						<input type="submit" class="skinny" value="Check All">
						</form>
					</td>
				</tr>

%			}

			<form action="checkin_save.mhtml" method="post">

%			foreach my $school (@not_here) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
					
					<td width="210px" class="smaller">
						<a href="registration.mhtml?school_id=<% $school->id %>">
						<% $school->name %>
						</a>
					</td>

					<td class="smaller">
						<% $school->code %>
					</td>

					<td class="smaller">
						<% $school->chapter->state %>
					</td>

					<td class="smaller">
						$<input type="text" size="5" name="paid_<% $school->id %>" value="<% $school->paid_amount %>">
					</td>

					<td>
						<input type="checkbox" name="<% $school->id %>" value="1" <% ($all) ? "checked" : "" %>>
					</td>

				</tr>

%			}

			<tr class="liblrow">
				
				<td colspan="5" class="right">
					<input type="submit" class="blue" value="   Save Changes   ">
				</td>

			</tr>

		</table>

	</div>

	<div id="halfpage" style="float: right;">

		<h3>Checked In:</h3>
	
		<table cellpadding="4" cellspacing="1" width="100%">

%			foreach my $school (@here) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
					
					<td width="210px" class="smaller">
						<a href="registration.mhtml?school_id=<% $school->id %>">
						<% $school->name %>
						</a>
					</td>

					<td class="smaller">
						<% $school->code %>
					</td>

					<td class="smaller">
						<% $school->chapter->state %>
					</td>

					<td class="smaller">
						$<input type="text" size="5" name="paid_<% $school->id %>" value="<% $school->paid_amount %>">
					</td>

					<td>
						<input type="checkbox" name="<% $school->id %>" value="1" <% ($school->registered) ? "checked" : "" %>>
					</td>

				</tr>

%			}

%			if (@here) { 

				<tr class="liblrow">
				
					<td colspan="5" class="right">
						<input type="submit" class="blue" value="   Save Changes   ">
						</form>
					</td>

				</tr>

%			}

		</table>

	</div>


	<br style="clear: both;">
