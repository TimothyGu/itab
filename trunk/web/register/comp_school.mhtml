<%args>
	$comp_id
	$school_id
</%args>
<%init>

	my $comp = Tab::Comp->retrieve($comp_id);
	my $school = Tab::School->retrieve($school_id);

	$comp->school($school_id);
	$comp->update;

	my $student = $comp->student;
	$student->chapter($school->chapter->id);
	$student->update;

	if ($comp->partner) {
		my $partner = $comp->partner;
		$partner->chapter($school->chapter->id);
		$partner->update;
	}

	my $msg = "School change saved";

	$m->redirect("comp_edit.mhtml?comp_id=$comp_id&msg=$msg");

</%init>
