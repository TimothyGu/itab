<%args>
	$entry_id
	$school_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);
	my $school = Tab::School->retrieve($school_id);

	$entry->school($school_id);
	$entry->update;

	my $student = $entry->student;
	$student->chapter($school->chapter->id);
	$student->update;

	if ($entry->partner) {
		my $partner = $entry->partner;
		$partner->chapter($school->chapter->id);
		$partner->update;
	}

	my $msg = "School change saved";

	$m->redirect("entry/edit.mhtml?entry_id=$entry_id&msg=$msg");

</%init>
