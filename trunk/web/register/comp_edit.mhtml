		my @comps = Tab::Comp->search( code => $code, tournament => $tourn->id );

		$err = "No competitors found with speaker code $code" unless @comps;
		$m->redirect("$Tab::url_prefix/register/comp_edit.mhtml?err=$err") unless @comps;

