<%args>
	$region
	$tourn => undef
	$whoami => undef
</%args>
<%init>

	my @regions = $m->comp("/funclib/tourn_regions.mas", tourn => $tourn);

</%init>

%	if ($tourn) { 

		<div>

			<span class="inline">
%			if ($region) { 
				<h3><% $region->arch ? "Archdiocese" : "Diocese" %> of <% $region->name %></h3>
%			} else { 
				<h4>Choose a diocese</h4>
%			} 
			</span>
			
			<span class="right inline" style="margin-top: 10px;">

%				if ($r->uri =~ "tourn_entries.mhtml") { 
					<form action="/register/region/tourn_entries.mhtml" method="post">
%				} elsif ($r->uri =~ "tourn_judges.mhtml") { 
					<form action="/register/region/tourn_judges.mhtml" method="post">
%				} elsif ($r->uri =~ "invoice.mhtml") { 
					<form action="/register/region/invoice.mhtml" method="post">
%				} else { 
					<form action="/register/region/tourn.mhtml" method="post">
%				} 

				<select class="fixed" name="region_id" <% ($region) ? "" : "size=\"25\""%> onchange='this.form.submit()'>

%					foreach my $oregion (@regions) { 
%						my $code = substr($oregion->code, 0, 4);
%						if ($code) { 	
%			    			foreach ( length($code) .. 6) {
%			   	   	       		$code .= "&nbsp;";
%		   	   	    	}
%						}

						<option value="<% $oregion->id %>" <%  ($region && $region->id == $oregion->id) ? "selected" : ""  %>>
							<% $code %>
							<% substr($oregion->name,0,25) %>
						</option>
%					}

				</select>

				<noscript>
					<span class="smallspan">	
						<input type="submit" value="Show">
					</span>
				</noscript>

				</form>
			</span>

		</div>

%		if ($region) { 

			<ul id="tabnav">

				<li <% ($whoami eq "summary") ? "class=\"selected\"" : "" %>>
					<a href="/register/region/tourn.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Summary</a>
				</li>

				<li <% ($whoami eq "schools") ? "class=\"selected\"" : "" %>>
					<a href="/register/region/tourn_schools.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Schools</a>
				</li>

				<li <% ($whoami eq "entries") ? "class=\"selected\"" : "" %>>
					<a href="/register/region/tourn_entries.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Entries</a>
				</li>

				<li <% ($whoami eq "judges") ? "class=\"selected\"" : "" %>>
					<a href="/register/region/tourn_judges.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Judges</a>
				</li>

			</ul>
%		}

%	} else {

		<ul id="tabnav">

			<li <% ($whoami eq "tourn") ? "class=\"selected\"" : "" %>>
				<a href="/register/region/tournaments.mhtml?region_id=<% $region->id %>">Tournaments</a>
			</li>

			<li <% ($whoami eq "schools") ? "class=\"selected\"" : "" %>>
				<a href="/register/region/schools.mhtml?region_id=<% $region->id %>">Member Schools</a>
			</li>

			<li <% ($whoami eq "access") ? "class=\"selected\"" : "" %>>
				<a href="/register/region/access.mhtml?region_id=<% $region->id %>">Diocese Access</a>
			</li>

			<li <% ($whoami eq "results") ? "class=\"selected\"" : "" %>>
				<a href="/register/region/results.mhtml?region_id=<% $region->id %>">Past Results</a>
			</li>

		</ul>

%	} 
