<%args>
	$tourn
	$entry_id => undef
	$err => undef
	$code => undef
	$circuit
</%args>
<%init>

	my $entry;

	if ($entry_id) { 
		$entry = Tab::Entry->retrieve($entry_id);
	}
	
	if ($code) { 
	
		my @entries = Tab::Entry->search( code => $code, tournament => $tourn->id );

		$err = "No competitors found with speaker code $code" unless @entries;
		$m->redirect("$Tab::url_prefix/register/entry/edit.mhtml?err=$err") unless @entries;

		$m->redirect("$Tab::url_prefix/register/choose_entry.mhtml?code=$code") if scalar @entries > 1;

		$entry = $entries[0];
		$entry_id = $entry->id;	
	}
	
</%init>

% if ($entry) {

%	my $switch = 1;

%	unless ($entry->event->type eq "debate") { 

	<table width="100%" cellpadding="0" cellspacing="0">

	<tr>
		<td width="100%">
		<h3>Panel Assignments: for <% $entry->id %> </h3>	
	</td>

		<td>
			<form action="entry/edit.mhtml" method="post">
			<input type="hidden" name="entry_id" value="<% $entry->id %>">
			<input type="submit" value=" Return to Entry ">
			</form>
		</td>

%  		my @rounds = $entry->event->rounds;

%  		@rounds = sort { $a->name <=> $b->name } @rounds;
%  		my @panels = $entry->panels;

	<table cellpadding="5" width="100%" cellspacing="0"> 

% 	foreach my $round (@rounds) { 
% 		my $panel;

% 		foreach my $pan (@panels) {  
%   		my $pan_round = $pan->round;
%   		$panel = $pan if $pan_round->id == $round->id;
% 		}

%  		if ($panel) {
%  			my $room = $panel->room;
%  			my $start = $panel->round->timeslot->start;
%			$start->set_time_zone($circuit->timezone);
%  			my @judges = $panel->judges;
%			my @ballots = Tab::Ballot->search( entry => $entry_id, panel => $panel->id); 

			<tr <% ($switch++ % 2) ? "class=\"evenrow\"" : "class=\"oddrow\"" %>>	
				<td>Rnd <% $round->name %></td>
				<td><a href="<%$Tab::url_prefix%>/panel/panel_view.mhtml?panel_id=<% $panel->id %>"><% $panel->letter %></a></td>
				<td><% $start->hour_12.":".$start->strftime("%M")." ".$start->strftime("%p") %></td>
				<td><% ($room) ? $room->name : "" %> </td>

				<td> 

% 				foreach my $judge (@judges) { 	
					J<% $judge->code %>	
% 				}	
				</td>

		<td>


%		my $countmenot;

% 		foreach my $ballot (@ballots) { 

%			$countmenot++ if $ballot->countmenot;


%			if ($ballot->judge) { 
				<a 
					<% ($ballot->countmenot) ? "style=\"text-decoration: line-through; color: green;\"" : "" %>
					href="<% $Tab::url_prefix %>/tabbing/rank.mhtml?timeslot_id=<% $ballot->panel->round->timeslot->id %>&judge_code=<% $ballot->judge->code %>&audit=Rank"><% $ballot->real_rank %></a>
				<% ($ballot->tv) ? " TV " : "" %>
%			}

% 		}

		</td>

			<td><% $entry->speakerorder($panel) %></td>

			<td>(<a href="<% $Tab::url_prefix%>/panel/entry/edit.mhtml?entry_id=<% $entry->id %>&round_id=<% $round->id %>">Move</a>)</td>

			<td align="right">
				<form action="dq_ballots.mhtml">
					<input type="hidden" name="panel_id" value="<% $panel->id%>">
					<input type="hidden" name="entry_id" value="<% $entry->id%>">
					<input type="hidden" name="undo" value="<% $countmenot %>">
					<input type="submit"  value="  <% ($countmenot) ? "Re-qualify" : "Disqualify" %> These Ballots  ">
				</form>
			</td>

		</tr>

% 	} } } }

</table>
