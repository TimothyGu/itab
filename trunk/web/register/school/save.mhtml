<%args>
	$account
	$school_id
	$register
	$paid => undef
	$contact_number => undef
	$contact_name => undef
	$name
	$code => undef
	$region_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id); 

	$school->name($name);
	$school->paid($paid);
	$school->contact_number($contact_number);
	$school->contact_name($contact_name);
	$school->code($code);
	$school->update;

	my $msg = "School changes saved";
	$m->redirect($Tab::url_prefix."/register/school/edit.mhtml?school_id=$school_id&msg=$msg");

</%init>

