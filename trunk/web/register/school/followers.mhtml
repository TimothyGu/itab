<%args>
	$tourn
	$account
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

</%init>

	<& /register/menubar.mas, school => $school, whoami => "follower", tourn => $tourn &>

	<div class="left huge">

		<h4>Live updates</h4>

		<p class="explain">
			The following users recieve emailed pairings and results for the entire school in one message.  Tap to remove.
		</p>

%		foreach my $follower ($school->followers) { 

			<div class="grey block">

				<a class="plain block padno" href="unfollow.mhtml?school_id=<% $school->id %>&account_id=<% $follower->id %>">
				<span class="halfspan">
					<% $follower->first." ".$follower->last %>
				</span>

				<span class="medbigspan padmore">
					<% $follower->email %>
				</span>

				<span class="medspan padmore">
					<% $follower->phone %>
				</span>
				</a>

				<br />

			</div>
					
%		}

		<br style="clear: both;">


		<h5>Add follower</h5>

			<form action="follow.mhtml" method="post">
			<input type="hidden" name="school_id" value="<% $school->id %>">
		
			<div class="grey block">
					
				<span class="biggerspan padmore left">
					<input type="text"  name="email" size="50" placeholder="Email of Tabroom account">
				</span>

				<span class="rightalign" style="float: right;">
					<input type="submit" value="Add Follower">
				</span>

				<br />
				&nbsp;

			</div>

			</form>

	</div>

