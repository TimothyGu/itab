<%args>
	$school_id
	$session
	$tourn
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

    my $name = $school->name;
    $name =~ s/[^\w]//g;

    my $filename = "concessions-".$name."-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`;

    $m->comp("/funclib/printout.mas", filename => $filename, head => 1 );

    my $now = DateTime->now;    

    $now->set_time_zone($tourn->tz);
	
	$m->comp("/register/school/print/concessions.mas", school => $school, filename => $filename  );

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );
			
</%init>
