<%args>
	$school_id
	$state => undef
	$country => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

	my $err = "School not found";
	$m->redirect("/register/index.mhtml?err=$err") unless $school;

	my $chapter = $school->chapter;

	$err = "School was not registered by normal means; locale cannot be set";
	$m->redirect("/register/school/edit.mhtml?school_id=$school_id&err=$err") unless $chapter;

	$chapter->country($country);
	$chapter->state($state);
	$chapter->update;

	$m->redirect("/register/school/edit.mhtml?school_id=$school_id");


</%init>
