<%args>
	$last_name
	$tourn
</%args>
<%init>

	$last_name = "%".$last_name."%";

	my @judges = Tab::Judge->search_last_name($tourn->id, $last_name );

	if (scalar @judges == 1) { 

		$m->redirect("$Tab::url_prefix/register/judge_edit.mhtml?judge_id=".$judges[0]->id);

	}

	my $switch;

</%init>

	<h3>Judges with last name <% $last_name %></h3>

	<div class="left huge">

		<table cellpadding="6" cellspacing="1" width="100%">

%			foreach my $judge (@judges) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				
					<th>
						<a href="<% $Tab::url_prefix %>/register/judge_edit.mhtml?judge_id=<% $judge->id %>"> 
							<% $judge->code.": ".$judge->first." ".$judge->last %>
						</a>
					</th> 
					
					<td>
						<% $judge->school->name %>
					</td> 
					
					<td>
						<% $judge->judge_group->name %>
					</td>
					
				</tr>

% 			}

		</table>

	</div>

