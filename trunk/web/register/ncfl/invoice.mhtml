<%args>
	$tourn
	$diocese_id
</%args>
<%init>

	my $diocese = Tab::Region->retrieve($diocese_id);

	my ($total, $payments, $feline_ref) = $m->comp("/funclib/fees.mas", id => $diocese_id, tourn_id => $tourn->id);

	my @felines = @{$feline_ref};

</%init>



<table cellpadding="0" cellspacing="0">
<form action="dioceses.mhtml" method="post">
<input type="hidden" name="id" value="<% $diocese_id %>">
<td width="100%">
<h3>Charges and payments for <% $diocese->name %></h3>
</td>
<td>
<input  type="submit" value="Return to <% $diocese->name %>">
</td>
</tr>
</form>
</table>


<table cellpadding="5" cellspacing="0" width="100%">

<tr>
<td width="85%" valign="center">

<table cellpadding="6" cellspacing="0" width="100%">

%	my $switch; 
	
%	foreach my $line (@felines) { 

	<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
		<td><%$line->{'name'} %></td>
		<td>$<% sprintf ("%.2f", $line->{'fee'}) %></td>

		<td>
%	if ($line->{'fine_id'}) {
		<form action="fine_forgive.mas" method="post">
		<input type="hidden" value="<% sprintf ("%.2f", $line->{'fine_id'}) %>" name="fine_id">
		<input  type="submit" value=" Remove ">
%	}
		</td>
		</form>

	</tr>

%	$switch++;
%	}


<tr>
	<td colspan="3"><h4></h4></td>
</tr>

<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	<th>Total Owed</th>
	<th>$<% sprintf ("%.2f", $total) %></th>
	<td></td>
</tr>

<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
	<th>Paid So Far</th>
	<th>$<% sprintf ("%.2f", $payments) %></th>
	<td></td>
</tr>

<tr <% ($total + $payments > 0) ? "class=\"redrow\"" : "class=\"bluerow\"" %>>
	<th>Still Owed</th>
	<th>$<% sprintf ("%.2f", $total + $payments) %></th>
	<td></td>
</tr>



</table>

</td><td valign="top">

<table cellpadding="5" cellspacing="0" border="0">

<tr><td colspan="2"><h4>Record a payment:</h4></td></tr>

<tr>
	<td colspan="2">
	</td>
</tr>


<tr>
	<th>
	<form action="fine_save.mas" method="post">
	<input type="hidden" name="id" value="<% $diocese_id %>">
	<input type="hidden" name="reason" value="Payment">
	Amount:</th>
	<td>
	$<input type="text" name="amount" size="11">
	</td>
</tr>

<tr>
	<td align="center" colspan="2">
	<input  type="submit" value="Add Payment">
	</form>
	</td>
</tr>



<tr><td colspan="2"><h4 style="padding-top: 25px;">Add a fine:</h4></td></tr>

<tr>
	<td colspan="2">
	Use negative values for credits
	</td>
</tr>

<form action="fine_save.mas" method="post">
<input type="hidden" name="id" value="<% $diocese_id %>">

<tr>
	<th>Reason:</th>
	<td>
	<input type="text" name="reason" size="14">
	</td>
</tr>

<tr>
	<th>Amount:</th>
	<td>
	$<input type="text" name="amount" size="11">
	</td>
</tr>

<tr>
	<td align="center" colspan="2">
	<input  type="submit" value="  Add Fine  ">
	</td>
	</tr>
</form>


</table>

</td></tr>

</table>


