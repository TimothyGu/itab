<%init>

	unless ($session && $session->account) { 
		my $msg = "You no longer have an active login session.  Please log in again";
		$m->redirect("$Tab::url_prefix/index/index.mhtml?msg=$msg");
	}

	my $account = $session->account;
	my $tourn   = $session->tournament;
	my $league = $session->league;

	my $flighted++ if ($tourn && $tourn->method && $tourn->method->double_entry eq "flighted");

	my $now = DateTime->now;

	return if $session->limited;
	return if $session->entry;

</%init>

