<%args>
	$err => undef
	$schedule_id => undef
	$circuit
	$account
</%args>
<%init>

	my $schedule = Tab::Schedule->retrieve($schedule_id) if $schedule_id;

	my $schedule_start = $schedule->start if $schedule;
	$schedule_start->set_time_zone($circuit->timezone) if $schedule;
	my $schedule_end = $schedule->end if $schedule;
	$schedule_end->set_time_zone($circuit->timezone) if $schedule;

	my $switch;

</%init>

	<table cellpadding="1" width="100%">

		<tr>

			<td width="100%">
				<h3><% ($schedule) ? $schedule->name : "Create a new non-tournament scheduled event" %></h3>
			</td>

			<td>
				<form action="schedule.mhtml" method="post">
				<input class="grey" type="submit" value="Return to Schedule">
				</form>
			</td>

		</tr>

	</table>

	<table cellpadding="5" width="100%">

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<td>Name:</td>
	
			<td colspan="3" align="right">
				<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="info" action="schedule_save.mhtml" method="post">
				<input type="hidden" name="schedule_id" value="<% $schedule_id %>">
				<input type="text" name="name" size="35" value="<% ($schedule) ? $schedule->name : "" %>">
			</td>

		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Location:</td>
			<td colspan="3" align="right">
			<input type="text" name="location" size="35" value="<% ($schedule) ? $schedule->location : "" %>"></td>
		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Start:</td>
			<td align="right">MM: <input type="text" size="3" name="start_month" 
				value="<% ($schedule) ? $schedule_start->month : "" %>"></td>
			<td align="right">DD: <input type="text" size="3" name="start_day" 
				value="<% ($schedule) ? $schedule_start->day : "" %>"></td>
			<td align="right">YYYY: <input type="text" size="5" name="start_year" 
				value="<% ($schedule) ? $schedule_start->year : "" %>"></td>
		</tr>
		
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<td>End:</td>

			<td align="right">MM: <input type="text" size="3" name="end_month" 
				value="<% ($schedule) ? $schedule_end->month : "" %>"></td>
			<td align="right">DD: <input type="text" size="3" name="end_day" 
				value="<% ($schedule) ? $schedule_end->day : "" %>"></td>
			<td align="right">YYYY: <input type="text" size="5" name="end_year" 
				value="<% ($schedule) ? $schedule_end->year : "" %>"></td>
		</tr>
		
		
% 		if ($schedule && $schedule->file) { 

			<tr>
				<td>Attachment:</td>
				<td align="right" colspan="3">
					(<a href="<%$Tab::url_prefix%>/files/<% $circuit->id %>/schedule/<% $schedule->id %>/<%$schedule->file%>">
					<% $schedule->file %></a>)
				</td>
			</tr>
	
% 		}

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Upload Attachment:</td>
			<td align="right" colspan="3">
				<input type="file" name="info" size="10">
			</td>
		</tr>


		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			<td>Description:</td>
		</tr>
		
		<tr>
			<td colspan="5" class="center">
				<textarea rows="10" cols="55" name="description"><% ($schedule) ? $schedule->description : "" %></textarea>
			</td>
		</tr>
		
		<tr class="liblrow">
			<td colspan="5" class="right">
				<input  type="submit" value="Save Schedule Item">
				</form>
			</td>
		</tr>

	</table>

