<%args>
	$coach_id
	$chapter_id
	$account
</%args>
<%init>
	my $err;
	my $coach = Tab::Account->retrieve($coach_id);

	my @cs = Tab::ChapterAccess->search( chapter => $chapter_id, account => $coach_id );

	# Can't be the only one left 

	my @all_coaches = Tab::ChapterAccess->search( chapter => $chapter_id );

	unless ((scalar @all_coaches) > 1) { 
		$m->print("You may not delete the last coach to have access to that school");
		$m->abort;
	}

	foreach (@cs) { 
		$_->delete;
	}

	$m->redirect("$Tab::url_prefix/circuit/chapter_edit.mhtml?err=$err&chapter_id=$chapter_id");

</%init>
