<%args> 
	$account
	$circuit_id
	$tourn_id
</%args> 
<%init>

	my @circuit_tourns = Tab::TournCircuit->search(
		tourn => $tourn_id,
		circuit => $circuit_id
	);

	foreach my $ct (@circuit_tourns) { 
		$ct->delete;
	}

	my $tourn = Tab::Tourn->retrieve($tourn_id);

	my $msg = "Begone, foul demon!  The tournament ".$tourn->name." has been removed from your circuit.";

	$m->redirect("/circuit/approvals.mhtml?circuit_id=".$circuit_id."&msg=$msg");

</%init>
