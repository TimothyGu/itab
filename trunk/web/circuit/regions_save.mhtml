<%args>
	$circuit
</%args>
<%init>


	foreach my $region ($circuit->regions) { 

		$region->code($ARGS{"code_".$region->id});
		$region->quota($ARGS{"quota_".$region->id});
		$region->update;

	}

	my $msg = "Diocese data saved" if $circuit->diocese_based;
	$msg = "Region data saved" if $circuit->region_based;

	$m->redirect("/circuit/regions.mhtml?circuit_id=".$circuit->id."&msg=$msg");

</%init>
